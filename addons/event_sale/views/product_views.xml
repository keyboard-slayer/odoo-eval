<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_template_form_view_invoice_policy_inherit_event_sale" model="ir.ui.view">
        <field name="name">product.template.inherit.event.sale.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="invoice_policy" position="after">
                <field name="service_tracking" invisible="type != 'service' or not sale_ok"/>
            </field>
        </field>
    </record>

</odoo>