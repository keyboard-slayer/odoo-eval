<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_restaurant.Table" owl="1">
        <div class="table position-absolute d-flex flex-column align-items-center justify-content-between rounded cursor-pointer" t-on-click.stop="(ev) => props.onClick(props.table, ev)" t-att-style="style">
            <span class="table-cover position-absolute d-block bottom-0 start-0 end-0 bg-dark bg-opacity-25 z-index-0" t-att-class="{ full: fill >= 1 }" t-att-style="`height: ${Math.ceil(fill * 100)}%`"></span>
            <span t-att-class="orderCountClass" t-attf-class="{{ orderCount === 0 ? 'opacity-0' : ''}}">
                <t t-esc="orderCount" />
            </span>
            <span class="label fw-bolder fs-4 z-index-1">
                <t t-esc="props.table.name" />
            </span>
            <span class="table-seats mb-1 px-2 rounded text-bg-dark bg-opacity-25 fs-4 z-index-1">
                <t t-esc="customerCountDisplay" />
            </span>
        </div>
    </t>

</templates>
