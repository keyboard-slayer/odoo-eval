<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_in_withholding_entry_form_action" model="ir.actions.act_window">
        <field name="name">Create TDS Entry</field>
        <field name="res_model">l10n_in.account.withhold</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="tds_entry_view_form" model="ir.ui.view">
        <field name="name">l10n_in.account.withhold.view.form</field>
        <field name="model">l10n_in.account.withhold</field>
        <field name="arch" type="xml">
            <form>
                <field name="display_null_pan_warning" invisible="1"/>
                <div class="alert alert-warning text-center" role="alert" invisible="not display_null_pan_warning">
                    It is advisable to apply TDS at the higher rate as the partner has no PAN.
                </div>
                <sheet>
                    <field name="related_move_id" invisible="1"/>
                    <field name="related_payment_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="type_name" invisible="1"/>
                    <group>
                        <group id="header_left_group">
                            <field name="date"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group id="header_right_group">
                            <field name="journal_id" domain="[('company_id', '=', company_id), ('type', '=', 'general')]"/>
                            <field name="reference"/>
                            <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}" invisible="not related_payment_id"/>
                            <field name="amount" string="Untaxed Amount" widget="monetary" options="{'currency_field': 'currency_id'}" invisible="not related_move_id"/>
                            <field name="move_amount_total" invisible="not related_move_id" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Withholding Tax Details">
                            <field name="withhold_line_ids">
                                <tree editable="bottom">
                                    <field name="currency_id" column_invisible="True"/>
                                    <field name="tds_group_id" column_invisible="True"/>
                                    <field name="type_tax_use" column_invisible="True"/>
                                    <field name="sequence" widget="handle"/>
                                    <field name="tax_id" domain="[('tax_group_id', '=', tds_group_id), ('type_tax_use', '=', type_tax_use)]" required="1"/>
                                    <field name="base" sum="Total Base" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    <field name="amount" sum="Total Amount" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Confirm" type="object" name="action_create_and_post_withhold" class="btn-primary"/>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
