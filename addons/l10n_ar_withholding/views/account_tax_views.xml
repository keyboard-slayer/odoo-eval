<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_tax_form" model="ir.ui.view">
        <field name="name">account.tax.form</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <field name="type_tax_use" position="after">
                <field name="l10n_ar_withholding_payment_type" invisible="type_tax_use != 'none' or country_code != 'AR'" string="Withholding"/>
                <field name="l10n_ar_tax_type" invisible="not l10n_ar_withholding_payment_type" required="l10n_ar_withholding_payment_type" string="Withholding Type"/>
                <field name="l10n_ar_scale_id" string="Scale" invisible="l10n_ar_tax_type != 'earnings_withholding_scale'" required="l10n_ar_tax_type == 'earnings_withholding_scale'"/>
                <field name="l10n_ar_code" invisible="l10n_ar_tax_type not in ['earnings_withholding', 'earnings_withholding_scale']" required="l10n_ar_tax_type in ['earnings_withholding', 'earnings_withholding_scale']" string="Code"/>
                <field name="l10n_ar_state_id" invisible="l10n_ar_tax_type not in ['iibb_withholding_untaxed', 'iibb_withholding_total']" required="l10n_ar_tax_type in ['iibb_withholding_untaxed', 'iibb_withholding_total']" string="State"/>
                <field name="l10n_ar_non_taxable_amount" invisible="country_code != 'AR' or not l10n_ar_withholding_payment_type" string="Non-taxable Amount"/>
                <field name="l10n_ar_withholding_minimum_threshold" invisible="country_code != 'AR' or not l10n_ar_withholding_payment_type" string="Withholding Minimum Threshold"/>
                <field name="l10n_ar_withholding_sequence_id" context="{'default_name': name}" invisible="l10n_ar_withholding_payment_type != 'supplier' or amount_type != 'group'" string="Sequence"/>
            </field>
        </field>
    </record>
</odoo>
