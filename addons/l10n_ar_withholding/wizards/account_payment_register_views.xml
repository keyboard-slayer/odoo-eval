<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_register_form" model="ir.ui.view">
        <field name="name">account.payment.register.form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="l10n_account_withholding.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <group name="withholding_net_amount" position="replace">
                <group name="withholding_net_amount" class="mt-2" invisible="not can_edit_wizard or (can_group_payments and not group_payment)">
                    <label for="l10n_account_withholding_net_amount" string="Net Amount" invisible="l10n_latam_move_check_ids or l10n_latam_new_check_ids"/>
                    <label for="l10n_account_withholding_net_amount" string="Check amount" invisible="not l10n_latam_move_check_ids and not l10n_latam_new_check_ids"/>
                    <field name="l10n_account_withholding_net_amount" nolabel="1" />
                    <field name="l10n_ar_adjustment_warning" invisible="True"/>
                    <p colspan="2" invisible="not l10n_ar_adjustment_warning" class="alert alert-warning" role="alert">
                            Adjust total amount or withholdings amount so that the check amount is the correct one.
                    </p>
                </group>
            </group>
        </field>
    </record>
</odoo>
