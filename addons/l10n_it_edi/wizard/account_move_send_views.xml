<odoo>
    <data>
        <record model="ir.ui.view" id="account_move_send_inherit_l10n_it_edi">
            <field name="name">account.move.send.form.inherit.l10n_it_edi</field>
            <field name="model">account.move.send</field>
            <field name="inherit_id" ref="account.account_move_send_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='warnings']" position="inside">
                    <field name="l10n_it_edi_readonly" invisible="1"/>
                    <field name="l10n_it_edi_enable_send" invisible="1"/>
                    <span attrs="{'invisible': [('l10n_it_edi_warning_message', '=', False)]}">
                        <b>Tax Agency (Italy)</b>
                    </span>
                    <div class="alert alert-warning mb-8" role="alert"
                        attrs="{'invisible': [('l10n_it_edi_warning_message', '=', False)]}">
                        <field name="l10n_it_edi_warning_message"/>
                    </div>
                </xpath>
                <xpath expr="//div[@name='option_send_mail']" position='after'>
                    <div name="option_l10n_it_edi" attrs="{'invisible': [('l10n_it_edi_enable_send', '=', False)]}">
                        <field name="l10n_it_edi_checkbox_send" attrs="{'readonly': [('l10n_it_edi_readonly', '=', True)]}"/>
                        <b><label for="l10n_it_edi_checkbox_send"/></b>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
