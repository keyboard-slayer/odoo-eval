<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">l10n.ke.tremol.inherit.res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='account_vendor_bills']" position="after">
                <div invisible="country_code != 'KE'">
                    <block title="Kenya ETIMS Integration" id="l10n_ke_oscu_details">
                        <setting string="OSCU Settings" help="Oscu requires these details yep whatever.">
                            <div class="content-group">
                                <div class="mt8">
                                    <button name="open_l10n_ke_edi_oscu_branch_list" icon="oi-arrow-right" type="object" string="Configure your branches" class="btn-link"/>
                                </div>
                            </div>
                        </setting>
                    </block>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
