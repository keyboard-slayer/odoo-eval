<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_template_form_view_inherit_account_l10n_ke_edi_oscu" model="ir.ui.view">
            <field name="name">product.template.form.inherit.account.l10n.ke.edi.oscu</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="account.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='invoicing']//group[@name='accounting']" position="inside">
                    <group name="kra_oscu" string="KRA OSCU Details" invisible="product_variant_count &gt; 1 and not is_product_variant">
                        <field name="l10n_ke_packaging_unit_id"/>
                        <field name="l10n_ke_packaging_quantity"/>
                        <field name="l10n_ke_quantity_unit_id"/>
                        <field name="l10n_ke_origin_country_id"/>
                        <field name="l10n_ke_product_type_code"/>
                        <field name="l10n_ke_is_insurance_applicable"/>
                        <field name="l10n_ke_tax_type_code"/>
                        <field name="l10n_ke_item_code"/>
                        <div class="cell"/>
                        <button name="action_l10n_ke_oscu_save_item" string="Save Item" type="object"/>
                        <div class="cell"/>
                        <button name="action_l10n_ke_oscu_save_stock_master" string="Save Stock Master" type="object"/>
                    </group>
                </xpath>
            </field>
        </record>
        <record id="product_product_form__view_inherit_l10n_ke_edi_oscu" model="ir.ui.view">
            <field name="name">product.product.form.inherit.l10n.ke.edi.oscu</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <group name="kra_oscu" string="KRA OSCU Details">
                        <field name="l10n_ke_packaging_unit_id"/>
                        <field name="l10n_ke_packaging_quantity"/>
                        <field name="l10n_ke_quantity_unit_id"/>
                        <field name="l10n_ke_origin_country_id"/>
                        <field name="l10n_ke_product_type_code"/>
                        <field name="l10n_ke_is_insurance_applicable"/>
                        <field name="l10n_ke_tax_type_code"/>
                        <field name="l10n_ke_item_code"/>
                        <div class="cell"/>
                        <button name="action_l10n_ke_oscu_save_item" string="Save Item" type="object"/>
                        <div class="cell"/>
                        <button name="action_l10n_ke_oscu_save_stock_master" string="Save Stock Master" type="object"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
