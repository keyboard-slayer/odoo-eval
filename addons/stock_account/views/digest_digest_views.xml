<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="digest_digest_view_form" model="ir.ui.view">
        <field name="name">digest.digest.view.form.inherit.stock.account</field>
        <field name="model">digest.digest</field>
        <field name="priority">20</field>
        <field name="inherit_id" ref="digest.digest_digest_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='kpis']/group[last()]" position="before">
                <group name="kpi_stock_account" string="Stock valuation"
                       groups="stock.group_stock_manager,account.group_account_manager">
                    <field name="kpi_stock_valuation_total"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
