<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="website_sale.product_configurator.product">
        <div class="mt-md-4">
            <h1 itemprop="name" t-out="this.state.product.name"/>
            <p
                t-if="this.state.product.description_sale"
                t-out="this.state.product.description_sale"
                class="text-muted my-2"
            />
            <h3 class="text-nowrap" t-out="getFormattedPrice()"/>
            <t t-foreach="this.state.product.attribute_lines" t-as="ptal" t-key="ptal.id">
                <PTAL t-props="ptal" productTmplId="this.props.product_tmpl_id"/>
            </t>
            <div class="d-flex flex-wrap align-items-center">
                <div class="css_quantity input-group d-inline-flex me-2 mb-2 align-middle">
                    <a
                        class="btn btn-link"
                        href="#"
                        aria-label="Remove one"
                        title="Remove one"
                        t-on-click="decreaseQuantity">
                        <i class="fa fa-minus"/>
                    </a>
                    <input
                        class="form-control quantity text-center"
                        data-min="1"
                        t-att-value="this.state.product.quantity"
                        t-on-change="setQuantity"/>
                    <a
                        class="btn btn-link float_left"
                        href="#"
                        aria-label="Add one"
                        title="Add one"
                        t-on-click="increaseQuantity">
                        <i class="fa fa-plus"/>
                    </a>
                </div>
                <div class="d-inline-flex align-items-center mb-2 me-auto">
                    <button class="btn btn-primary flex-grow-1" t-on-click="addToCart">
                        <i class="fa fa-shopping-cart me-2"></i>
                        Add to cart
                    </button>
                </div>
            </div>
        </div>
    </t>
</templates>
