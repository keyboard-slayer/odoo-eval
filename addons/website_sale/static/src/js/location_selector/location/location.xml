<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="website_sale.locationSelector.location">
        <button 
            class="list-group-item ps-0"
            t-att-class="{'o_location_selector_location_selected list-group-item-primary': props.isSelected}"
            t-on-click="() => props.setSelectedLocation(props.id)"
            type="button"
        >
            <div class="row justify-content-between align-items-start flex-nowrap g-0">
                <h5 class="col-2" t-out="props.number"/>
                <div class="col-10 p-0 text-start">
                    <h5 class="mb-2" t-out="props.name"/>
                    <div class="d-md-none mb-2">
                        <div 
                            class="d-flex align-items-center justify-content-between w-100" 
                            type="button" 
                            data-bs-toggle="collapse" 
                            t-attf-data-bs-target="#collapseHours_{{props.id}}" 
                            aria-expanded="false" 
                            t-attf-aria-controls="collapseHours_{{props.id}}"
                        >
                            <div class="d-flex align-items-center">
                                <i class="fa fa-clock-o" aria-hidden="true"></i>
                                <p class="ms-2 mb-0">Opening hours</p>
                            </div>
                            <i class="fa fa-chevron-down" aria-hidden="true"></i>
                        </div>

                        <div class="collapse" t-attf-id="collapseHours_{{props.id}}">
                        <!-- foreach day of the week -->
                            <div class="row justify-content-between g-0 px-1">
                                <div class="col-8">
                                    <small class="text-muted">Monday</small>
                                </div>
                                <div class="col-4 px-0 text-end">
                                    <small>06:30 - 12:00 13:00 - 19:30</small>
                                </div>
                            </div>
                        </div>
                        <p class="mb-0 text-success">Open Now</p>
                    </div>
                    <span class="text-muted" t-out="props.address"/>
                </div>
            </div>
        </button>
    </t>
</templates>
