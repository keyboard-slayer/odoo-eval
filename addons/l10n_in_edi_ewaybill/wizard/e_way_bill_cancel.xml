<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="eway_bill_cancel_form_view" model="ir.ui.view">
        <field name="name">eway.bill.cancel.form</field>
        <field name="model">eway.bill.cancel</field>
        <field name="arch" type="xml">
            <form string="Cancel E-way Bill">
                <group>
                    <field name="cancel_reason"/>
                    <field name="cancel_remarks"/>
                </group>
                <footer>
                    <button string='Cancel E-way Bill' name="cancel_eway" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="eway_cancel_window">
        <field name="name">Cancel E-way Bill</field>
        <field name="res_model">eway.bill.cancel</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="eway_bill_cancel_form_view"/>
        <field name="target">new</field>
    </record>
</odoo>
