<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_picking_type_form_inherit" model="ir.ui.view">
        <field name="name">stock.picking.type.form.inherit</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='second']" position="after">
                <group name="batch" invisible="code not in ('incoming', 'outgoing', 'internal')">
                    <group string="Batch &amp; Wave Picking" class="col-lg-12">
                        <field name="auto_batch"/>
                        <span class="o_form_label fw-bold" invisible="not auto_batch">Batch Grouping</span>
                        <div name="batch_contact" class="o_row" invisible="not auto_batch">
                            <field name="batch_group_by_partner" class="oe_inline"/>
                            <label for="batch_group_by_partner" string="Contact"/>
                        </div>
                        <span invisible="not auto_batch"/>
                        <div name="batch_destination" class="o_row" invisible="not auto_batch">
                            <field name="batch_group_by_destination" class="oe_inline"/>
                            <label for="batch_group_by_destination"/>
                        </div>
                        <span invisible="not auto_batch or not default_location_src_id" groups="stock.group_stock_multi_locations"/>
                        <div name="batch_source_location" class="o_row" invisible="not auto_batch or not default_location_src_id" groups="stock.group_stock_multi_locations">
                            <field name="batch_group_by_src_loc" class="oe_inline"/>
                            <label for="batch_group_by_src_loc"/>
                        </div>
                        <span invisible="not auto_batch or not default_location_dest_id" groups="stock.group_stock_multi_locations"/>
                        <div name="batch_dest_subloc" class="o_row" invisible="not auto_batch or not default_location_dest_id" groups="stock.group_stock_multi_locations">
                            <field name="batch_group_by_dest_loc" class="oe_inline"/>
                            <label for="batch_group_by_dest_loc"/>
                        </div>
                        <span class="o_form_label fw-bold" invisible="not auto_batch">Wave Grouping</span>
                        <div name="wave_product" class="o_row" invisible="not auto_batch">
                            <field name="wave_group_by_product"/>
                            <label for="wave_group_by_product"/>
                        </div>
                        <span invisible="not auto_batch"/>
                        <div name="wave_category" class="o_row" invisible="not auto_batch">
                            <field name="wave_group_by_category"/>
                            <label for="wave_group_by_category"/>
                        </div>
                        <span invisible="not auto_batch" groups="stock.group_stock_multi_locations"/>
                        <div name="wave_location" class="o_row" invisible="not auto_batch" groups="stock.group_stock_multi_locations">
                            <field name="wave_group_by_location"/>
                            <label for="wave_group_by_location"/>
                        </div>
                        <field name="wave_group_by_location" invisible="1"/>
                        <span/>
                        <div class="o_row mb-2" >
                            <span class="text-muted" invisible="not auto_batch or not (wave_group_by_product or wave_group_by_category or wave_group_by_location)">
                                With wave grouping, one order might be splited in different waves.
                            </span>
                        </div>
                        <label for="wave_location_ids" invisible="not auto_batch or not wave_group_by_location" groups="stock.group_stock_multi_locations"/>
                        <div name="wave_location_ids" invisible="not auto_batch or not wave_group_by_location" groups="stock.group_stock_multi_locations">
                            <field name="wave_location_ids" widget="many2many_tags" class="oe_inline"/>
                        </div>
                        <label for="should_group_waves" string="If products are" invisible="not auto_batch or not (wave_group_by_product or wave_group_by_category or wave_group_by_location)"/>
                        <div name="should_group_waves" invisible="not auto_batch or not (wave_group_by_product or wave_group_by_category or wave_group_by_location)">
                            <field name="should_group_waves" class="oe_inline"/>
                        </div>
                        <label for="batch_max_lines" string="Maximum per batch" invisible="not auto_batch"/>
                        <div class="o_row" name="batch_max_lines" invisible="not auto_batch">
                            <field name="batch_max_lines" invisible="not auto_batch" class="oe_inline"/>
                            <span>lines</span>
                        </div>
                        <span invisible="not auto_batch"/>
                        <div class="o_row" name="batch_max_transfers" invisible="not auto_batch">
                            <field name="batch_max_pickings" invisible="not auto_batch" class="oe_inline"/>
                            <span>transfers</span>
                        </div>
                        <field name="batch_auto_confirm" invisible="not auto_batch"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
    <record id="stock_picking_type_kanban_inherit" model="ir.ui.view">
        <field name="name">stock.picking.type.kanban.inherit</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.stock_picking_type_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('col-6') and hasclass('o_kanban_card_manage_section') and hasclass('o_kanban_manage_new')]" position="replace">
                <div class="col-6 o_kanban_card_manage_section o_kanban_manage_new">
                    <h5 role="menuitem" class="o_kanban_card_manage_title">
                        New
                    </h5>
                    <div role="menuitem">
                        <a name="get_new_batch_action" type="object">New Transfer</a>
                    </div>
                    <div role="menuitem">
                        <a name="get_prepare_wave_action" type="object">Prepare Wave</a>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
