<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_journal_dashboard_kanban_view" model="ir.ui.view">
        <field name="name">account.journal.dashboard.kanban</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.account_journal_dashboard_kanban_view" />
        <field name="arch" type="xml">
            <data>

                <xpath expr="//t[@id='account.JournalBodySalePurchase']//div" position="inside">
                    <t t-if="journal_type == 'sale'">
                        <div class="w-100">
                            <a type="object" name="l10n_pl_edi_get_status" groups="account.group_account_invoice">Fetch KseF invoice status</a>
                        </div>
                    </t>
                    <t t-elif="journal_type == 'purchase'">
                        <div class="w-100">
                            <a type="object" name="l10n_pl_edi_ksef_get_new_documents" groups="account.group_account_invoice">Fetch from KseF</a>
                        </div>
                    </t>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
