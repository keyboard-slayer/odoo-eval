<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_inherited" model="ir.ui.view">
        <field name="name">sale.order.form.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="x_project_name"/>
                <field name="x_region_id"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page name="sales_person_detail" string="Sales Person details">
                    <field name="x_sale_person_line_ids">
                        <tree editable="bottom">
                            <field name="x_person_id" required="1"/>
                            <field name="x_ratio"/>
                            <field name="x_amount"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>    
</odoo>
