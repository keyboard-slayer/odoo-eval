<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_move_form_inherited" model="ir.ui.view">
        <field name="name">account.move.form.inherited</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']//tree/field[@name='name']" position="after">
                <field name="x_warranty_terms_invoice"/>
                <field name="name" column_invisible="1"/>
            </xpath>
            <xpath expr="//div[@name='due_date']" position="after">
                <field name="x_project_name_invoice"/>
                <field name="x_region_id_invoice"/>
            </xpath>
            <xpath expr="//form[1]/sheet[1]/notebook[1]" position="inside">
                <page name="sales_person_detail" string="Sales Person details">
                    <field name="x_sale_person_line_ids_invoice">
                        <tree create="0">
                            <field name="x_person_id"/>
                            <field name="x_ratio"/>
                            <field name="x_amount"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>