<odoo>
    <record id="safety_stock_model_action" model="ir.actions.act_window">
        <field name="name">Replenishment</field>
        <field name="res_model">stock.warehouse.orderpoint</field>
        <field name="view_mode">tree</field>
    </record>

    <record id="safety_stock_view_tree" model="ir.ui.view">
        <field name="name">safety.stock.tree</field>
        <field name="model">stock.warehouse.orderpoint</field>
        <field name="inherit_id" ref="stock.view_warehouse_orderpoint_tree_editable"/>
        <field name="arch" type="xml">
            <field name="product_min_qty" position="after">
                <button name="action_safety_stock_info" type="object" icon="fa-info-circle" title="Safety Stock Information" attrs="{'invisible': [('id', '=', False)]}"/>
            </field>
        </field>
    </record>
</odoo>