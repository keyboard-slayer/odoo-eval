<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_journal_form" model="ir.ui.view">
            <field name="name">account.journal.form.l10n_sa_edi</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <field name="l10n_sa_compliance_checks_passed" invisible="1"/>
                    <field name="l10n_sa_compliance_csid_json" invisible="1"/>
                    <field name="l10n_sa_production_csid_json" invisible="1"/>
                    <page name="zatca_einvoicing" string="ZATCA" attrs="{'invisible': [('country_code', '!=', 'SA')]}">
                        <p>
                            <b>In order to be able to submit Invoices to ZATCA, the following steps needs to be
                                completed:
                            </b>
                            <ol class="mt-2 mb-4">
                                <li>
                                    Request a Compliance Certificate (CCSID)
                                    <i class="fa fa-check text-success ml-1"
                                       attrs="{'invisible': [('l10n_sa_compliance_csid_json', '=', False)]}"/>
                                </li>
                                <li>
                                    Complete the Compliance Checks
                                    <i class="fa fa-check text-success ml-1"
                                       attrs="{'invisible': [('l10n_sa_compliance_checks_passed', '=', False)]}"/>
                                </li>
                                <li>
                                    Request a Production Certificate (PCSID)
                                    <i class="fa fa-check text-success ml-1"
                                       attrs="{'invisible': [('l10n_sa_production_csid_json', '=', False)]}"/>
                                </li>
                            </ol>
                        </p>
                        <div class="alert alert-info d-flex justify-content-between align-items-center" role="alert"
                             attrs="{'invisible':[('l10n_sa_compliance_csid_json', '!=', False)]}">
                            <p class="mb-0">
                                Step 1: The Compliance CSID needs to be obtained before running the Compliance Checks.
                            </p>
                            <button name="%(l10n_sa_edi_otp_wizard_act_window)d" type="action" icon="fa-key"
                                    class="btn-info ">
                                Request Compliance CSID
                            </button>
                        </div>
                        <div class="alert alert-warning d-flex justify-content-between align-items-center" role="alert"
                             attrs="{'invisible':['|', ('l10n_sa_compliance_checks_passed', '=', True), ('l10n_sa_compliance_csid_json', '=', False)]}">
                            <p class="mb-0">
                                Step 2: The compliance checks need to be completed before requesting a Production CSID
                            </p>
                            <button name="l10n_sa_run_compliance_checks" type="object" icon="fa-refresh"
                                    class="btn-warning ">
                                Run Compliance Checks
                            </button>
                        </div>
                        <div class="alert alert-info d-flex justify-content-between align-items-center" role="alert"
                             attrs="{'invisible':[('l10n_sa_compliance_csid_json', '=', False)]}">
                            <p class="mb-0" attrs="{'invisible': [('l10n_sa_production_csid_json', '!=', False)]}">
                                Step 3: The Production CSID needs to be obtained before any invoice can be
                                submitted to ZATCA. If it is expired, it needs to be renewed.
                            </p>
                            <p class="mb-0" attrs="{'invisible': [('l10n_sa_production_csid_json', '=', False)]}">
                                The Production certificate is valid until
                                <field name="l10n_sa_production_csid_validity" readonly="1" nolabel="1"
                                       class="font-weight-bold"/>
                            </p>
                            <button name="l10n_sa_api_get_production_CSID" type="object" icon="fa-key"
                                    class="btn-info "
                                    attrs="{'invisible': [('l10n_sa_production_csid_json', '!=', False)]}">
                                Request Production CSID
                            </button>
                            <button name="%(l10n_sa_edi_otp_wizard_act_window)d" type="action" icon="fa-refresh"
                                    class="btn-info" context="{'renew_pcsid': True}"
                                    attrs="{'invisible': [('l10n_sa_production_csid_json', '=', False)]}">
                                Renew Production CSID
                            </button>
                        </div>
                        <button name="l10n_sa_regen_csr" type="object" icon="fa-key" class="btn-danger mt8" groups="base.group_no_one">
                            Regenerate the CSR
                        </button>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>