<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.l10n_sa_edi.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="user_id" position="before">
                <field name="l10n_sa_adjustment_reason"
                       attrs="{'invisible': [('move_type', 'not in', ('out_refund', 'in_refund'))]}"/>
            </field>
            <button name="button_cancel_posted_moves" position="attributes">
                <attribute name="invisible">1</attribute>
            </button>
            <button name="button_draft" position="after">
                <button name="button_recalculate_edi_values" groups="base.group_no_one"
                        string="Recalculate EDI Content" type="object" class="btn btn-secondary"/>
            </button>
        </field>
    </record>
</odoo>
