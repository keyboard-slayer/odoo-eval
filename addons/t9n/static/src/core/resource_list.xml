<?xml version="1.0"?>
<templates>
    <t t-name="t9n.ResourceList">
        <div class="container mt-3">
            <div class="input-group">
                <div class="form-outline">
                    <input type="text" class="form-control" placeholder="Search resources" t-model="state.filters.searchText"/>
                </div>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th t-on-click="() => this.onClickColumnName('fileName')">Resource <i t-attf-class="btn btn-link fa fa-sort-{{this.state.sorting.column === 'name' and this.state.sorting.order === 'asc' ? 'up' : 'down'}}"></i>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="this.resources" t-as="resource" t-key="resource.id">
                        <tr>
                            <td>
                                <button class="btn btn-link " t-on-click="() => this.onClickResource(resource.id)">
                                    <t t-esc="resource.fileName"/>
                                </button>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </div>
    </t>
</templates>
