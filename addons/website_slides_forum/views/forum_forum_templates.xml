<?xml version="1.0" encoding="utf-8"?>
<odoo><data>
    <template name="Split regular forums/courses" id="website_slides_forum_index" inherit_id="website_forum.forum_all" active="True">
        <xpath expr="//div[@id='o_wforum_forums_index_list']//*[@t-if='forums']" position="replace">
            <t t-if="forums">
                <t t-set="courses_discussions" t-value="forums.filtered(lambda f: f.slide_channel_id)"/>
                <t t-set="regular_forums" t-value="forums - courses_discussions"/>
                    <t t-call="website_forum.forum_all_all_entries">
                        <t t-set="_forums" t-value="regular_forums"/>
                    </t>
                    <t t-call="website_forum.forum_all_all_entries">
                        <t t-set="_forums" t-value="courses_discussions"/>
                    </t>
            </t>
        </xpath>
    </template>
    <template name="Replace Breadcrumb Root" id="website_slides_forum_breadcrumb" inherit_id="website_forum.forum_index" active="True">
        <xpath expr="//nav[hasclass('o_wforum_nav')]//li[hasclass('o_wforum_forum_name_breadcrumb')]" position="replace">
            <t t-if="forum.slide_channel_id">
                <li class="breadcrumb-item">
                    <a class="fs-5" t-att-href="'/slides/%s%s' % (slug(forum.slide_channel_id), '/%s' % slug(category) if category else '')" t-esc="forum.name"/>
                </li>
                <li class="breadcrumb-item">
                    <t t-if="my">
                        <a class="fs-5" t-attf-href="/forum/#{ slug(forum) }">Forum</a>
                    </t>
                    <t t-else="">
                        <span class="fs-5 fw-bold">Forum</span>
                    </t>
                </li>
            </t>
            <t t-else="">
                <li class="breadcrumb-item">
                    <t t-if="my">
                        <a class="fs-5" t-attf-href="/forum/#{ slug(forum) }" t-esc="forum.name"/>
                    </t>
                    <t t-else="">
                        <span class="fs-5 fw-bold" t-esc="forum.name"/>
                    </t>
                </li>
            </t>
        </xpath>
    </template>
    <template name="Replace Breadcrumb Moderation Pages" id="website_slides_forum_breadcrumb_mod" inherit_id="website_forum.header" active="True">
        <xpath expr="//nav[hasclass('o_wforum_nav')]//li[hasclass('o_wforum_forum_name_breadcrumb')]" position="replace">
            <t t-if="forum.slide_channel_id">
                <li class="breadcrumb-item">
                    <a class="fs-5" t-att-href="'/slides/%s%s' % (slug(forum.slide_channel_id), '/%s' % slug(category) if category else '')" t-esc="forum.name"/>
                </li>
                <li class="breadcrumb-item">
                    <a class="fs-5" t-attf-href="/forum/#{ slug(forum) }">Forum</a>
                </li>
            </t>
            <t t-else="">
                <li class="breadcrumb-item">
                    <a class="fs-5" t-attf-href="/forum/#{ slug(forum) }" t-esc="forum.name"/>
                </li>
            </t>
        </xpath>
    </template>
    <template name="Replace Breadcrumb Post" id="website_slides_forum_breadcrumb_post" inherit_id="website_forum.post_description_full" active="True">
        <xpath expr="//nav[hasclass('o_wforum_nav')]//li[hasclass('o_wforum_forum_name_breadcrumb')]" position="replace">
            <t t-if="forum.slide_channel_id">
                <li class="breadcrumb-item">
                    <a class="fs-5" t-att-href="'/slides/%s%s' % (slug(forum.slide_channel_id), '/%s' % slug(category) if category else '')" t-esc="forum.name"/>
                </li>
                <li class="breadcrumb-item">
                    <a class="fs-5" t-attf-href="/forum/#{ slug(forum) }">Forum</a>
                </li>
            </t>
            <t t-else="">
                <li class="breadcrumb-item">
                    <a class="fs-5" t-attf-href="/forum/#{ slug(forum) }" t-esc="forum.name"/>
                </li>
            </t>
        </xpath>
    </template>
</data></odoo>
