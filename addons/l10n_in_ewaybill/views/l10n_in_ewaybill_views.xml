<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ewaybill_invoice_action" model="ir.actions.act_window">
        <field name="name">Ewaybill Invoice</field>
        <field name="res_model">l10n.in.ewaybill</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('country_id.code','=','IN')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add
            </p>
        </field>
    </record>

    <record id="ewaybill_invoice_tree_view" model="ir.ui.view">
        <field name="name">ewaybill.invoice.tree.view</field>
        <field name="model">l10n.in.ewaybill</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="ewaybill_date"/>
                <field name="document_number"/>
                <field name="document_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="ewaybill_invoice_form_view" model="ir.ui.view">
        <field name="name">ewaybill.invoice.form.view</field>
        <field name="model">l10n.in.ewaybill</field>
        <field name="arch" type="xml">
            <form string="Stock Picking">
                <header>
                    <button name="generate_ewaybill" string="Generate E-waybill" class="oe_highlight" type="object" invisible="state != 'pending'"/>
                    <button name="action_export_json" string="Download JSON" class="oe_highlight" type="object" invisible="not error_message" groups="base.group_no_one"/>
                    <field name="state" widget="statusbar" statusbar_visible="pending,to_generate,generated"/>
                </header>
                <field name="blocking_level" invisible="1"/>
                <div class="alert alert-info" role="alert" style="margin-bottom:0px;"
                    invisible="state != 'to_generate' or error_message">
                     <div>The e-Way Bill will Generate soon
                         <button name="process_now" type="object" class="oe_link ps-0 text-decoration-underline" string="Process now"/>
                     </div>
                </div>
                <div class="alert alert-info" role="alert" style="margin-bottom:0px;"
                    invisible="state not in ('to_cancel')">
                     <div>The e-Way Bill will cancel soon
                         <button name="process_now" type="object" class="oe_link ps-0 text-decoration-underline" string="Process now"/>
                     </div>
                </div>
                <div class="alert alert-danger" role="alert" style="margin-bottom:0px;" invisible="not error_message or blocking_level == 'error'">
                    <div class="o_row">
                        <field name="error_message"/>
                        <button name="process_now" string="retry" class="oe_link ps-0 text-decoration-underline" type="object"/>
                    </div>
                </div>
                <div class="alert alert-warning" role="alert" style="margin-bottom:0px;" invisible="not error_message or blocking_level == 'warning'">
                    <div class="o_row">
                        <field name="error_message"/>
                        <button name="process_now" string="retry" class="oe_link ps-0 text-decoration-underline" type="object"/>
                    </div>
                </div>
                <sheet>
                    <div class="oe_title">
                        <h1 invisible="not name">
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group name="document_details" string="Document Details">
                        <group>
                            <field name="account_move_id" invisible="1"/>
                            <field name="type_id" domain="[('code', 'in', ('INV', 'BIL', 'BOE'))]"/>
                        </group>
                        <group>
                            <field name="ewaybill_date" invisible="not ewaybill_date"/>
                            <field name="document_number"/>
                            <field name="document_date"/>
                        </group>
                    </group>
                    <group name="partners" string="Address Details">
                        <group>
                            <field name="partner_bill_to_id"/>
                            <field name="partner_bill_from_id"/>
                        </group>
                        <group>
                            <field name="partner_ship_to_id"/>
                            <field name="partner_ship_from_id"/>
                        </group>
                    </group>
                    <group name="part_b" string="Transportation Details">
                        <group>
                            <field name="mode"/>
                            <field name="vehicle_type" invisible="mode != '1'" required="mode == '1'"/>
                            <field name="vehicle_no" invisible="mode != '1'" required="mode == '1'"/> 
                            <field name="transporter_id"/>
                            <label for="distance"/>
                            <div class="o_row" name="distance">
                                <field name="distance"/>
                                <span>km</span>
                            </div>
                        </group>
                        <group>
                            <field name="transportation_doc_no" required="mode in ['2','3','4']"/>
                            <field name="transportation_doc_date" required="mode in ['2','3','4']"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
