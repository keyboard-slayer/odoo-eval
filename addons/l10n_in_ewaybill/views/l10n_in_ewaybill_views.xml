<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ewaybill_stock_action" model="ir.actions.act_window">
        <field name="name">Ewaybill Stock</field>
        <field name="res_model">l10n.in.ewaybill</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add
            </p>
        </field>
    </record>
    <record id="ewaybill_stock_tree_view" model="ir.ui.view">
        <field name="name">ewaybill.stock.tree.view</field>
        <field name="model">l10n.in.ewaybill</field>
        <field name="arch" type="xml">
            <tree>
                <field name="stock_picking_id"/>
            </tree>
        </field>
    </record>
    <record id="ewaybill_stock_form_view" model="ir.ui.view">
        <field name="name">ewaybill.stock.form.view</field>
        <field name="model">l10n.in.ewaybill</field>
        <field name="arch" type="xml">
                <form string="Stock Picking">
                    <sheet>
                     <group>
                        <field string="Stock Transfer" name="stock_picking_id"/>
                        <field string="Date" name="date"/>

                     </group>
                        <notebook>
                            <page string="Item Details">
                                <field name="move_ids" mode="tree,kanban"
                                 widget="stock_move_one2many" >
                                 <tree editable="bottom" create="0">
                                    <field name="currency_id" invisible="1"/>
                                    <field name="company_id" invisible="1"/>

                                    <field name="product_id" readonly="1"/>
                                    <field name="quantity_done" string="Quantity" readonly="1"/>
                                    <field name="price" readonly="0"/>
                                    <field name="tax_id" widget="many2many_tags" readonly="0"/>
                                    <field name="price_subtotal"/> 

                                 </tree>

                                     
                                   
                                </field>
                                <field name="currency_id" invisible="1"/>
                                <group name="note_group" col="6" class="mt-2 mt-md-0">
                                    <group colspan="4">
                                    </group>
                                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                        <field name="tax_totals" widget="account-tax-totals-field" nolabel="1" colspan="2" readonly="1"/>
                                    </group>
                                    <div class="clearfix"/>
                                </group>

                            </page>
                            <page string="Ewaybill" name="l10n_in_edi_ewaybill_page">
                                        <group string="Transportation Details" name="transportation_group">
                                            <field name="l10n_in_transporter_id"/>
                                            <label for="l10n_in_distance"/>
                                            <div class="o_row" name="l10n_in_distance">
                                                <field name="l10n_in_distance"/>
                                                <span>km</span>
                                            </div>
                                            <field name="l10n_in_mode"/>
                                            <field name="l10n_in_vehicle_type" 
                                                attrs="{'invisible': [('l10n_in_mode','!=','1')], 'required': [('l10n_in_mode','=','1')]}"/>
                                            <field name="l10n_in_vehicle_no" 
                                                attrs="{'invisible': [('l10n_in_mode','!=','1')], 'required': [('l10n_in_mode','=','1')]}"/>
                                            <field name="l10n_in_transportation_doc_no" />
                                            <field name="l10n_in_transportation_doc_date" />
                                        </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>

                </form>
        </field>
    </record>
</odoo>