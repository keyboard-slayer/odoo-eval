<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ewaybill_invoice_action" model="ir.actions.act_window">
        <field name="name">Ewaybill Invoice</field>
        <field name="res_model">l10n.in.ewaybill</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('country_id.code','=','IN')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add
            </p>
        </field>
    </record>

    <record id="ewaybill_invoice_tree_view" model="ir.ui.view">
        <field name="name">ewaybill.invoice.tree.view</field>
        <field name="model">l10n.in.ewaybill</field>
        <field name="arch" type="xml">
            <tree>
                <field name="account_move_id"/>
                <field name="date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="ewaybill_invoice_form_view" model="ir.ui.view">
        <field name="name">ewaybill.invoice.form.view</field>
        <field name="model">l10n.in.ewaybill</field>
        <field name="arch" type="xml">
            <form string="Stock Picking">
                <header>
                    <button name="ewaybill_send" string="Send E-waybill" class="oe_highlight" type="object" invisible="state in ('sent','cancel')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent"/>
                </header>
                <div class="alert alert-danger" role="alert" style="margin-bottom:0px;" invisible="state != 'error'">
                    <div class="o_row">
                        <field name="error_message"/>
                    </div>
                </div>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                     <group>
                        <field string="Invoice" name="account_move_id"/>
                        <field name="type_id" domain="[('code', 'in', ('INV', 'BIL', 'BOE'))]"/>
                     </group>
                     <group>
                        <field name="partner_id" string="Customer" />
                        <field name="date"/>
                        <field name="state_id"/>
                     </group>
                    </group>
                    <group>
                    </group>
                    <group name="part-b">
                        <group>
                            <field name="mode"/>
                            <field name="vehicle_type" invisible="mode != '1'" required="mode == '1'"/>
                            <field name="vehicle_no" invisible="mode != '1'" required="mode == '1'"/> 
                            <field name="transporter_id"/>
                            <label for="distance"/>
                            <div class="o_row" name="distance">
                                <field name="distance"/>
                                <span>km</span>
                            </div>
                        </group>
                        <group>
                            <field name="transportation_doc_no" required="mode in ['2','3','4']"/>
                            <field name="transportation_doc_date" required="mode in ['2','3','4']"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

</odoo>
