<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mail_activity_schedule_view_form" model="ir.ui.view">
        <field name="name">mail.activity.schedule.inherit.account</field>
        <field name="model">mail.activity.schedule</field>
        <field name="inherit_id" ref="mail.mail_activity_schedule_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='summary']" position="after">
                <field name="request_from_id"
                    string="Request From"
                    invisible="not is_request_document_activity"
                    required="is_request_document_activity"
                    widget="many2one_avatar_user" />
            </xpath>
            <xpath expr="//field[@name='summary']" position="attributes">
                <attribute name="invisible">is_request_document_activity</attribute>
            </xpath>
            <xpath expr="//field[@name='note']" position="attributes">
                <attribute name="invisible">is_request_document_activity</attribute>
            </xpath>
            <xpath expr="//field[@name='note']/parent::group" position="after">
                <group>
                    <field name="document_name"
                        invisible="not is_request_document_activity"
                        required="is_request_document_activity" />
                </group>
                <field name="request_message"
                    class="oe-bordered-editor"
                    invisible="not is_request_document_activity"
                    widget="html_mail"
                    placeholder="Mail Request Message..." />
            </xpath>
        </field>
    </record>
</odoo>
