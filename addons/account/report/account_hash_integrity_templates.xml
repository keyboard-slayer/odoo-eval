<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <template id="report_hash_integrity">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="company">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="row" id="hash_header">
                                <div class="col-12">
                                    <br/>
                                    <h2>Hash Integrity Result - <span t-out="data['printing_date']"/></h2>
                                    <br/>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-bordered" style="table-layout: fixed" id="hash_config_table">
                                        <thead style="display: table-row-group">
                                            <tr>
                                                <th class="text-center" style="width: 30%" scope="col">Journal / sequence</th>
                                                <th class="text-center" style="width: 80%" scope="col">Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <t t-foreach="data['results']" t-as="result">
                                                <tr>
                                                    <td>
                                                        <span t-out="result['name']"/>
                                                    </td>
                                                    <t t-if="result['status'] != 'ok'">
                                                        <td><span t-out="result['msg']"/></td>
                                                    </t>
                                                    <t t-else="">
                                                        <td>
                                                            <span t-out="result['msg']"/> <br/>
                                                            From <b><span t-out="result['from_name']"/></b> (<span t-out="result['from_date']"/>) : <span t-out="result['from_hash']"/><br/>
                                                            To <b><span t-out="result['to_name']"/></b> (<span t-out="result['to_date']"/>) : <span t-out="result['to_hash']"/>
                                                        </td>
                                                    </t>
                                                </tr>
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
