<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--
        Timesheet from Manufacturing Order
    -->
    <record id="timesheet_action_from_manufacturing_order" model="ir.actions.act_window">
        <field name="name">Timesheets</field>
        <field name="res_model">account.analytic.line</field>
        <field name="search_view_id" ref="hr_timesheet.hr_timesheet_line_search"/>
        <field name="context">{
            "is_timesheet": 1,
        }</field>
        <field name="domain">[('project_id', '!=', False)]</field>
    </record>

    <record id="timesheet_action_from_manufacturing_order_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="4"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="hr_timesheet.timesheet_view_tree_user"/>
        <field name="act_window_id" ref="timesheet_action_from_manufacturing_order"/>
    </record>

    <record id="timesheet_action_from_manufacturing_order_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="5"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hr_timesheet.timesheet_view_form_user"/>
        <field name="act_window_id" ref="timesheet_action_from_manufacturing_order"/>
    </record>

    <!-- Timesheets from Manufacturing Order Service -->
    <record id="timesheet_action_from_manufacturing_order_service" model="ir.actions.act_window">
        <field name="name">Timesheets</field>
        <field name="res_model">account.analytic.line</field>
        <field name="search_view_id" ref="hr_timesheet.hr_timesheet_line_search"/>
        <field name="domain">[('project_id', '!=', False), ('mo_service', '=', active_id)]</field>
        <field name="context">{
            'grid_range': 'week',
            'search_default_week': 1,
            'default_mo_service': active_id,
            'default_is_mo_service_edited': True,
            "is_timesheet": 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No activities found. Let's start a new one!
            </p>
            <p>
                Track your working hours by projects every day and track this time on your MOs.
            </p>
        </field>
    </record>

    <record id="timesheet_action_from_manufacturing_order_service_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="hr_timesheet.timesheet_view_tree_user"/>
        <field name="act_window_id" ref="timesheet_action_from_manufacturing_order_service"/>
    </record>

    <record id="timesheet_action_from_manufacturing_order_service_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="20"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="hr_timesheet.view_kanban_account_analytic_line"/>
        <field name="act_window_id" ref="timesheet_action_from_manufacturing_order_service"/>
    </record>

    <record id="timesheet_action_from_manufacturing_order_service_pivot" model="ir.actions.act_window.view">
        <field name="sequence" eval="30"/>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="hr_timesheet.view_hr_timesheet_line_pivot"/>
        <field name="act_window_id" ref="timesheet_action_from_manufacturing_order_service"/>
    </record>

    <record id="timesheet_action_from_manufacturing_order_service_graph" model="ir.actions.act_window.view">
        <field name="sequence" eval="40"/>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="hr_timesheet.view_hr_timesheet_line_graph"/>
        <field name="act_window_id" ref="timesheet_action_from_manufacturing_order_service"/>
    </record>

    <record id="timesheet_action_from_manufacturing_order_service_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="50"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hr_timesheet.timesheet_view_form_user"/>
        <field name="act_window_id" ref="timesheet_action_from_manufacturing_order_service"/>
    </record>


</odoo>
