<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
    <t t-name="pos_event.ProductInfoPopup" t-inherit="point_of_sale.ProductInfoPopup" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('flex-column')]" position="after">
            <t t-if="eventData">
                <div class="section-event mt-3 mb-4 pb-4 border-bottom text-start">
                    <h3 class="section-title">Event Info</h3>
                    <div class="section-event-body d-flex flex-column text-start">
                        <span><t t-esc="this.formatDate(eventData.date_begin)"/> > <t t-esc="this.formatDate(eventData.date_end)"/></span>
                        <span t-esc="eventData.name"/>
                        <span t-esc="this.formatAddress(eventData.address_inline)"/>
                    </div>
                </div>
            </t>
        </xpath>
    </t>
</templates>
