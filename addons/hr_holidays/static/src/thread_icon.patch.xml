<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.ThreadIcon" t-inherit-mode="extension">
        <xpath expr="//*[@name='chat_static']" position="replace">
            <div t-if="correspondent.persona.im_status === 'leave_online'" class="o-mail-ThreadIcon-online fa fa-fw fa-plane" t-attf-title="{{correspondent.persona.outOfOfficeText}} - Online"/>
            <div t-elif="correspondent.persona.im_status === 'leave_offline'" class="fa fa-fw fa-plane" t-attf-title="{{correspondent.persona.outOfOfficeText}}"/>
            <div t-elif="correspondent.persona.im_status === 'leave_away'" class="fa fa-fw fa-plane o-yellow" t-attf-title="{{correspondent.persona.outOfOfficeText}} - Away"/>
            <t t-else="">$0</t>
        </xpath>
    </t>
</templates>
