<odoo>
    <record id="view_animal_tree" model="ir.ui.view">
        <field name="name">Animal Models</field>
        <field name="model">zoo.animal</field>
        <field name="arch" type="xml">
            <tree string="Animal">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="animal_view_form" model="ir.ui.view">
        <field name="name">zoo.animal.form.view</field>
        <field name="model">zoo.animal</field>
        <field name="arch" type="xml">
            <form string="Animal">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
