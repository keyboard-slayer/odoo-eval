<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template priority="8" id="auth_passkey_login" inherit_id="web.login" name="Sign up - Reset Password">
        <xpath expr="//div[hasclass('o_login_auth')]/parent::div" position="replace">
            <div t-attf-class="clearfix oe_login_buttons text-center gap-1 d-grid mb-1 {{'pt-2' if form_small else 'pt-3'}}">
                <button type="submit" class="btn btn-primary">Log in</button>
                <div class="text-start small">
                    <a href="#" onclick="auth_passkey_login()">Login with Passkey</a>
                </div>
                <div class="o_login_auth"/>
            </div>
        </xpath>
    </template>

    <template priority="32" id="auth_passkey_login_superuser" inherit_id="web.login">
        <xpath expr="//button[@type='submit']" position="after">
            <t t-if="debug">
                <button type="submit" name="redirect" value="/web/become" class="btn btn-link btn-sm">Log in as superuser</button>
            </t>
        </xpath>
    </template>
</odoo>
