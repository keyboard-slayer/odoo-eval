<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_users_identitycheck_view_form_passkey" model="ir.ui.view">
        <field name="model">res.users.identitycheck</field>
        <field name="inherit_id" ref="base.res_users_identitycheck_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='run_check']" position="after">
                <field name="hide_button" invisible="1"/>
                <widget name="verify_identity_passkey" data-hotkey="p" invisible="hide_button == 'passkey'"/>
            </xpath>
        </field>
    </record>

    <record id="res_users_identitycheck_view_form_revokedevices_passkey" model="ir.ui.view">
        <field name="name">Revoke All Devices</field>
        <field name="model">res.users.identitycheck</field>
        <field name="inherit_id" ref="base.res_users_identitycheck_view_form_revokedevices"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="replace">
                <form string="Log out from all devices">
                    <div>
                        You are about to log out from all devices that currently have access to your account.
                    </div>
                    <footer>
                        <button string="Log out from all devices" name="revoke_all_devices" type="object" class="btn-primary" data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z" />
                    </footer>
                </form>
            </xpath>
        </field>
    </record>
</odoo>
