<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_pt_picking_type_view_form" model="ir.ui.view">
        <field name="name">stock.pt.picking.type.form.view</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='second']" position="after">
                <field name="country_code" invisible="1"/>
                <group>
                    <group string="Portugal" attrs="{'invisible': [('country_code', '!=', 'PT')]}">
                        <field name="l10n_pt_stock_official_series_id"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
