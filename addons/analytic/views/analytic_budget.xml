<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_analytic_budget_form" model="ir.ui.view">
            <field name="name">analytic.budget.form</field>
            <field name="model">analytic.budget</field>
            <field name="arch" type="xml">
                <form string="Analytic Budget">
                    <sheet string="Analytic Budget">
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="responsible_id"/>
                                <field name="company_id"/>
                                <field name="budget_type"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                            <field name="analytic_line_ids" context="{'default_source_document_model': 'analytic.budget'}">
                                <tree editable="bottom">
                                    <field name="source_document_model" column_invisible="True"/>
                                    <field name="company_id" column_invisible="True"/>
                                    <field name="currency_id" column_invisible="True"/>
                                    <field name="name" column_invisible="True"/>
                                    <field name="account_id"/>
                                    <field name="amount" sum="Total" optional="show"/>
                                    <field name="line_type"/>
                                    <field name="achieved_amount"/>
                                    <field name="theoritical_amount"/>
                                    <field name="achievement" widget="percentage"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_analytic_budget_list" model="ir.ui.view">
            <field name="name">analytic.budget.list</field>
            <field name="model">analytic.budget</field>
            <field name="arch" type="xml">
                <tree string="Analytic Budget">
                    <field name="name"/>
                    <field name="responsible_id"/>
                    <field name="company_id"/>
                    <field name="budget_type"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>

        <record id="action_analytic_budget" model="ir.actions.act_window">
            <field name="name">Analytic Budget</field>
            <field name="res_model">analytic.budget</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Add a new analytic account
              </p>
            </field>
        </record>
</odoo>
