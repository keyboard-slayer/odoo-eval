<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="web_tour.TourPointer" owl="1">
        <div
            t-if="props.pointerState.isVisible"
            t-attf-class="
                o_tour_pointer
                o_{{ props.pointerState.position }}
                {{ isOpen ? 'o_open' : 'o_bouncing' }}
                {{ props.pointerState.fixed ? 'position-fixed' : 'position-absolute' }}
            "
            t-attf-style="
                --TourPointer__size: {{ constructor.size }}px;
                left: {{ props.pointerState.x }}px;
                top: {{ props.pointerState.y }}px;
            "
            t-on-mouseenter="() => state.isOpen = true"
            t-on-mouseleave="() => state.isOpen = false"
        >
            <div class="o_tour_pointer_tip position-absolute" />
            <div t-if="isOpen" class="o_tour_pointer_content overflow-hidden px-3 py-2 position-relative">
                <t t-out="props.pointerState.content" />
            </div>
        </div>
    </t>
</templates>
