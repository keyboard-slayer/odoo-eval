<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="field_html_history_view_form" model="ir.ui.view">
        <field name="name">field.html.history.diff.view.form</field>
        <field name="model">field.html.history.diff</field>
        <field name="arch" type="xml">
            <form string="History">
                <header>
                    <button string="Restore this version" type="object" name="action_restore_version" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="related_id"/>
                        <field name="related_model"/>
                        <field name="create_date"/>
                        <field name="create_uid"/>
                    </group>
                    <group>
                        <field name="diff"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="field_html_history_view_tree" model="ir.ui.view">
        <field name="name">field.html.history.diff.view.tree</field>
        <field name="model">field.html.history.diff</field>
        <field name="arch" type="xml">
            <tree string="Histories" sample="1" create="0" edit="0">
                <field name="related_id"/>
                <field name="related_model"/>
                <field name="time_ago"/>
                <button string="Restore this version" type="object" name="action_restore_version" class="btn-primary"/>
                <field name="diff_size"/>
                <field name="create_uid"/>
            </tree>
        </field>
    </record>

    <record id="field_html_history_action" model="ir.actions.act_window">
        <field name="name">field.html.history.diff.action</field>
        <field name="res_model">field.html.history.diff</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No History
            </p>
        </field>
    </record>

</odoo>
