<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="web_editor.One2ManyHistoryList" owl="1"  limit="2">
        <div class="widget-one2manyhistorylist">
            <div class="d-flex flex-shrink-0 align-items-center w-100 pb-0 px-0 fw-bolder">
                <hr class="flex-grow-1 w-auto border-top" />
                <span class="px-3">Recent history</span>
                <hr class="flex-grow-1 w-auto border-top" />
            </div>
            <br/>
            <div>
                <t t-if="!latestRecords.length">
                    <div class="text-center w-100 pb-2 pt-0 px-0 fw-bolder">
                        <span>No history</span>
                    </div>
                </t>
                <t t-foreach="latestRecords" t-as="rec" t-key="rec.id">
                    <div class="d-flex widget-one2manyhistorylist-entry">
                        <div class="d-flex flex-shrink-0 avatar">
                            <img class="w-100 h-100 rounded-circle o_object_fit_cover" t-att-src="avatarUrl" t-att-title="userName" t-att-alt="userName"/>
                            <a type="object" href="#" class="btn btn-light"  role="button" t-on-click="() => this.restoreVersion(rec.data.id)" title="Restore this version">
                                <i class="fa fa-2x fa-undo me-1"></i>
                            </a>
                        </div>
                        <div class="flex-grow-1">
                            <div class="d-flex flex-wrap align-items-baseline">
                                <strong class="me-1 text-truncate cursor-pointer"><t t-esc="userName" /></strong>
                                <small class="text-muted opacity-50 me-2" t-att-title="rec.data.create_date">
                                    <span>-</span> <t t-esc="rec.data.time_ago" />
                                </small>
                            </div>
                            <div class="o_MessageView_bubbleWrap position-relative d-flex align-items-start">
                                <div class="position-relative text-break">
                                    <p>
                                        <small class="text-muted opacity-50">ID <t t-esc="rec.data.id" /> - </small>
                                        Diff size : <t t-esc="rec.data.diff_size - 2" />
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-shrink-0 align-items-center w-100 pb-2 pt-0 px-0 fw-bolder">
                        <hr class="flex-grow-1  mt-0 mb-1 w-auto border-top" />
                    </div>
                </t>
            </div>
        </div>
    </t>
</templates>
