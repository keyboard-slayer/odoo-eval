            <WeButton glFilter="'maven'">Maven</WeButton>
            <WeButton glFilter="'toaster'">Toaster</WeButton>
            <WeButton glFilter="'walden'">Walden</WeButton>
            <WeButton glFilter="'valencia'">Valencia</WeButton>
            <WeButton glFilter="'xpro'">Xpro</WeButton>
            <WeButton glFilter="'custom'" name="'custom_glfilter_opt'">Custom</WeButton>
