<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="web_editor.TestOption">
        <WeRow>
            <t t-set-slot="title">Test Option</t>
            <WeButton selectClass="'test'">Test Class</WeButton>
            <WeButton wait="2000" noPreview="true">Wait 2 second</WeButton>
        </WeRow>
        <WeRow>
            <t t-set-slot="title">
                Background test
            </t>
            <WeColorPicker selectStyle="''"
                           colorPrefix="'bg-'"
                           cssProperty="'background-color'"
                           withCombinations="'selectColorCombination'"
                           withGradients="true"
                           selectedTab="'gradients'"
            />
            <WeImagePicker testImg="true" buttonStyle="true">
                Image
            </WeImagePicker>
        </WeRow>
    </t>
    <t t-name="web_editor.TestChildOption">
        <WeRow>
            <t t-set-slot="title">Only when width small</t>
            <WeButton test="dependencies" dependencies="['container_small']">
                dependencies
            </WeButton>
        </WeRow>
    </t>
    <t t-name="web_editor.SnippetSave">
        <t t-set="warnMessage">This is a test warning</t>
        <WeButton class="'fa fa-fw fa-save o_we_link o_we_hover_warning'"
                  warnMessage="warnMessage"
                  saveSnippet="true"
                  noPreview="true">
            Save the block and use it elsewhere
        </WeButton>
    </t>
</templates>