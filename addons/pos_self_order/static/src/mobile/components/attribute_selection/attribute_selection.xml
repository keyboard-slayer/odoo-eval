<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_self_order.AttributeSelection" owl="1">
        <t t-if="props.product.attributes"
            t-foreach="props.product.attributes"
            t-as="attribute"
            t-key="attribute.id">
            <div class="mb-3">
                <div class="attribute_name py-1 fs-5 fw-bold" t-esc="attribute.name"/>
                <t t-if="attribute.display_type === 'radio' or attribute.display_type === 'pills'">
                    <t t-foreach="attribute.values" t-as="value" t-key="value.id">
                        <div class="d-flex align-items-center py-2">
                            <input
                                type="radio"
                                class="form-check-input my-1 me-2"
                                t-att-name="value.name"
                                t-att-value="value.id"
                                t-attf-id="{{ attribute.id }}_{{ value.id }}"
                                t-att-disabled="disableAttributes"
                                t-model="state.selectedValues[attribute.id]"
                                />
                            <span class="d-flex align-items-center">
                                <t t-esc="value.name"/>
                                <div t-if="value.price_extra.display_price" class="px-2 py-1 ms-2 rounded-pill text-bg-info fs-6">
                                    + <t t-esc="selfOrder.formatMonetary(value.price_extra.display_price)" />
                                </div>
                            </span>
                        </div>
                    </t>
                </t>
                <select t-elif="attribute.display_type === 'select'" class="configurator_select form-select"
                    t-model="state.selectedValues[attribute.id]">
                    <option t-foreach="attribute.values" t-as="value" t-key="value.id" t-att-name="value.name" t-att-value="value.id" t-att-disabled="disableAttributes">
                        <t t-esc="value.name"/>
                        <t t-if="value.price_extra.display_price">
                            + <t t-esc="selfOrder.formatMonetary(value.price_extra.display_price)" />
                        </t>
                    </option>
                </select>
                <div t-elif="attribute.display_type === 'color'">
                    <ul>
                        <li t-foreach="attribute.values" t-as="value" t-key="value.id">
                            <label
                                t-attf-style="background-color: {{ value.html_color }};"
                                t-att-data-color="value.name">
                                <input
                                    type="radio"
                                    class="form-check-input my-1 me-2"
                                    t-att-name="attribute.name"
                                    t-att-value="value.id"
                                    t-attf-id="{{ attribute.id }}_{{ value.id }}"
                                    t-att-disabled="disableAttributes"
                                    t-model="state.selectedValues[attribute.id]"
                                    />
                            </label>
                            <span class="px-2 py-1 ms-2 rounded-pill text-bg-info fs-6">
                                <t t-esc="value.name"/>
                                <t t-if="value.price_extra.display_price">
                                    + <t t-esc="selfOrder.formatMonetary(value.price_extra.display_price)" />
                                </t>
                            </span>
                        </li>
                    </ul>
                </div>
                <div t-elif="attribute.display_type === 'multi'">
                    <div t-foreach="attribute.values" t-as="value" t-key="value.id" t-att-value="value.id" class="d-flex align-items-center my-2">
                        <input type="checkbox"
                            t-att-id="value.id"
                            t-att-name="value.name"
                            t-model="state.selectedValues[attribute.id][value.id]"
                            t-att-checked="state.selectedValues[attribute.id][value.id]"
                            t-att-disabled="disableAttributes"/>
                        <label t-att-for="value.id" class="ms-2" t-esc="value.name" />
                        <div class="px-2 py-1 ms-2 rounded-pill text-bg-info fs-6">
                            <t t-if="value.price_extra.lst_price">
                                + <t t-esc="selfOrder.formatMonetary(value.price_extra.display_price)" />
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </t>
</templates>
