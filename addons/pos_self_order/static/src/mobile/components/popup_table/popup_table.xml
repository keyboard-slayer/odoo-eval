<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_self_order.PopupTable">
        <div class="position-absolute bg-dark bg-opacity-25 w-100 h-100 fixed-top" />
        <div class="o_page_content o_self-popup-table container-md position-absolute d-flex justify-content-between flex-column fixed-bottom w-100 p-4 bg-white shadow-lg ">
            <div class="row">
                <div class="col-12 col-md-8 mx-auto col-lg-4 text-start text-md-center">
                    <div>
                        <h3>Confirm your table</h3>
                        <span>to place the order</span>
                    </div>
                    <div class="position-absolute top-0 end-0 m-3">
                        <button class="btn rounded" t-on-click="close">
                            <i class="fa fa-times"/>
                        </button>
                    </div>
                    <select class="form-select form-select-lg my-3" t-model="state.selectedTable">
                        <t t-foreach="availableFloor" t-as="floor" t-key="floor.id">
                            <option value="floor" disabled="true">
                                <t t-esc="floor.name" />
                            </option>
                            <option t-foreach="floor.tables" t-as="table" t-key="table.id" t-att-value="table.id">
                                <t t-esc="table.name" />
                            </option>
                        </t>
                    </select>
                    <a
                        type="button"
                        t-on-click="() => this.setTable()"
                        class="btn btn-primary w-100 w-md-50 py-3 my-2">
                        Confirm
                    </a>
                </div>
            </div>
        </div>
    </t>
</templates>
