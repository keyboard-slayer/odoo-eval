<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_self_order.ProductCard" owl="1">
        <button class="o_kiosk_product_card product-item btn btn-light d-flex flex-column p-3 m-0 overflow-hidden border fw-bolder"
            t-on-click="selectProduct"
            t-ref="selfProductCard">
            <img
                class="o_self_order_item_card_image w-100 rounded bg-view"
                t-attf-src="/menu/get-image/{{ props.product.id }}/512?unique={{props.product.write_date}}"
                alt="Product image"
                loading="lazy"
                onerror="this.remove()" />
            <div class="product-infos d-flex flex-column justify-content-between text-start flex-grow-1 px-2 mt-3 mb-1">
                <span t-esc="props.product.name" class="fs-3 fw-bolder lh-sm" />
                <span t-esc="selfOrder.formatMonetary(props.product.prices)" class="fs-4 text-muted flex-grow-1" />
            </div>
        </button>
    </t>
</templates>
