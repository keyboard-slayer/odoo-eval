<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_self_order.selfOrderIndex" owl="1">
        <Router pos_config_id="selfOrder.pos_config_id">
            <t t-set-slot="default" route="`/kiosk/${selfOrder.pos_config_id}`">
                <LandingPage />
            </t>
            <t t-set-slot="closed" route="`/kiosk/${selfOrder.pos_config_id}/closed`">
                <Closed />
            </t>
            <t t-set-slot="payment_success" route="`/kiosk/${selfOrder.pos_config_id}/payment_success`">
                <PaymentSuccess />
            </t>
            <t t-set-slot="product_list" route="`/kiosk/${selfOrder.pos_config_id}/products`">
                <ProductList />
            </t>
            <t t-set-slot="location" route="`/kiosk/${selfOrder.pos_config_id}/location`">
                <EatingLocation />
            </t>
            <t t-set-slot="product" route="`/kiosk/${selfOrder.pos_config_id}/product/{int:id}`" t-slot-scope="url">
                <Product product="selfOrder.productByIds[url.id]" />
            </t>
            <t t-set-slot="combo" route="`/kiosk/${selfOrder.pos_config_id}/combo/{int:id}`" t-slot-scope="url">
                <Combo product="selfOrder.productByIds[url.id]" />
            </t>
            <t t-set-slot="cart" route="`/kiosk/${selfOrder.pos_config_id}/cart`">
                <OrderCart />
            </t>
            <t t-set-slot="stand_number" route="`/kiosk/${selfOrder.pos_config_id}/stand_number`">
                <StandNumber />
            </t>
            <t t-set-slot="payment" route="`/kiosk/${selfOrder.pos_config_id}/payment`">
                <Payment />
            </t>
        </Router>
        <MainComponentsContainer />
    </t>
</templates>
