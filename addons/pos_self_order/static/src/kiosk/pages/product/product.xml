<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_self_order.Product" owl="1">
        <KioskTemplate hideFooterBorder="state.showQtyButtons">
            <t t-set-slot="header">
            </t>
            <t t-set-slot="content">
                <div class="d-flex flex-column h-100">
                    <div class="d-flex flex-row align-content-flex-start py-4 px-3 gap-3">
                        <div class="border bg-white p-3 w-100 d-flex align-tems-top rounded">
                            <img
                                class="o_self_order_item_card_image w-25 py-2 ratio ratio-1x1 rounded"
                                style="object-fit: contain;"
                                t-attf-src="/menu/get-image/{{ product.id }}/512?unique={{product.write_date}}"
                                alt="Product image"
                                loading="lazy"
                                onerror="this.remove()" />
                            <div class="d-flex flex-column flex-grow-1 w-75 justify-content-start p-4 rounded overflow-auto">
                                <h1 class="fw-bolder" t-esc="product.name"/>
                                <span t-if="product.description_sale"
                                    class="o_self_order_main_desc flex-grow-1 pb-3 mb-3 bg-view text-muted "
                                    t-esc="product.description_sale"
                                />
                                <span class="fs-3 fw-bolder" t-esc="selfOrder.formatMonetary(product.prices)"/>
                            </div>
                        </div>
                    </div>

                    <div class="flex-grow-1 px-3 overflow-y-auto">
                        <AttributeSelection
                        t-if="attributeSelection"
                        product="product"
                        productState="state"/>
                    </div>
                    <div t-if="state.showQtyButtons" class="d-flex flex-column justify-content-center align-items-center pt-4 pb-3 bg-view border-top">
                        <div class="o_self_order_incr_button d-flex flex-row text-center border-light mb-1" role="group" aria-label="Quantity select">
                            <button type="button"
                                t-on-click = "() => this.changeQuantity(false)"
                                class="btn btn-secondary px-5 py-3 fs-1 "> - </button>
                            <div class="o_kiosk_tab_numbers d-flex align-items-center px-3 fs-1 fw-bold" t-esc="state.qty"/>
                            <button type="button"
                                t-on-click = "() => this.changeQuantity(true)"
                                class="btn btn-secondary px-5 py-3 fs-1 "> + </button>
                        </div>
                    </div>
                </div>
            </t>
            <t t-set-slot="footer">
                <div class="d-flex justify-content-between gap-3">
                    <button class="btn btn-secondary flex-basis-50 text-uppercase" t-on-click="back">Discard</button>
                    <button t-if="state.showQtyButtons and !props.onValidate" class="btn btn-primary flex-basis-50 text-uppercase" t-on-click="addToCart">Add to cart</button>

                    <!-- Disabled placeholder, workaround to handle 'props.onValidate' -->
                    <button t-else="" class="btn btn-primary disabled flex-basis-50 text-uppercase">Add to cart</button>
                </div>
            </t>
        </KioskTemplate>
    </t>
</templates>
