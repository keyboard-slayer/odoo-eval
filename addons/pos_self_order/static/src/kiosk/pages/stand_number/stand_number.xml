<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_self_order.StandNumber" owl="1">
        <KioskTemplate headerHeight="0" contentHeight="90" footerHeight="10">
            <t t-set-slot="content">
                <div class="h-100 o_kiosk-stand_number">
                    <div class="d-flex flex-column justify-content-between h-100">
                        <div class="h-100 d-flex flex-column justify-content-center align-items-center">
                            <h1>Pick a plate and write your number here</h1>
                            <div class="input-number w-50 py-3 px-5 mt-5 text-center rounded border border-dark">
                                <span t-esc="tableInput" class="fs-1" />
                            </div>
                        </div>
                        <div class="numpad row row-cols-3 h-50">
                            <Numpad class="'flex-grow-1 h-100 fs-1'" buttons="numpadButtons" onClick.bind="numberClick" />
                        </div>
                    </div>
                </div>
            </t>
            <t t-set-slot="footer">
                <div class="d-flex flex-row h-100 w-100 gap-3">
                    <button class="btn btn-secondary h-100 w-100 p-0 m-0 fs-2 text-uppercase" t-on-click="() => this.router.back()">Back</button>
                    <button class="btn btn-primary h-100 w-100 p-0 m-0 fs-2 text-uppercase" t-on-click="confirm">Pay</button>
                </div>
            </t>
        </KioskTemplate>
    </t>
</templates>
