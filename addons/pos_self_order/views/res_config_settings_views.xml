<?xml version="1.0"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos_self_order</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
        <!-- TODO: we should add a short tutorial explaining what the self order feature does -->
            <div id="warning_text_pos_self_order" position="replace"/>
                <setting id="pos_module_pos_self_order" position="inside">
                    <div class="content-group" attrs="{'invisible': [('pos_module_pos_self_order','=',False)]}">
                        <div class="mt16">
                            <label string="Order at:" for="pos_self_order_location" class="o_light_label me-1"/>
                            <field name="pos_self_order_location"/>
                            <!-- TODO: i think the name of this button is not very intuitive -->
                            <button type="action" name="pos_self_order.custom_link_action" string="Configure navigation buttons"/>
                            <div attrs="{'invisible': [('pos_self_order_location','!=', 'table')]}">
                                <label string="Allow open tabs" for="pos_self_order_allow_open_tabs" class="o_light_label me-1"/>
                                <field name="pos_self_order_allow_open_tabs" widget="radio" help="asd"/>
                                <button type="object" name="generate_qr_codes_page" string="Print qr codes"/>
                            </div>
                        </div>
                    </div>
                </setting>
        </field>
    </record>
</odoo>
