<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
<t t-name="website.NewContentElement">
    <a href="#"
            t-on-click="onClick"
            t-attf-class="o_new_content_element btn btn-light d-flex flex-column align-items-center py-2 gap-1 rounded text-center {{props.status === MODULE_STATUS.NOT_INSTALLED ? 'o_uninstalled_module' : ''}}"
            t-att-title="props.title"
            t-att-aria-label="props.title"
            t-att-data-module-xml-id="props.moduleXmlId"
            t-att-name="props.name">
        <t t-slot="default"/>
    </a>
</t>

<t t-name="website.NewContentModal">
        <div class="popover start-100">
            <div class="popover-body row gap-3 m-0">
                <NewContentElement t-if="isDesigner"
                        name="'New Page'"
                        onClick="() => this.createNewPage()"
                        title="'New Page'">
                    <img src="/website/static/src/img/apps_thumbs/page.svg"/>
                    <small>Page</small>
                </NewContentElement>

                <t t-foreach="sortedNewContentElements" t-as="element" t-key="element.moduleXmlId" t-if="'isDisplayed' in element ? element.isDisplayed : isSystem ">
                    <NewContentElement onClick="() => this.onClickNewContent(element)"
                        status="element.status"
                        title="element.title"
                        moduleXmlId="element.moduleXmlId">
                        <t t-call="{{ element.icon }}"/>
                        <small t-esc="element.title"/>
                    </NewContentElement>
                </t>
            </div>
        </div>
</t>

<t t-name="website.NewContentSystray">
    <div class="o_menu_systray_item o_new_content_container position-relative d-none d-md-block" t-on-click="onClick">
        <a href="#" accesskey="c" class="o_nav_entry"><span class="fa fa-plus me-1"/>New</a>
        <NewContentModal t-if="websiteContext.showNewContentModal"/>
    </div>
</t>

<t t-name="website.InstallModuleDialog">
    <WebsiteDialog close="props.close"
        title="props.title"
        primaryTitle="installButton"
        primaryClick="() => this.onClickInstall()">
        <t t-esc="props.installationText"/>
    </WebsiteDialog>
</t>
</templates>
