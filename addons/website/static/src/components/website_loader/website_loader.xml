<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
<t t-name="website.website_loader">
    <div t-if="state.isVisible" class="o_website_loader_container fixed-top h-100 w-100 d-flex flex-column align-items-center justify-content-center text-center">
        <h1 class="text-reset" t-if="state.showWaitingMessages" t-out="currentWaitingMessage.title"/>
        <h1 class="text-reset" t-elif="state.title" t-out="state.title"/>
        <h1 class="text-reset" t-elif="state.showTips">Building your website...</h1>
        <h2 t-if="state.showWaitingMessages" t-out="currentWaitingMessage.description" class="o_website_loader_tip mb-0"/>
        <div class="o_website_loader my-4"/>
        <h3 class="o_website_loader_tip fw-normal">
            <t t-if="state.showTips">
                TIP: Once loaded, follow the
                <span class="o_tour_pointer o_bottom position-absolute mt-n2 ms-1">
                    <span class="o_tour_pointer_tip position-absolute"></span>
                </span>
                <br/>pointer to build the perfect page in 7 steps.
            </t>
        </h3>
        <div t-if="featuresInstallInfo.total > 0"
            class="o_website_loader_progress progress rounded-pill mt-3">
            <div role="progressbar" aria-label="Installing your features"
                class="progress-bar bg-success progress-bar-striped progress-bar-animated rounded-pill"
                t-att-aria-valuemax="featuresInstallInfo.total"
                t-att-aria-valuenow="featuresInstallInfo.nbInstalled"
                t-attf-style="width: #{featuresInstallInfo.nbInstalled * 100 / featuresInstallInfo.total}%"/>
        </div>
    </div>
</t>
</templates>
