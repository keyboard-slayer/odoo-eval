<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="website.WebsiteFormSelect">
        <WeSelect noPreview="true"
                  fieldName="field.name"
                  isSelect="true">
            <t t-set-slot="title"><t t-out="field.string"/></t>
            <t t-if="!field.required">
                <WeButton addActionField="'0'">None</WeButton>
            </t>
            <t t-foreach="field.records" t-as="el" t-key="el.id">
                <WeButton addActionField="`${el.id}`"><t t-out="el.display_name"/></WeButton>
            </t>
        </WeSelect>
    </t>
    <t t-name="website.WebsiteFormInput">
        <WeInput noPreview="true"
                 fieldName="field.name"
                 addActionField="true"
                 class="'o_we_large'">
            <t t-set-slot="title"><t t-out="field.string"/></t>
        </WeInput>
    </t>
    <!-- Form -->
    <t t-name="website.WebsiteFormEditor">
        <t t-if="!this.modelCantChange">
            <WeSelect noPreview="true">
                <t t-set-slot="title">Action</t>
                <t t-foreach="this.models" t-as="el" t-key="el.id">
                    <WeButton selectAction="el.id">
                        <t t-out="el.website_form_label"/>
                    </WeButton>
                </t>
            </WeSelect>
            <t t-if="this.state.formInfo?.fields" t-foreach="this.state.formInfo?.fields or []" t-as="field" t-key="field.id">
                <t t-if="field.type === 'many2one'">
                    <t t-call="website.WebsiteFormSelect">
                        <t t-set="field" t-value="field"/>
                    </t>
                </t>
                <t t-elif="field.type === 'char'">
                    <t t-call="website.WebsiteFormInput">
                        <t t-set="field" t-value="field"/>
                    </t>
                </t>
            </t>
        </t>
        <WeSelect name="'field_mark_select'">
            <t t-set-slot="title">Marked Fields</t>
            <WeButton selectClass="''">None</WeButton>
            <WeButton selectClass="'o_mark_required'" name="'form_required_opt'">Required</WeButton>
            <WeButton selectClass="'o_mark_optional'" name="'form_optional_opt'">Optional</WeButton>
        </WeSelect>
        <WeInput setMark="true" dependencies="['form_required_opt', 'form_optional_opt']">
            <t t-set-slot="title">Mark Text</t>
        </WeInput>
        <WeInput selectStyle="''" cssProperty="'width'"
                 unit="'px'" applyTo="'.s_website_form_label'">
                <t t-set-slot="title">Labels Width</t>
        </WeInput>
        <WeRow>
            <WeSelect noPreview="true">
                <t t-set-slot="title">On Success</t>
                <WeButton onSuccess="'nothing'">Nothing</WeButton>
                <WeButton onSuccess="'redirect'" name="'show_redirect_opt'">Redirect</WeButton>
                <WeButton onSuccess="'message'" name="'show_message_opt'">Show Message</WeButton>
            </WeSelect>
            <WeButton class="'fa fa-fw fa-eye align-self-end'"
                      t-on-click="_onToggleEndMessageClick"
                      name="'message_opt'"
                      dependencies="['show_message_opt']">
                    Edit Message
            </WeButton>
        </WeRow>
        <!-- TODO URL PICKER + ReCaptcha -->
<!--        <we-urlpicker string="URL" data-select-data-attribute="/contactus-thank-you" data-attribute-name="successPage" name="'url_opt'" data-dependencies="show_redirect_opt"/>-->
<!--        <t t-set="recaptcha_public_key" t-value="request.env['ir.config_parameter'].sudo().get_param('recaptcha_public_key')"/>-->
<!--        <we-checkbox t-if="recaptcha_public_key" string="Show reCaptcha Policy" data-toggle-recaptcha-legal="" noPreview="true"/>-->
    </t>

    <!-- Add Field Form -->
    <t t-name="website.AddFieldForm">
            <WeButton class="'o_we_bg_brand_primary'"
                       addField="true"
                       noPreview="true">
                <span data-tooltip="Add a new field at the end">+ Field</span>
            </WeButton>
    </t>

    <!-- Add Field -->
    <t t-name="website.AddField">
        <WeButton class="'o_we_bg_brand_primary'"
                   addField="true"
                   noPreview="true">
            <span data-tooltip="Add a new field after this one">+ Field</span>
        </WeButton>
    </t>

