<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template name="Blockquote" id="s_blockquote">
    <blockquote class="s_blockquote s_blockquote_minimalist s_blockquote_small o_cc o_cc2 o_animable position-relative d-flex flex-column gap-3 w-100 mx-auto p-4 fst-normal">
        <div class="s_blockquote_minimalist_border position-absolute top-50 start-0 translate-middle-y h-100 bg-primary"/>
        <i class="s_blockquote_icon fa fa-quote-right bg-o-color-1 position-absolute top-0 start-50 translate-middle rounded"/>
        <lead class="s_blockquote_quote my-auto fw-normal">" Write a quote here from one of your customers. Quotes are a great way to build confidence in your products or services. "</lead>
        <div class="s_blockquote_infos d-flex gap-3 w-100">
            <img src="/web/image/website.s_blockquote_default_image" class="s_blockquote_avatar img rounded-circle border border-white shadow-sm" alt=""/>
            <div class="s_blockquote_author d-flex flex-column justify-content-center small">
                <strong>Paul Dawson</strong>
                <span class="text-muted">CEO of MyCompany</span>
            </div>
        </div>
    </blockquote>
</template>

<template id="s_blockquote_options" inherit_id="website.snippet_options">
    <xpath expr="." position="inside">
        <!-- Layout -->
        <div data-js="Blockquote" data-selector=".s_blockquote">
            <we-select string="Style">
                <we-button data-select-class="s_blockquote_card o_cc o_cc1" data-display="card">Default</we-button>
                <we-button data-select-class="s_blockquote_minimalist o_cc o_cc2" data-display="minimalist" data-name="blockquote_minimalist_opt">Minimalist</we-button>
                <we-button data-select-class="s_blockquote_centered o_cc o_cc2" data-display="centered" data-name="blockquote_simple_opt">Centered</we-button>
            </we-select>
            <we-button-group string="Size">
                <we-button data-select-class="s_blockquote_small p-4" data-display="card">Small</we-button>
                <we-button data-select-class="s_blockquote_large p-5" data-display="minimalist" data-name="blockquote_minimalist_opt">Large</we-button>
            </we-button-group>
        </div>

        <!-- Color and images -->
        <t t-call="website.snippet_options_background_options">
            <t t-set="selector" t-value="'.s_blockquote'"/>
            <t t-set="with_colors" t-value="True"/>
        </t>

        <!-- Border color for minimalist style -->
        <t t-call="website.snippet_options_background_options">
            <t t-set="selector" t-value="'.s_blockquote'"/>
            <t t-set="target" t-value="'.s_blockquote_minimalist_border'"/>
            <t t-set="with_colors" t-value="True"/>

            <xpath expr="//we-title" position="attributes">
                <attribute class="string" add="Heeeey"/>
            </xpath>
        </t>

        <!-- Border and Shadow-->
        <div data-js="Box" data-selector=".s_blockquote">
            <t t-call="website.snippet_options_border_widgets"/>
            <t t-call="website.snippet_options_shadow_widgets"/>
        </div>
    </xpath>
</template>

<record id="website.s_blockquote_000_scss" model="ir.asset">
    <field name="name">Blockquote 000 SCSS</field>
    <field name="bundle">web.assets_frontend</field>
    <field name="path">website/static/src/snippets/s_blockquote/000.scss</field>
</record>

</odoo>
