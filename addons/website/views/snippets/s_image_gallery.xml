<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template id="s_image_gallery" name="Image Gallery">
    <section class="s_image_gallery o_slideshow s_image_gallery_show_indicators s_image_gallery_indicators_dots s_image_gallery_indicators_arrows_boxed pt24 pb24" data-vcss="001" data-columns="3">
        <div class="o_container_small overflow-hidden">
            <div id="slideshow_sample" class="carousel slide d-flex flex-column" data-bs-ride="true">
                <div class="carousel-inner" style="padding: 0;">
                    <div class="carousel-item h-100 active">
                        <img class="img img-fluid d-block w-100 h-100 rounded object-fit-cover" src="/web/image/website.library_image_08" data-name="Image" data-index="0" alt=" "/>
                    </div>
                    <div class="carousel-item h-100">
                        <img class="img img-fluid d-block w-100 h-100 rounded object-fit-cover" src="/web/image/website.library_image_03" data-name="Image" data-index="1" alt=" "/>
                    </div>
                    <div class="carousel-item h-100">
                        <img class="img img-fluid d-block w-100 h-100 rounded object-fit-cover" src="/web/image/website.library_image_02" data-name="Image" data-index="2" alt=" "/>
                    </div>
                    <a class="carousel-control-prev o_we_no_overlay o_not_editable" href="#slideshow_sample" data-bs-slide="prev" aria-label="Previous" title="Previous">
                        <span class="oi oi-chevron-left py-4 text-white"/>
                        <span class="visually-hidden">Previous</span>
                    </a>
                    <a class="carousel-control-next o_we_no_overlay o_not_editable" href="#slideshow_sample" data-bs-slide="next" aria-label="Next" title="Next">
                        <span class="oi oi-chevron-right py-4 text-white"/>
                        <span class="visually-hidden">Next</span>
                    </a>
                </div>
                <ul class="carousel-indicators">
                    <li class="o_indicators_left text-center d-none" aria-label="Previous" title="Previous">
                        <i class="oi oi-chevron-left"/>
                    </li>
                    <li data-bs-target="#slideshow_sample" data-bs-slide-to="0" style="background-image: url(/web/image/website.library_image_08)" class="active"/>
                    <li data-bs-target="#slideshow_sample" data-bs-slide-to="1" style="background-image: url(/web/image/website.library_image_03)"/>
                    <li data-bs-target="#slideshow_sample" data-bs-slide-to="2" style="background-image: url(/web/image/website.library_image_02)"/>
                    <li class="o_indicators_right text-center d-none" aria-label="Next" title="Next">
                        <i class="oi oi-chevron-right"/>
                    </li>
                </ul>
            </div>
        </div>
    </section>
</template>

<template id="s_images_wall" name="Images Wall">
    <section class="s_image_gallery o_spc-medium o_masonry pt24 pb24" data-vcss="001" data-columns="3" style="overflow: hidden;">
        <div class="container">
            <div class="row s_nb_column_fixed">
                <div class="o_masonry_col o_snippet_not_selectable col-lg-4">
                    <img class="img img-fluid d-block rounded" src="/web/image/website.library_image_03" data-index="0" data-name="Image" alt=" "/>
                    <img class="img img-fluid d-block rounded" src="/web/image/website.library_image_10" data-index="3" data-name="Image" alt=" "/>
                </div>
                <div class="o_masonry_col o_snippet_not_selectable col-lg-4">
                    <img class="img img-fluid d-block rounded" src="/web/image/website.library_image_13" data-index="1" data-name="Image" alt=" "/>
                    <img class="img img-fluid d-block rounded" src="/web/image/website.library_image_05" data-index="4" data-name="Image" alt=" "/>
                </div>
                <div class="o_masonry_col o_snippet_not_selectable col-lg-4">
                    <img class="img img-fluid d-block rounded" src="/web/image/website.library_image_14" data-index="2" data-name="Image" alt=" "/>
                    <img class="img img-fluid d-block rounded" src="/web/image/website.library_image_16" data-index="5" data-name="Image" alt=" "/>
                </div>
            </div>
        </div>
    </section>
</template>

<template id="s_image_gallery_options" inherit_id="website.snippet_options">
    <xpath expr="//t[@t-call='website.snippet_options_background_options']" position="before">
        <div data-js="GalleryImageList" data-selector=".s_image_gallery">
            <we-row string="Images">
                <we-button class="o_we_bg_success" data-add-images="true" data-no-preview="true">Add</we-button>
                <we-button class="o_we_bg_danger" data-remove-all-images="true" data-no-preview="true">Remove all</we-button>
            </we-row>
        </div>
    </xpath>
    <xpath expr="." position="inside">
        <div data-js="gallery" data-selector=".s_image_gallery">
            <we-select string="Mode" data-dependencies="!slideshow_mode_opt">
                <we-button data-mode="grid" data-name="grid_mode_opt">Grid</we-button>
                <we-button data-mode="masonry" data-name="masonry_mode_opt">Masonry</we-button>
                <we-button data-mode="nomode">Float</we-button>

                <!-- Hidden option -->
                <we-button data-mode="slideshow" data-name="slideshow_mode_opt">Slideshow</we-button>
            </we-select>
            <we-input string="Speed"
                data-dependencies="slideshow_mode_opt"
                data-apply-to=".carousel:first"
                data-select-data-attribute="0s" data-attribute-name="bsInterval"
                data-unit="s" data-save-unit="ms" data-step="0.1"/>
            <we-select string="Columns" data-dependencies="masonry_mode_opt, grid_mode_opt">
                <we-button data-columns="1">1</we-button>
                <we-button data-columns="2">2</we-button>
                <we-button data-columns="3">3</we-button>
                <we-button data-columns="4">4</we-button>
                <we-button data-columns="6">6</we-button>
                <we-button data-columns="12">12</we-button>
            </we-select>
            <we-range string="Images Spacing"
                data-dependencies="!slideshow_mode_opt"
                data-select-class="o_spc-none|o_spc-small|o_spc-medium|o_spc-big"/>
            <we-select string="Arrows" data-dependencies="slideshow_mode_opt">
                <we-button data-select-class="">Default</we-button>
                <we-button data-select-class="s_image_gallery_indicators_arrows_boxed">Boxed</we-button>
                <we-button data-select-class="s_image_gallery_indicators_arrows_rounded">Rounded</we-button>
                <we-button data-select-class="s_image_gallery_indicators_arrows_transparent">Rounded transparent</we-button>
            </we-select>
            <we-button-group string="Position" class="o_we_sublevel_1">
                <we-button data-select-class="">Middle</we-button>
                <we-button data-select-class="s_image_gallery_arrows_bottom">Bottom</we-button>
            </we-button-group>
            <we-select string="Indicators" data-dependencies="slideshow_mode_opt">
                <we-button data-select-class="" data-name="slideshow_no_indicators">None</we-button>
                <we-button data-select-class="s_image_gallery_show_indicators s_image_gallery_indicators_dots">Dots</we-button>
                <we-button data-select-class="s_image_gallery_show_indicators">Squared Miniatures</we-button>
                <we-button data-select-class="s_image_gallery_show_indicators s_image_gallery_indicators_rounded">Rounded Miniatures</we-button>
            </we-select>
            <we-button-group string="Position" class="o_we_sublevel_1" data-dependencies="!slideshow_no_indicators">
                <we-button data-select-class="">Inside</we-button>
                <we-button data-select-class="s_image_gallery_indicators_outside">Outside</we-button>
            </we-button-group>
            <t t-call="website.snippet_options_border_widgets">
                <t t-set="apply_to" t-valuef="img"/>
                <t t-set="so_rounded_no_dependencies" t-value="true"/>
            </t>
        </div>
        <div data-js="gallery_img" data-selector=".s_image_gallery img"></div>
    </xpath>
</template>

<record id="website.s_image_gallery_000_js" model="ir.asset">
    <field name="name">Image gallery 000 JS</field>
    <field name="bundle">web.assets_frontend</field>
    <field name="path">website/static/src/snippets/s_image_gallery/000.js</field>
</record>

