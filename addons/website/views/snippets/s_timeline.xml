<?xml version="1.0" encoding="utf-8"?>
<odoo>

<template name="Timeline" id="s_timeline">
    <section class="s_timeline pt48 pb48">
        <div class="o_container_small">
            <div class="text-center mb-4">
                <h3>Latest news</h3>
                <p class="lead">Highlight your history, showcase growth and key milestones.</p>
            </div>
            <div class="position-relative ms-3 ms-md-0">
                <div class="s_timeline_line position-absolute top-0 bottom-0 d-block"/>
                <div class="s_timeline_row position-relative d-flex align-items-start w-100 w-md-auto mb-5">
                    <div class="s_timeline_dot o_not_editable position-absolute translate-middle-x">
                        <div class="p-2 bg-primary-light rounded-circle"/>
                    </div>
                    <div class="s_timeline_content">
                        <div class="s_timeline_card s_card card align-items-end my-0 border-0 bg-transparent text-end" data-name="Card" data-snippet="s_card">
                            <small class="text-muted">2019</small>
                            <h4 class="card-title">Your title</h4>
                            <p class="card-text">A timeline is a graphical representation on which important events are marked.</p>
                            <a href="#" class="btn btn-primary">See more</a>
                        </div>
                    </div>
                    <div class="s_timeline_content"/>
                </div>
                <div class="s_timeline_row position-relative d-flex align-items-start w-100 w-md-auto mb-5">
                    <div class="s_timeline_dot o_not_editable position-absolute translate-middle-x">
                        <div class="p-2 bg-primary-light rounded-circle"/>
                    </div>
                    <div class="s_timeline_content"/>
                    <div class="s_timeline_content">
                        <div class="s_timeline_card s_card card align-items-start my-0 border-0 bg-transparent text-start" data-name="Card" data-snippet="s_card">
                            <small class="text-muted">2018</small>
                            <h4 class="card-title">Your title</h4>
                            <p class="card-text">You can edit and switch the timeline contents to fit your needs.</p>
                            <a href="#" class="btn btn-primary">See more</a>
                        </div>
                    </div>
                </div>
                <div class="s_timeline_row position-relative d-flex align-items-start w-100 w-md-auto mb-5">
                    <div class="s_timeline_dot o_not_editable position-absolute translate-middle-x">
                        <div class="p-2 bg-primary-light rounded-circle"/>
                    </div>
                    <div class="s_timeline_content">
                        <div class="s_timeline_card s_card card align-items-end my-0 border-0 bg-transparent text-end" data-name="Card" data-snippet="s_card">
                            <small class="text-muted">2015</small>
                            <h4 class="card-title">Your title</h4>
                            <p class="card-text">Use this timeline as a part of your resume, to show your visitors what you've done in the past.</p>
                            <a href="#" class="btn btn-primary">See more</a>
                        </div>
                    </div>
                    <div class="s_timeline_content"/>
                </div>
            </div>
        </div>
    </section>
</template>

<template id="s_timeline_options" inherit_id="website.snippet_options">
    <xpath expr="//t[@t-call='website.snippet_options_background_options']" position="before">
        <div data-js="MultipleItems" data-selector=".s_timeline">
            <we-row string="Date">
                <we-button data-add-item="" data-item=".s_timeline_row:first" data-select-item="" data-add-before="true" data-no-preview="true" class="o_we_bg_brand_primary">
                    Add Date
                </we-button>
            </we-row>
        </div>
    </xpath>
    <xpath expr="." position="inside">
        <div data-selector=".s_timeline_row" data-drop-near=".s_timeline_row"/>
        <div data-js="Timeline" data-selector=".s_timeline_card">
            <we-button data-timeline-card="" data-no-preview="true" class="o_we_overlay_opt"><i class="fa fa-fw fa-angle-left"/><i class="fa fa-fw fa-angle-right"/></we-button>
        </div>
        <div data-selector=".s_timeline">
            <we-colorpicker string="Line Color" data-select-style="true" data-css-property="border-color" data-color-prefix="border-" data-apply-to=".s_timeline_line"/>
        </div>
    </xpath>
    <xpath expr="//div[@data-js='SnippetMove'][contains(@data-selector,'section')]" position="attributes">
        <attribute name="data-selector" add=".s_timeline_row" separator=","/>
    </xpath>
    <xpath expr="//div[@id='so_block_align']" position="replace">
        <div data-selector=".s_timeline_card">
            <we-button-group string="Text alignment">
                <we-button title="Left" data-select-class="align-items-start text-start">Left</we-button>
                <we-button title="Right" data-select-class="align-items-end text-end">Right</we-button>
            </we-button-group>
        </div>
    </xpath>
    <xpath expr="//div[@id='so_width']" position="replace"/>
</template>

<record id="website.s_timeline_000_scss" model="ir.asset">
    <field name="name">Timeline 000 SCSS</field>
    <field name="bundle">web.assets_frontend</field>
    <field name="path">website/static/src/snippets/s_timeline/000.scss</field>
</record>

</odoo>
