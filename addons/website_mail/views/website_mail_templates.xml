<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="follow">
        <div t-attf-class="js_follow #{request.env.user.has_group('base.group_public') and 'input-group'} #{div_class}" t-att-data-id="object.id"
                  t-att-data-object="object._name"
                  t-att-data-follow="object.id and object.message_is_follower and 'on' or 'off'"
                  t-att-data-unsubscribe="'unsubscribe' if 'unsubscribe' in request.params else None">
            <input
                  type="email" name="email"
                  class="js_follow_email form-control"
                  placeholder="your email..."
                  groups="base.group_public"/>
            <div t-if="icons_design and not request.env.user.has_group('base.group_public')" class="js_follow_icons_container">
                <button class="btn text-reset js_unfollow_btn">
                    <i class="fa fa-fw px-1 fa-minus-circle" data-bs-toggle="tooltip" data-bs-placement="top" title="Unfollow"/>
                </button>
                <button class="btn text-reset js_follow_btn">
                    <i class="fa fa-fw fa-plus-circle" data-bs-toggle="tooltip" data-bs-placement="top" title="Follow"/>
                </button>
            </div>
            <t t-else="">
                <button href="#" t-attf-class="btn btn-primary js_unfollow_btn"><i class="fa fa-fw fa-check me-1"/>Following</button>
                <button href="#" t-attf-class="btn btn-outline-primary js_follow_btn">Follow</button>
            </t>
        </div>
    </template>
</odoo>
