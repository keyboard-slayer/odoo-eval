<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form_2c2p" model="ir.ui.view">
        <field name="name">2C2P Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group invisible="code != '2c2p'">
                    <field name="tctp_secret_key"
                           string="Secret Key"
                           required="code == '2c2p' and state != 'disabled'"
                           password="True"
                    />
                    <field name="tctp_merchant_id"
                           string="Merchant ID"
                           required="code == '2c2p' and state != 'disabled'"
                           password="True"
                    />
                </group>
            </group>
        </field>
    </record>

</odoo>
