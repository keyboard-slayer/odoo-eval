<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Spreadsheet revisions -->
    <record id="spreadsheet_server_function_action" model="ir.actions.act_window">
        <field name="name">Server functions</field>
        <field name="res_model">spreadsheet.server.function</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="spreadsheet_server_function_view_search" model="ir.ui.view">
        <field name="name">spreadsheet.server.function search view</field>
        <field name="model">spreadsheet.server.function</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="spreadsheet_server_function_view_tree" model="ir.ui.view">
        <field name="name">spreadsheet.server.function list view</field>
        <field name="model">spreadsheet.server.function</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="description"/>
                <!-- <field name="arg_ids"/> -->
            </tree>
        </field>
    </record>

    <!-- Technical / Spreadsheet -->
    <menuitem id="menu_technical_spreadsheet"
        name="Spreadsheet"
        sequence="5"
        parent="base.menu_custom"/>

    <menuitem id="menu_technical_spreadsheet_server_function"
        name="Server functions"
        parent="menu_technical_spreadsheet" sequence="10"
        action="spreadsheet_server_function_action"/>
</odoo>
