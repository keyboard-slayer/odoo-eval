<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="l10n_hu_edi_credentials_tree" model="ir.ui.view">
        <field name="name">l10n_hu_edi.credentials.tree</field>
        <field name="model">l10n_hu_edi.credentials</field>
        <field name="arch" type="xml">
            <tree string="NAV Credentials" decoration-success="is_primary" decoration-muted="not is_active">
                <field name="is_primary" invisible="1"/>
                <field name="vat"/>
                <field name="username"/>
                <field name="mode"/>
                <field name="is_active" widget="boolean_toggle"/>
                <button type="object" name="button_set_primary" string="Use" attrs="{'invisible': ['|', ('is_active', '=', False), ('is_primary', '=', True)]}"/>
            </tree>
        </field>
    </record>

    <record id="l10n_hu_edi_credentials_form" model="ir.ui.view">
        <field name="name">l10n_hu_edi.credentials.form</field>
        <field name="model">l10n_hu_edi.credentials</field>
        <field name="arch" type="xml">
            <form string="NAV Credentials">
                <header>
                    <button name="test" type="object" string="Test" class="oe_highlight"/>
                </header>
                <sheet>
                    <group>
                        <field name="company_id" invisible="1"/>
                        <field name="vat" string="Company VAT number" readonly="1"/>
                        <field name="mode"/>
                        <field name="username"/>
                        <field name="password" password="True"/>
                        <field name="signature_key"/>
                        <field name="replacement_key"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>