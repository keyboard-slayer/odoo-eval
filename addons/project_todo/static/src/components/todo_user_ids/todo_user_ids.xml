<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="todo.TodoMany2ManyTagsAvatarUserField" t-inherit="web.Many2ManyTagsAvatarField" t-inherit-mode="primary">
        <TagsList position="attributes">
            <attribute name="t-if">!env.isSmall</attribute>
        </TagsList>
        <xpath expr="//div[@t-if='showM2OSelectionField']" position="attributes">
            <attribute name="t-if">showM2OSelectionField and !env.isSmall</attribute>
        </xpath>
        <xpath expr="//Many2XAutocomplete" position="attributes">
            <attribute name="placeholder">placeholder</attribute>
        </xpath>
        <xpath expr="//div[@t-ref='many2ManyTagsField']" position="after">
            <a t-if="env.isSmall" t-on-click.stop.prevent="openPopover" href="#" title="Assign"
                aria-label="Assign" class="o_quick_assign fa fa-user-plus o_m2m_avatar btn-link d-flex align-items-center text-dark gap-2" role="button"/>
        </xpath>
    </t>
</templates>
