<?xml version="1.0" encoding="UTF-8" ?>
<odoo><data>
    <menuitem id="kanban_test_menu" name="Kanban Test" sequence="0"/>

    <!-- products -->
    <record id="kanban_test_product_kanban" model="ir.ui.view">
        <field name="name">kanban.test.product.kanban</field>
        <field name="model">product.template</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <progressbar field="activity_state" colors="{&quot;planned&quot;: &quot;success&quot;, &quot;today&quot;: &quot;warning&quot;, &quot;overdue&quot;: &quot;danger&quot;}"/>
                <aside>
                    <widget name="kanban_image" options="{'field': 'image_128'}"/>
                </aside>
                <section type="row" class="justify-content-between">
                    <field name="name" class="o_kanban_record_title"/>
                    <field name="is_favorite" widget="boolean_favorite" nolabel="1"/>
                </section>
                <section>
                    <div invisible="not default_code">
                        [<field name="default_code" on_change="1"/>]
                    </div>
                    <strong invisible="product_variant_count &lt; 2">
                        <field name="product_variant_count"/> Variants
                    </strong>
                    <field name="currency_id" invisible="1"/>
                    <div>Price: <field name="list_price" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                    </div>
                </section>
                <section>
                    <field name="categ_id" invisible="1" on_change="1"/>
                    <field name="product_properties" widget="properties"/>
                </section>
            </kanban>
        </field>
    </record>

    <record id="kanban_test_product_action" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <record id="kanban_test_product_action_kanban_view_link" model="ir.actions.act_window.view">
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="kanban_test_product_kanban"/>
        <field name="act_window_id" ref="kanban_test_product_action"/>
    </record>

    <menuitem id="kanban_test_product_menu_action" name="Products" parent="kanban_test_menu" action="kanban_test_product_action"/>


    <!-- partners -->
    <record id="kanban_test_partner_kanban" model="ir.ui.view">
        <field name="name">kanban.test.res.partner.kanban</field>
        <field name="model">res.partner</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="active" invisible="1"/>
                <field name="is_company" invisible="1" on_change="1"/>
                <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                <aside full="1">
                    <widget name="kanban_image" options="{'field': 'avatar_128', 'inner': 'parent_id'}"/>
                </aside>
                <section>
                    <field name="display_name" class="o_kanban_record_title"/>
                </section>
                <section>
                    <field name="category_id" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field invisible="not parent_id or function" name="parent_id" on_change="1"/>
                    <field invisible="parent_id or not function" name="function"/>
                    <div invisible="not parent_id or not function">
                        <field name="function"/> at <field name="parent_id" on_change="1"/>
                    </div>
                    <div invisible="not city and not country_id">
                        <field invisible="not city" name="city" on_change="1"/>
                        <span invisible="not city or not country_id">, </span>
                        <field invisible="not country_id" name="country_id" on_change="1"/>
                    </div>
                    <field name="email" on_change="1" class="text-truncate"/>
                </section>
                <section type="row" class="mt-auto">
                    <div class="btn-group flex-wrap">
                        <a invisible="meeting_count == 0" type="object" name="schedule_meeting">
                            <span class="badge rounded-pill">
                                <i class="fa fa-fw fa-calendar" aria-label="Meetings" role="img" title="Meetings"/>
                                <field name="meeting_count"/>
                            </span>
                        </a>
                        <a invisible="opportunity_count == 0" type="object" name="action_view_opportunity">
                            <span class="badge rounded-pill">
                                <i class="fa fa-fw fa-star" aria-label="Opportunities" role="img" title="Opportunities"/>
                                <field name="opportunity_count"/>
                            </span>
                        </a>
                        <a invisible="sale_order_count == 0" type="object" name="action_view_sale_order">
                            <span class="badge rounded-pill">
                                <i class="fa fa-fw fa-usd" role="img" aria-label="Sale orders" title="Sales orders"/>
                                <field name="sale_order_count"/>
                            </span>
                        </a>
                    </div>
                    <field name="activity_ids" widget="kanban_activity" class="ms-auto"/>
                </section>
            </kanban>
        </field>
    </record>

    <record id="kanban_test_partner_action" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <record id="kanban_test_partner_action_kanban_view_link" model="ir.actions.act_window.view">
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="kanban_test_partner_kanban"/>
        <field name="act_window_id" ref="kanban_test_partner_action"/>
    </record>


    <menuitem id="kanban_test_partner_menu_action" name="Contacts" parent="kanban_test_menu" action="kanban_test_partner_action"/>


    <!-- event -->
    <record id="kanban_test_event_kanban" model="ir.ui.view">
        <field name="name">kanban.test.event.event.kanban</field>
        <field name="model">event.event</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <kanban class="o_event_kanban_view" default_group_by="stage_id" quick_create_view="event.event_event_view_form_quick_create" sample="1">
                <aside full="1">
                    <field name="date_begin" invisible="1"/>
                    <field name="date_end" invisible="1"/>
                    <widget name="event_kanban_date"/>
                </aside>
                <section>
                    <field name="name" class="o_kanban_record_title"/>
                    <div class="d-flex gap-1">
                        <i class="fa fa-map-marker fa-fw mt-1" title="Location"/>
                        <div>
                            <field name="address_id"/>
                            <span invisible="address_id" class="ms-1">Online Event</span>
                        </div>
                    </div>
                    <div class="d-flex gap-1">
                        <i class="fa fa-group fa-fw mt-1" title="Attendees"/>
                        <div>
                            <field name="seats_taken"/>
                            Attendees
                        </div>
                    </div>
                </section>
                <section class="justify-content-between mt-auto" type="row">
                    <field name="activity_ids" widget="kanban_activity"/>
                    <div class="d-flex align-items-center">
                        <field name="kanban_state" widget="state_selection"/>
                        <field class="ps-1" name="user_id" widget="many2one_avatar_user"/>
                    </div>
                </section>
            </kanban>
        </field>
    </record>

    <record id="kanban_test_event_action" model="ir.actions.act_window">
        <field name="name">Events</field>
        <field name="res_model">event.event</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <record id="kanban_test_event_action_kanban_view_link" model="ir.actions.act_window.view">
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="kanban_test_event_kanban"/>
        <field name="act_window_id" ref="kanban_test_event_action"/>
    </record>


    <menuitem id="kanban_test_event_menu_action" name="Events" parent="kanban_test_menu" action="kanban_test_event_action"/>

    <!-- leads -->
    <record id="kanban_test_lead_kanban" model="ir.ui.view">
        <field name="name">kanban.test.crm.lead.kanban</field>
        <field name="model">crm.lead</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column o_opportunity_kanban" on_create="quick_create" quick_create_view="crm.quick_create_opportunity_form" archivable="false" color="color" sample="1">
                <field name="probability" invisible="1"/>
                <field name="active" invisible="1"/>
                <field name="company_currency" invisible="1"/>
                <widget name="web_ribbon" title="Lost" bg_color="text-bg-danger" invisible="probability &gt; 0 or active"/>
                <progressbar field="activity_state" colors="{&quot;planned&quot;: &quot;success&quot;, &quot;today&quot;: &quot;warning&quot;, &quot;overdue&quot;: &quot;danger&quot;}" sum_field="expected_revenue" recurring_revenue_sum_field="recurring_revenue_monthly" help="This bar allows to filter the opportunities based on scheduled activities."/>
                <header>
                    <button name="action_generate_leads" type="object" class="o_button_generate_leads" string="Generate Leads" display="always" invisible="context.get('active_model', 'crm.lead') != 'crm.lead'"/>
                </header>
                <menu>
                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                    <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                    <field name="color" widget="kanban_colorpicker"/>
                </menu>
                <section>
                    <field name="name" class="o_kanban_record_title"/>
                    <div>
                        <field name="expected_revenue" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                        <span invisible="not expected_revenue or not recurring_revenue"> + </span>
                        <field invisible="not recurring_revenue" class="me-1" name="recurring_revenue" widget="monetary" options="{'currency_field': 'company_currency'}"/>
                        <field invisible="not recurring_revenue" name="recurring_plan"/>
                    </div>
                    <field name="partner_id" on_change="1"/>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <field name="team_id" invisible="1" on_change="1"/>
                    <field name="lead_properties" widget="properties"/>
                </section>
                <section type="row" class="justify-content-between">
                    <div class="d-flex align-items-center gap-1">
                        <field name="priority" widget="priority"/>
                        <field name="activity_ids" widget="kanban_activity"/>
                    </div>
                    <field name="user_id" widget="many2one_avatar_user" domain="[('share', '=', False)]" on_change="1"/>
                </section>
            </kanban>
        </field>
    </record>

    <record id="kanban_test_lead_action" model="ir.actions.act_window">
        <field name="name">Leads</field>
        <field name="res_model">crm.lead</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <record id="kanban_test_lead_action_kanban_view_link" model="ir.actions.act_window.view">
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="kanban_test_lead_kanban"/>
        <field name="act_window_id" ref="kanban_test_lead_action"/>
    </record>


    <menuitem id="kanban_test_lead_menu_action" name="Leads" parent="kanban_test_menu" action="kanban_test_lead_action"/>

    <!-- tasks -->
    <record id="kanban_test_task_kanban" model="ir.ui.view">
        <field name="name">kanban.test.project.task.kanban</field>
        <field name="model">project.task</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage_id" class="o_kanban_small_column o_kanban_project_tasks" on_create="quick_create" quick_create_view="project.quick_create_task_form" default_order="priority desc, sequence, state, date_deadline asc, id desc" archivable="false" color="color" sample="1">
                <field name="active" invisible="1"/>
                <field name="displayed_image_id" invisible="1"/>
                <field name="subtask_count" invisible="1"/>
                <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                <progressbar field="state" colors="{&quot;1_done&quot;: &quot;success-done&quot;, &quot;1_canceled&quot;: &quot;danger&quot;, &quot;03_approved&quot;: &quot;success&quot;, &quot;02_changes_requested&quot;: &quot;warning&quot;, &quot;04_waiting_normal&quot;: &quot;info&quot;, &quot;01_in_progress&quot;: &quot;200&quot; }"/>
                <menu>
                    <a role="menuitem" type="set_cover" class="dropdown-item" data-field="displayed_image_id">Set Cover Image</a>
                    <a name="%(portal.portal_share_action)d" role="menuitem" type="action" class="dropdown-item" context="{'dialog_size': 'medium'}">Share Task</a>
                    <div role="separator" class="dropdown-divider"/>
                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                    <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                    <field name="color" widget="kanban_colorpicker"/>
                </menu>
                <section>
                    <field name="name" class="o_kanban_record_title"/>
                </section>
                <section>
                    <field name="parent_id" invisible="context.get('default_project_id', False)"/>
                    <field name="project_id" invisible="context.get('default_parent_id', False)"/>
                    <field name="partner_id" class="text-truncate d-block" />
                    <field name="milestone_id" options="{'no_open': True}"/>
                </section>
                <section name="dates">
                    <div invisible="not (planned_date_begin and date_deadline)">
                        <field name="planned_date_begin"/>
                        <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow" invisible="not planned_date_begin"/>
                        <field name="date_deadline"/>
                    </div>
                    <field name="date_deadline" widget="remaining_days" invisible="not date_deadline or planned_date_begin"/>
                </section>
                <section name="cover_image">
                    <field name="displayed_image_id" widget="attachment_image"/>
                </section>
                <section type="row" class="justify-content-between">
                    <div class="d-flex gap-1">
                        <field name="priority" widget="priority"/>
                        <field name="activity_ids" widget="kanban_activity"/>
                    </div>
                    <div invisible="not subtask_count" class="me-auto">
                        <widget name="subtask_counter"/>
                    </div>
                    <div class="d-flex gap-1">
                        <field name="user_ids" widget="many2many_avatar_user" domain="[('share', '=', False)]" />
                        <field name="state" widget="project_task_state_selection" options="{'is_toggle_mode': false}"/>
                    </div>
                </section>
            </kanban>
        </field>
    </record>

    <record id="kanban_test_task_action" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,form</field>
    </record>

    <record id="kanban_test_task_action_kanban_view_link" model="ir.actions.act_window.view">
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="kanban_test_task_kanban"/>
        <field name="act_window_id" ref="kanban_test_task_action"/>
    </record>


    <menuitem id="kanban_test_task_menu_action" name="Tasks" parent="kanban_test_menu" action="kanban_test_task_action"/>


</data></odoo>
