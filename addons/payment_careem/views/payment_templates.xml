<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="checkout" inherit_id="payment.checkout">
        <xpath expr="." position="inside">
            <t t-call="payment_careem.sdk_assets"/>
        </xpath>
    </template>

    <template id="manage" inherit_id="payment.manage">
        <xpath expr="." position="inside">
            <t t-call="payment_careem.sdk_assets"/>
        </xpath>
    </template>

    <template id="express_checkout" inherit_id="payment.express_checkout">
        <xpath expr="." position="inside">
            <t t-call="payment_careem.sdk_assets"/>
        </xpath>
    </template>

    <template id="sdk_assets">
        <script id="careemPayScript" src="https://one-click-js.careem-pay.com/v2/index.es.js" type="module"></script>
    </template>

</odoo>
