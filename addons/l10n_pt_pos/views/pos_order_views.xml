<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_pos_pos_form_pt" model="ir.ui.view">
        <field name="name">pos.order.form.view.inherit.pt</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
        <field name="arch" type="xml">
            <page name="extra" position="inside">
                <field name="country_code" invisible="1"/>
                <group string="Portugal" attrs="{'invisible': [('country_code','!=', 'PT')]}">
                    <field name="l10n_pt_pos_inalterable_hash"/>
                    <field name="l10n_pt_pos_atcud"/>
                </group>
            </page>
        </field>
    </record>
</odoo>
