<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('before-footer')]" position="after">
            <div t-if="receipt.is_country_portugal" class="receipt-inalterable-hash pos-receipt-center-align">
                <t t-if="!receipt.l10n_pt_pos_inalterable_hash">
                    This receipt is not valid.
                </t>
                <t t-else="">
                    ATCUD: <t t-esc="receipt.l10n_pt_pos_atcud"/>
                    <img id="pos_pt_qrcode" t-att-src="receipt.l10n_pt_pos_qr_code" class="pos-receipt-logo"/>
                </t>
            </div>
        </xpath>
    </t>
</templates>
