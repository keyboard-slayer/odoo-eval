<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('before-footer')]" position="after">
            <div t-if="receipt.isCountryPortugal" class="receipt-inalterable-hash pos-receipt-center-align">
                <div class="pos-receipt-order-data">
                    <t t-if="!receipt.l10nPtPosInalterableHash">
                        Este documento não serve de fatura<br/>
                        Emitido por programa certificado n.º TODO/AT
                    </t>
                    <t t-else="">
                        <img id="pos_pt_qrcode" t-att-src="receipt.l10nPtPosQrCode" class="pos-receipt-logo"/>
                        ATCUD: <t t-esc="receipt.l10nPtPosAtcud"/><br/>
                        <t t-esc="receipt.l10nPtPosInalterableHashShort"/> - Processado por programa certificado n.º TODO/AT
                    </t>
                </div>
            </div>
        </xpath>
    </t>
</templates>
