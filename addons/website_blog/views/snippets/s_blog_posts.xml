<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- Snippet -->
<template id="s_blog_posts" name="Blog Posts">
    <t t-call="website.s_dynamic_snippet_template">
        <t t-set="snippet_name" t-value="'s_blog_posts'"/>
        <t t-set="snippet_classes" t-value="'s_dynamic_snippet_blog_posts s_blog_post_big_picture s_blog_posts_effect_marley'"/>
    </t>
</template>

<!-- Load-time templates (rendered in JS on page load) -->
<!-- List layout -->
<template id="dynamic_filter_template_blog_post_list" name="List">
    <div t-foreach="records" t-as="data" class="s_blog_posts_post p-3 rounded-3 border-0" data-extra-classes="g-3" data-column-classes="col-12 col-sm-6 col-lg-4">
        <t t-set="record" t-value="data['_record']"/>
        <a class="text-decoration-none" t-att-title="'Read ' + data['name']" t-att-href="data['call_to_action_url']">
            <div class="d-flex align-items-center small">
                <t t-call="website_blog.s_dynamic_snippet_template_author_placeholder"/>
                <span class="s_blog_posts_post_date text-muted mb-2" t-field="record.post_date" t-options='{"format": "MMM d, yyyy"}' />
            </div>
            <h4>
                <span t-if="is_sample" class="bg-primary text-uppercase">Sample</span>
                <span t-field="record.name"/>
            </h4>
            <p class="s_blog_posts_post_teaser mb-1 overflow-hidden text-muted" t-field="record.teaser"/>
        </a>
    </div>
</template>
<!-- Big picture layout -->
<template id="dynamic_filter_template_blog_post_big_picture" name="Big picture">
    <div t-foreach="records" t-as="data" class="s_blog_posts_post position-relative w-100" data-extra-classes="g-3" data-column-classes="col-12 col-sm-6 col-lg-4">
        <t t-set="record" t-value="data['_record']"/>
        <a class="s_blog_posts_post_cover position-relative d-flex flex-column h-100 shadow-sm overflow-hidden rounded text-decoration-none ratio ratio-1x1" t-att-title="'Read ' + data['name']" t-att-href="data['call_to_action_url']">
            <t t-call="website.record_cover">
                <t t-set="_record" t-value="record"/>
                <t t-set="_resize_height" t-value="512"/>
                <t t-set="_resize_width" t-value="512"/>
                <t t-set="use_filters" t-value="True"/>
                <t t-set="additionnal_classes" t-value="'h-100 w-100 bg-600 position-absolute'"/>
            </t>
            <div class="s_blog_post_big_picture_infos position-absolute d-flex flex-column justify-content-center flex-grow-1 w-100 h-100 text-center text-white">
                <div class="position-absolute w-100 top-50 start-50 translate-middle">
                    <div t-if="is_sample" class="h5 o_ribbon_right bg-primary text-uppercase">Sample</div>
                    <h3 class="px-4 text-white" t-field="record.name"/>
                    <div class="s_blog_posts_post_cover_hidden d-flex flex-column align-items-center w-100 mb-0 px-4 text-center">
                        <t t-call="website_blog.s_dynamic_snippet_template_author_placeholder"/>
                        <p class="s_blog_posts_post_subtitle mt-2 lead overflow-hidden" t-field="record.subtitle"/>
                    </div>
                </div>
            </div>
        </a>
    </div>    
</template>
<!-- Horizontal layout -->
<template id="dynamic_filter_template_blog_post_horizontal" name="Horizontal">
    <div t-foreach="records" t-as="data" class="s_blog_posts_post w-100" data-number-of-elements="1">
        <t t-set="record" t-value="data['_record']"/>
        <div class="border-bottom pb-3">
            <div class="card border-0">
                <div class="row g-2">
                    <div class="col-md-4">
                        <a class="text-decoration-none" t-att-href="data['call_to_action_url']" t-att-title="'Read ' + data['name']">
                            <div class="s_blog_posts_post_cover">
                                <t t-call="website.record_cover">
                                    <t t-set="_record" t-value="record"/>
                                    <t t-set="_resize_height" t-value="256"/>
                                    <t t-set="_resize_width" t-value="256"/>
                                    <t t-set="additionnal_classes" t-value="'rounded-3 overflow-hidden'"/>
                                </t>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-8 d-flex flex-column justify-content-between">
                        <a class="text-decoration-none" t-att-href="data['call_to_action_url']" t-att-title="'Read ' + data['name']">
                            <div class="card-body">
                                <div t-if="is_sample" class="h5 o_ribbon_right bg-primary text-uppercase">Sample</div>
                                <t t-call="website_blog.s_dynamic_snippet_template_author_placeholder"/>
                                <div>
                                    <h4 class="text-truncate" t-field="record.name"/>
                                    <p class="s_blog_posts_post_subtitle m-0 lead overflow-hidden" t-field="record.subtitle"/>
                                </div>
                            </div>
                        </a>
                        <div class="card-footer d-flex justify-content-between border-0 bg-transparent small">
                            <span class="text-muted mb-0" t-field="record.post_date" t-options='{"format": "MMM d, yyyy"}' />
                            <span class="text-muted mb-0">In <a class="fw-bold" t-field="record.blog_id.name" t-att-href="'/blog/%s' % record.blog_id.id" />
                                <a t-if="is_sample" class="fw-bold" href="#">Sample</a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</template>
<!-- Card layout -->
<template id="dynamic_filter_template_blog_post_card" name="Card">
    <div t-foreach="records" t-as="data" class="s_blog_posts_post w-100" data-extra-classes="g-3" data-column-classes="col-12 col-sm-6 col-lg-4 col-xxl-3">
        <t t-set="record" t-value="data['_record']"/>
        <div class="card h-100">
            <a class="text-decoration-none" t-att-href="data['call_to_action_url']" t-att-title="'Read ' + data['name']">
                <div class="s_blog_posts_post_cover card-img-top">
                    <t t-call="website.record_cover">
                        <t t-set="_record" t-value="record"/>
                        <t t-set="_resize_height" t-value="256"/>
                        <t t-set="_resize_width" t-value="256"/>
                    </t>
                </div>
            </a>
            <a class="text-decoration-none" t-att-href="data['call_to_action_url']" t-att-title="'Read ' + data['name']">
                <div class="card-body">
                    <div t-if="is_sample" class="h5 o_ribbon_right bg-primary text-uppercase">Sample</div>
                    <t t-call="website_blog.s_dynamic_snippet_template_author_placeholder"/>
                    <h5 class="text-truncate" t-field="record.name"/>
                    <t t-call="website_blog.s_dynamic_snippet_template_teaser_placeholder"/>
                </div>
            </a>
            <div class="card-footer d-flex justify-content-between mt-auto p-3 pt-0 border-0 bg-transparent small">
                <span class="text-muted mb-0" t-field="record.post_date" t-options='{"format": "MMM d, yyyy"}' />
                <span class="text-muted mb-0">In <a class="fw-bold" t-field="record.blog_id.name" t-att-href="'/blog/%s' % record.blog_id.id" />
                    <a t-if="is_sample" class="fw-bold" href="#">Sample</a>
                </span>
            </div>
        </div>
    </div>
</template>

<!-- Author ON / OFF -->
<template id="website_blog.s_dynamic_snippet_template_author_placeholder" name="Author placeholder"/>
<template id="website_blog.s_dynamic_snippet_template_author" inherit_id="website_blog.s_dynamic_snippet_template_author_placeholder" name="Author" active="True">
    <xpath expr="." position="inside">
        <div class="s_blog_posts_post_author d-flex align-items-center mb-2">
            <div class="s_blog_posts_post_avatar me-2">
                <img class="w-100 rounded-pill" t-attf-src="data:image/png;base64,{{record.author_avatar}}"/>
            </div>
            <span t-field="record.author_id.name"/>
        </div>
    </xpath>
</template>

<!-- Teaser ON / OFF for Card and List layout-->
<template id="website_blog.s_dynamic_snippet_template_teaser_placeholder" name="Teaser placeholder"/>
<template id="website_blog.s_dynamic_snippet_template_teaser" inherit_id="website_blog.s_dynamic_snippet_template_teaser_placeholder" name="Teaser" active="True">
    <xpath expr="." position="inside">
        <p class="s_blog_posts_post_teaser mb-1 d-none d-sm-block overflow-hidden" t-field="record.teaser"/>
    </xpath>
</template>

<!-- Options -->
<template id="s_blog_posts_options" inherit_id="website.snippet_options">
    <xpath expr="." position="inside">
        <t t-call="website_blog.s_dynamic_snippet_options_template">
            <t t-set="snippet_name" t-value="'dynamic_snippet_blog_posts'"/>
            <t t-set="snippet_selector" t-value="'.s_dynamic_snippet_blog_posts'"/>
        </t>
    </xpath>
</template>

<template id="s_dynamic_snippet_options_template" inherit_id="website.s_dynamic_snippet_options_template">
    <xpath expr="//we-select[@data-name='filter_opt']" position="after">
        <we-select t-if="snippet_name == 'dynamic_snippet_blog_posts'" 
            string="Blog" 
            data-no-preview="true" 
            data-name="blog_opt" 
            data-attribute-name="filterByBlogId">
            <we-button data-select-data-attribute="-1">All blogs</we-button>
            <!-- the blog list will be generated in js -->
        </we-select>
    </xpath>
    <xpath expr="//we-select[@data-name='template_opt']" position="after">
        <we-select t-if="snippet_name == 'dynamic_snippet_blog_posts'" 
            string="Hover effect" 
            class="o_we_sublevel_1 o_we_inline" 
            data-no-widget-refresh="true" 
            data-name="hover_effect_opt">
            <we-button data-select-class="">None</we-button>
            <we-button data-select-class="s_blog_posts_effect_marley">Marley</we-button>
            <we-button data-select-class="s_blog_posts_effect_dexter">Dexter</we-button>
            <we-button data-select-class="s_blog_posts_effect_chico">Silly-Chico</we-button>
        </we-select>
    </xpath>
    <xpath expr="//we-select[@data-name='template_opt']" position="after">
        <we-checkbox t-if="snippet_name == 'dynamic_snippet_blog_posts'"
            data-name="author_opt"
            string="Author"
            class="o_we_sublevel_1"
            data-no-widget-refresh="true"
            data-reset-view-arch="true"
            data-customize-website-views="website_blog.s_dynamic_snippet_template_author"/>
        <we-checkbox t-if="snippet_name == 'dynamic_snippet_blog_posts'"
            data-name="teaser_opt"
            string="Teaser"
            class="o_we_sublevel_1"
            data-no-widget-refresh="true"
            data-reset-view-arch="true"
            data-customize-website-views="website_blog.s_dynamic_snippet_template_teaser"/>
    </xpath>
    <xpath expr="//we-select[@data-name='template_opt']" position="after">
        <we-button-group t-if="snippet_name == 'dynamic_snippet_blog_posts'"
            class="o_we_sublevel_1 o_we_inline" 
            string="Picture height"
            data-no-widget-refresh="true"
            data-no-preview="true"
            data-name="picture_size_opt">
            <we-button data-select-class="picture_size_small" title="Smaller picture">Smaller</we-button>
            <we-button data-select-class="" title="Bigger picture">Bigger</we-button>
        </we-button-group>
    </xpath>
</template>

<!-- Assets -->
<record id="website_blog.s_blog_posts_000_scss" model="ir.asset">
    <field name="name">Blog posts 000 SCSS</field>
    <field name="bundle">web.assets_frontend</field>
    <field name="path">website_blog/static/src/snippets/s_blog_posts/000.scss</field>
</record>

<record id="website_blog.s_blog_posts_000_js" model="ir.asset">
    <field name="name">Blog posts 000 JS</field>
    <field name="bundle">web.assets_frontend</field>
    <field name="path">website_blog/static/src/snippets/s_blog_posts/000.js</field>
</record>

</odoo>
