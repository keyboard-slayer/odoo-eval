<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id="view_tax_form" model="ir.ui.view">
        <field name="name">account.tax.inherit.view.form</field>
        <field name="model">account.tax</field>
        <field name="inherit_id" ref="account.view_tax_form"/>
        <field name="arch" type="xml">
            <field name="tax_group_id" position="after">
                <field name="l10n_uy_tax_category" invisible="country_code != 'UY'"/>
            </field>
        </field>
    </record>

     <record id="account_invoice_form_uy_inherit" model="ir.ui.view">
        <field name="name">account.move.form.uy.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <button name="button_draft">
                <button name="action_assign_name" type="object" string="Assign Name"/>
            </button>
        </field>
    </record>

</odoo>
