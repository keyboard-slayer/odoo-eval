<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="cloud_storage_config_settings_view_form" model="ir.ui.view">
        <field name="name">cloud_storage_config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="70"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//setting[@id='cloud_storage']" position="replace">
                <setting id="cloud_storage" string="Cloud Storage" help="Select the cloud storage provider to store attachments.">
                    <field name="module_cloud_storage"/>
                    <div id='cloud_storage_providers' invisible="not module_cloud_storage">
                        <field name="cloud_storage_provider"/>
                        <div class="content-group mt16" invisible="not cloud_storage_provider">
                            <label for="cloud_storage_min_file_size" class="o_light_label mr8"/>
                            <field name="cloud_storage_min_file_size"/>
                        </div>
                        <div class="content-group mt16" invisible="cloud_storage_provider != 'cloud.storage.google'">
                            <label for="cloud_storage_google_bucket_name" class="o_light_label mr8"/>
                            <field name="cloud_storage_google_bucket_name"/>
                            <br/>
                            <label for="cloud_storage_google_account_info" class="o_light_label mr8"/>
                            <field name="cloud_storage_google_account_info"/>
                        </div>
                        <div class="content-group mt16" invisible="cloud_storage_provider != 'cloud.storage.azure'">
                            <label for="cloud_storage_azure_container_name" class="o_light_label mr8"/>
                            <field name="cloud_storage_azure_container_name"/>
                            <br/>
                            <label for="cloud_storage_azure_connection_string" class="o_light_label mr8"/>
                            <field name="cloud_storage_azure_connection_string"/>
                        </div>
                    </div>
                    <div class="mt8">
                        <button type="action" name="%(cloud_storage.action_cloud_storage_blob_to_delete)d" string="Cloud Storage Blobs To Delete" icon="oi-arrow-right" class="btn-link"/>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>

</odoo>
