<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="calendar_add_calendar_view" model="ir.ui.view">
        <field name="name">calendar.add.calendar.view.form</field>
        <field name="model">calendar.add.calendar</field>
        <field name="arch" type="xml">
            <form string="Add calendar">
                <group>
                    <field name="new_calendar_name" placeholder="Calendar Name"/>
                    <field name="line_ids" string="Import calendar" invisible="not line_ids">
                        <list editable="top" create="False">
                            <field name="enable"/>
                            <field name="source"/>
                            <field name="name"/>
                            <field name="email" optional="hide"/>
                            <field name="partner_id" placeholder="Create a new one" domain="[('user_id', '=', uid), ('parent_id', '!=', False)]"/>
                        </list>
                    </field>
                </group>
                <footer>
                    <button name="submit" string="Submit" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
