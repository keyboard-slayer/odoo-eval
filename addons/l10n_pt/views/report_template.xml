<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="l10n_pt_report_template_note_certified_program">
        <t t-if="company.country_id.code == 'PT'">
            <div class="row">
                <div name="l10n_pt_certified_program_note" class="mx-auto text-center text-muted">
                    <t t-if="o and o._name in ('account.move')">  <!-- TODO: pos order, stock picking -->
                        <t t-if="o.l10n_pt_inalterable_hash_short">
                            <t t-out="o.l10n_pt_inalterable_hash_short"/> - Processado por programa certificado n.º TODO/AT
                        </t>
                        <t t-else="">
                        <div class="watermark" style="position:absolute;opacity:0.25;font-size:3em;width:100%;text-align:center;-webkit-transform: rotate(-45deg);">
                            This document is not valid.
                        </div>
                    </t>
                    </t>
                    <t t-else="">
                        Este documento não serve de fatura <br/>
                        Emitido por programa certificado n.º TODO/AT
                    </t>
                </div>
            </div>
        </t>
    </template>

    <template id="l10n_pt_external_layout_standard" inherit_id="web.external_layout_standard">
        <xpath expr="//div[contains(@t-attf-class, 'article')]/t" position="after">
            <t t-call="l10n_pt.l10n_pt_report_template_note_certified_program"/>
        </xpath>
        <xpath expr="//span[@id='document_name']" position="inside">
            <t t-out="o.name"/> -
        </xpath>
    </template>

    <template id="l10n_pt_external_layout_bold" inherit_id="web.external_layout_bold">
