<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-inherit="mail.Thread" t-inherit-mode="extension">
        <xpath expr="//*[@t-name='messageListBefore']" position="after">
            <div t-if="!props.thread.isChatbotThread" class="bg-100 py-3">
                <Message message="props.thread.welcomeMessage" thread="props.thread"/>
            </div>
        </xpath>
        <xpath expr="//*[hasclass('o-mail-Thread-empty')]" position="replace">
            <t t-if="props.thread.type !== 'livechat'">$0</t>
        </xpath>
        <xpath expr="//*[@t-name='threadCore']" position="inside">
            <Message t-if="chatbotService.isTyping" message="props.thread.chatbotTypingMessage" isInChatWindow="env.inChatWindow" isTypingMessage="true"  thread="props.thread"/>
        </xpath>
        <xpath expr="//*[hasclass('o-mail-Thread-newMessage')]" position="replace">
            <t t-if="!chatbotService.active">$0</t>
        </xpath>
    </t>
</templates>
