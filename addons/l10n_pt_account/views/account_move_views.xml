<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('alert')]" position="after">
                    <field name="l10n_pt_account_show_future_date_warning" invisible="1"/>
                    <div class="alert alert-warning mb-0" role="alert"
                         attrs="{'invisible': [('l10n_pt_account_show_future_date_warning', '=', False)]}">
                        Setting the invoice date in the future will prevent new documents with a date before
                        or on the <field name="invoice_date" attrs="{'readonly': True}"/> from being posted.
                    </div>
                </xpath>
                <xpath expr="//page[@id='other_tab']//field[@name='inalterable_hash']" position="after">
                    <field name="l10n_pt_account_atcud" attrs="{'invisible': [('country_code', '!=', 'PT')]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
