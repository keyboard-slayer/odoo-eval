<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="einvoice_cancel_view_form" model="ir.ui.view">
        <field name="name">einvoice.cancel.form</field>
        <field name="model">einvoice.cancel</field>
        <field name="arch" type="xml">
            <form string="Cancel E-Invoice">
                <group>
                    <field name="cancel_reason"/>
                    <field name="cancel_remarks"/>
                </group>
                <footer>
                    <button string='Cancel E-Invoice' name="cancel_einvoice" type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>

    <record  model="ir.actions.act_window" id="einvoice_cancel_window">
        <field name="name">Cancel E-Invoice</field>
        <field name="res_model">einvoice.cancel</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="einvoice_cancel_view_form"/>
        <field name="target">new</field>
    </record>        
</odoo>