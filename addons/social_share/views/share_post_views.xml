<?xml version="1.0"?>
<odoo><data>
    <record model="ir.ui.view" id="view_social_share_post_form">
        <field name="name">social.share.post.form</field>
        <field name="model">social.share.post</field>
        <field name="arch" type="xml">
            <form string="Share Campaign" class="o_share_post_form">
                    <button name="action_open_url_share" type="object" class="btn-primary mb-2">Share</button>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_send" type="object">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Send Now</span>
                            </div>
                        </button>
                        <button name="action_test" type="object">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Test</span>
                            </div>
                        </button>
                        <button name="action_schedule" type="object">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Schedule</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                            <field name="target_url"/>
                        </group>
                        <group>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <label for="post_suggestion"/>
                    <field name="post_suggestion"/>

                    <notebook>
                        <page name="Post Image">
                            <group>
                            <group>
                            <field name="custom_element_ids" nolabel="1" colspan="2">
                                <tree editable="true" create="false" delete="false">
                                    <field name="role" readonly="true" force_save="true"/>
                                    <field name="type" readonly="true" optional="hide" force_save="true"/>
                                    <field name="value_type"/>
                                    <field name="field_path" invisible="type != 'text' or value_type != 'field'" optional="show" force_save="true"/>
                                    <field name="text" invisible="type != 'text' or value_type != 'static'" optional="show" force_save="true"/>
                                    <field name="text_color" invisible="type != 'text'" optional="show" widget="color" force_save="true"/>
                                    <field name="image" invisible="type != 'image' or value_type != 'static'" optional="show" widget="image" force_save="true"/>
                                    <field name="shape" invisible="type != 'image' or type != 'shape'" optional="show" force_save="true"/>
                                    <field name="color" invisible="type != 'image' or type != 'shape'" optional="show" widget="color" force_save="true"/>
                                    <!--not relevant but needs to be on the view to pass values from onchange-->
                                    <field name="sequence" column_invisible="true" force_save="true"/>
                                    <field name="x_pos" column_invisible="true" force_save="true"/>
                                    <field name="y_pos" column_invisible="true" force_save="true"/>
                                    <field name="x_size" column_invisible="true" force_save="true"/>
                                    <field name="y_size" column_invisible="true" force_save="true"/>
                                    <field name="text_align" column_invisible="true" force_save="true"/>
                                    <field name="text_align_vert" column_invisible="true" force_save="true"/>
                                    <field name="text_font_size" column_invisible="true" force_save="true"/>
                                    <field name="text_font" column_invisible="true" force_save="true"/>
                                </tree>
                            </field>

                            </group>
                            <group>
                                <group>
                                <field name="model_id"/>
                                <field name="reference_share_template_id"/>
                                <field name="share_template_variant_id" widget="radio" options="{'horizontal': True}"
                                       invisible="not reference_share_template_id"/>
                                </group>
                                <field name="image" widget="image" options="{'size': [700, 366]}" nolabel="1"/>
                            </group>
                            </group>
                        </page>
                        <page name="Post-Share">
                            <group>
                                <field name="thanks_redirection"/>
                                <field name="thanks_message"/>
                            </group>
                        </page>
                    </notebook>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_social_share_post_tree">
        <field name="name">social.share.post.tree</field>
        <field name="model">social.share.post</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="user_id"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="target_url"/>
            </tree>
        </field>
    </record>

    <record id="view_social_share_post_search" model="ir.ui.view">
        <field name="name">social.share.post.search</field>
        <field name="model">social.share.post</field>
        <field name="arch" type="xml">
            <search string="Search Share Campaign">
                <filter string="My campaign" name="my_campaign" domain="[('user_id', '=', uid)]"/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <field name="tag_ids"/>
                <field name="active"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Responsible" name="by_responsible" domain="[]" context="{'group_by': 'user_id'}"/>
                    <filter string="Tags" name="by_tags" domain="[]" context="{'group_by': 'tag_ids'}"/>
                </group>
            </search>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_social_share_post">
        <field name="name">Share Campaign</field>
        <field name="res_model">social.share.post</field>
        <field name="search_view_id" ref="view_social_share_post_search"/>
        <field name="view_mode">tree,kanban,form</field>
    </record>

</data></odoo>
