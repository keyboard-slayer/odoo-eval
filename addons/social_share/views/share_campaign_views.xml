<?xml version="1.0"?>
<odoo><data>
    <record model="ir.ui.view" id="view_social_share_campaign_form">
        <field name="name">social.share.campaign.form</field>
        <field name="model">social.share.campaign</field>
        <field name="arch" type="xml">
            <form string="Share Campaign" class="o_share_campaign_form">
                <header invisible="not active" class="mb-2">
                    <button invisible="not model_id" name="action_share_multi" type="object" class="btn-primary">Send</button>
                    <button name="action_open_url_share" type="object" class="btn-secondary">Create Link</button>
                </header>
                <sheet>
                <div class="oe_button_box" name="button_box">
                    <button icon="fa-mouse-pointer" invisible="not target_url_click_count">
                        <div class="o_stat_info">
                            <span class="o_stat_text">
                                <b>Campaign Clicks</b>
                            </span>
                            <span class="o_stat_value">
                                <field name="target_url_click_count" readonly="1"/>
                            </span>
                        </div>
                    </button>
                    <button name="action_show_clicked_urls" type="object" icon="fa-eye" invisible="not share_url_click_count">
                        <div class="o_stat_info">
                            <span class="o_stat_text">
                                <b>Opened Share Links</b>
                            </span>
                            <span class="o_stat_value">
                                <field name="share_url_click_count" readonly="1"/>
                            </span>
                        </div>
                    </button>
                    <button name="action_show_shared_urls" type="object" icon="fa-share" invisible="not share_url_share_count">
                        <div class="o_stat_info">
                            <span class="o_stat_text">
                                <b>Shared</b>
                            </span>
                            <span class="o_stat_value">
                                <field name="share_url_share_count" readonly="1"/>
                            </span>
                        </div>
                    </button>
                </div>
                <field name="active" invisible="1"/>
                <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                <div class="oe_title">
                    <h1>
                        <field name="name" placeholder="e.g. Odoo Experience Talks"/>
                    </h1>
                </div>
                <field name="model_id" invisible="1"/>
                <group>
                    <group>
                        <field name="user_id" widget="many2one_avatar"/>
                        <field name="target_url"/>
                        <field name="post_suggestion" placeholder="Very happy to be a part of..." widget="text_emojis"/>
                    </group>
                    <group>
                        <field name="tag_ids" widget="many2many_tags"  options="{'color_field': 'color'}"/>
                    </group>
                </group>
                <notebook>
                    <page name="Card Layout">
                        <group>
                        <group>
                            <field name="render_element_ids" nolabel="1" colspan="2" force_save="1">
                                <tree create="0" delete="0" open_form_view="1">
                                    <field name="role"></field>
                                    <field name="model" column_invisible="1" force_save="1"></field>
                                    <field name="render_type" column_invisible="1" force_save="1"></field>
                                    <field name="value_type" column_invisible="1" force_save="1"></field>
                                    <field name="shape" column_invisible="1" force_save="1"></field>
                                    <field name="image" column_invisible="1" force_save="1"></field>
                                    <field name="text" force_save="1"></field>
                                    <field name="text_color" column_invisible="1" force_save="1"></field>
                                    <field name="field_path" column_invisible="1" force_save="1"></field>
                                </tree>
                            </field>
                        </group>
                        <group>
                            <field name="model_id" placeholder="Select a model..." options="{'no_create': True, 'no_open': True}"/>
                            <field name="reference_share_template_id" required="1" options="{'no_create': True, 'no_open': True}"/>
                            <field name="share_template_variant_id" widget="radio" options="{'horizontal': True}"
                                   invisible="not reference_share_template_id"/>
                            <field name="image" widget="image" options="{'size': [False, 300]}" id="image_preview" nolabel="1" colspan="2" invisible="not share_template_variant_id"/>
                        </group>
                        </group>
                    </page>
                    <page name="Share Reward">
                        <group>
                            <group>
                            <field name="thanks_redirection"/>
                            <field name="thanks_message" placeholder="Thanks for sharing, here is your reward!"/>
                            </group>
                        </group>
                    </page>
                </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_social_share_campaign_tree">
        <field name="name">social.share.campaign.tree</field>
        <field name="model">social.share.campaign</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name"/>
                <field name="user_id" widget="many2one_avatar"/>
                <field name="model_id" string="Target"/>
                <field name="target_url"/>
                <field name="tag_ids" widget="many2many_tags"  options="{'color_field': 'color'}"/>
            </tree>
        </field>
    </record>

    <record id="view_social_share_campaign_search" model="ir.ui.view">
        <field name="name">social.share.campaign.search</field>
        <field name="model">social.share.campaign</field>
        <field name="arch" type="xml">
            <search string="Search Share Campaign">
                <filter string="My Campaigns" name="my_campaigns" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="Archived" name="archived" domain="[('active', '=', False)]"/>
                <field name="tag_ids"/>
                <field name="active"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Responsible" name="by_responsible" domain="[]" context="{'group_by': 'user_id'}"/>
                    <filter string="Tags" name="by_tags" domain="[]" context="{'group_by': 'tag_ids'}"/>
                </group>
            </search>
        </field>
    </record>


    <record model="ir.actions.act_window" id="action_social_share_campaign">
        <field name="name">Share Campaign</field>
        <field name="res_model">social.share.campaign</field>
        <field name="search_view_id" ref="view_social_share_campaign_search"/>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create a Sharing Campaign!</p>
            <p>Prepare a design and some content and let your community spread the word!</p>
        </field>
    </record>

</data></odoo>
