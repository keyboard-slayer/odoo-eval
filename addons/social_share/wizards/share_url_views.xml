<?xml version="1.0"?>
<odoo><data>
    <record model="ir.ui.view" id="view_share_url_share_form">
        <field name="name">social.share.url.share.form</field>
        <field name="model">social.share.url.share</field>
        <field name="arch" type="xml">
            <form string="Create Link"><sheet>
                <group>
                    <field name="campaign_id" invisible="1"/>
                    <field name="model_id" invisible="1"/>
                    <field name="res_id" options="{'model_field': 'model_id', 'no_create': True}"
                           invisible="not model_id"/>
                    <field name="url" widget="CopyClipboardChar" invisible="model_id and not res_id"/>
                </group>
                <field name="image" widget="image" invisible="not image" readonly="1"></field>
                <footer>
                    <button string="Copy &amp; Close" name="action_apply_to_url" type="object"/>
                </footer>
            </sheet></form>
        </field>
    </record>
</data></odoo>
