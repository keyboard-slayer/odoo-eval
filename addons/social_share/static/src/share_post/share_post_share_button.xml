<?xml version="1.0" encoding="utf-8"?>
<templates>
    <t t-name="social_share.ShareBar">
        <div class="s_share text-start o_no_link_popover">
            <h4 class="s_share_title d-none o_default_snippet_text">Share</h4>
            <a t-attf-href="https://www.facebook.com/sharer/sharer.php?u={{url}}" target="_blank" t-on-click="_onShareLinkClick">
                <i class="fa fa-facebook rounded shadow-sm"></i>
            </a>
            <a t-attf-href="https://twitter.com/intent/tweet?url={{url}}" target="_blank" t-on-click="_onShareLinkClick">
                <i class="fa fa-twitter rounded shadow-sm"></i>
            </a>
            <a t-attf-href="https://www.linkedin.com/sharing/share-offsite/?url={{url}}" target="_blank" t-on-click="_onShareLinkClick">
                <i class="fa fa-linkedin rounded shadow-sm"></i>
            </a>
            <a t-attf-href="https://wa.me/?text={{url}}" target="_blank" t-on-click="_onShareLinkClick">
                <i class="fa fa-whatsapp rounded shadow-sm"></i>
            </a>
            <a t-attf-href="https://pinterest.com/pin/create/button/?url={{url}}&amp;media={{imageUrl}}" target="_blank" t-on-click="_onShareLinkClick">
                <i class="fa fa-pinterest rounded shadow-sm"></i>
            </a>
            <a t-attf-href="mailto:?body={{url}}">
                <i class="fa fa-envelope rounded shadow-sm"></i>
            </a>
        </div>
    </t>
</templates>
