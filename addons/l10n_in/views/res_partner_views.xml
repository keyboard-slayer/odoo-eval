<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="l10n_in_view_partner_form" model="ir.ui.view">
        <field name="name">l10n.in.res.partner.vat.inherit</field>
        <field name="model">res.partner</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="readonly">parent_id</attribute>
                <attribute name="required">l10n_in_gst_treatment in ['regular', 'composition', 'special_economic_zone', 'deemed_export']</attribute>
            </xpath>
            <xpath expr="//field[@name='vat']" position="before">
                <field name="l10n_in_gst_treatment" invisible="'IN' not in fiscal_country_codes" readonly="parent_id"/>
            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="l10n_in_pan" placeholder="e.g. ABCTY1234D" invisible="'IN' not in fiscal_country_codes" />
            </xpath>
            <xpath expr="//group[@name='credit_limits']/div[hasclass('o_row')]/field[@name='credit_limit']" position="attributes">
                <attribute name="invisible">not use_partner_credit_limit or 'IN' in fiscal_country_codes</attribute>
            </xpath>
            <xpath expr="//group[@name='credit_limits']/div[hasclass('o_row')]/field[@name='use_partner_credit_limit']" position="attributes">
                <attribute name="invisible">'IN' in fiscal_country_codes</attribute>
            </xpath>
            <xpath expr="//group[@name='credit_limits']/div[hasclass('o_row')]" position="inside">
                <div class="o_row" invisible="'IN' not in fiscal_country_codes">
                    <span>
                        <field name="use_partner_credit_limit"/>
                    </span>
                    <div invisible="not use_partner_credit_limit">
                        <div class="o_row">
                            <label for="credit_limit" string="Contact based limit"/>
                            <field name="credit_limit" class="oe_inline" string="Contact based limit"/>
                        </div>
                        <div class="o_row" invisible="not l10n_in_pan">
                            <label for="l10n_in_pan_based_credit_limit" string="PAN based limit"/>
                            <field name="l10n_in_pan_based_credit_limit" class="oe_inline" string="PAN based limit"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
