<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_project_product_list" model="ir.ui.view">
            <field name="name">project.product.list</field>
            <field name="model">project.product</field>
            <field name="arch" type="xml">
                <tree editable="bottom" create="1" edit="1" import="1" >
                    <field name="product_id"/>
                    <field name="price"/>
                    <field name="quantity"/>
                    <field name="partner_id"/>
                    <field name="route_id"/>
                    <field name="order_created" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="action_project_product_list" model="ir.actions.act_window">
            <field name="name">Project Products</field>
            <field name="res_model">project.product</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="project_product.view_project_product_list"/>
        </record>

        <record id="view_project_product_list_button_order" model="ir.ui.view">
            <field name="name">project.product.list.button.order</field>
            <field name="model">project.product</field>
            <field name="inherit_id" ref="project_product.view_project_product_list"/>
            <field name="arch" type="xml">
                <xpath expr="//tree" position="inside">
                    <button string="Order" type="object" class="btn btn-link" name="button_order" invisible="order_created == True"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>