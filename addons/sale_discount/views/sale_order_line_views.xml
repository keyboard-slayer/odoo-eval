<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_inherited" model="ir.ui.view">
        <field name="name">sale.order.form.inherited</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']" position="replace">
                <field name="x_unit_price"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='tax_id']" position="after">
                <field name="price_unit" invisible="1"/>
                <field name="x_first_discount"/>
                <field name="x_second_discount"/>
                <field name="x_third_discount"/>
                <field name="x_fourth_discount"/>
                <field name="x_final_price"/>
            </xpath>
        </field>
    </record>
</odoo>
