<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_pricelist_form_inherited" model="ir.ui.view">
        <field name="name">product.pricelist.form.inherited</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fixed_price']" position="after">
                <field name="x_first_discount"/>
                <field name="x_second_discount"/>
                <field name="x_third_discount"/>
                <field name="x_fourth_discount"/>
                <field name="x_final_price"/>
            </xpath>
        </field>
    </record>
</odoo>
