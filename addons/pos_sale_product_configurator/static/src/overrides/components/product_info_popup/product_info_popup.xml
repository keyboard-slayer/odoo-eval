<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_sale_product_configurator.ProductInfoPopup" t-inherit="point_of_sale.ProductInfoPopup" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('extra')]" position="after">
            <div t-if="values.optional_products.length"
                 class="section-optional-product mt-3 mb-4 pb-4 border-bottom text-start"
            >
                <h3 class="section-title">Optional Products:</h3>
                <div t-foreach="values.optional_products"
                     t-as="optional"
                     t-key="optional.name"
                     class="section-optional-product-body"
                >
                    <span>
                        <a class="text-primary text-decoration-underline"
                           t-esc="optional.name"
                           t-on-click="() => this.searchProduct(optional.name)"/>
 from
                        <t t-esc="env.utils.formatCurrency(optional.price)"/>
                    </span>
                </div>
            </div>
        </xpath>
    </t>
</templates>
