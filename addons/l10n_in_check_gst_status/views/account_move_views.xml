<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="move_form_inherit_l10n_in_gst_verification" model="ir.ui.view">
        <field name="name">account.move.form.inherit.l10n.in.gst.verification</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="l10n_in_partner_gstin_status"
                    readonly="1"
                    invisible="not partner_id or country_code != 'IN' or move_type not in ['in_invoice', 'in_refund']"
                    decoration-success="l10n_in_partner_gstin_status == 'Active'"
                    decoration-danger="l10n_in_partner_gstin_status != 'Active'" />
            </xpath>
        </field>
    </record>
</odoo>
