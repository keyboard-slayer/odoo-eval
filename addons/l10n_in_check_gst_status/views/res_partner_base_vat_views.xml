<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="l10n_in_view_partner_base_vat_form" model="ir.ui.view">
            <field name="name">l10n.in.view.partner.base.vat.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base_vat.view_partner_base_vat_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='vies_valid']" position="after">
                    <span invisible="'IN' not in fiscal_country_codes">
                        <field name="l10n_in_gstin_verified_status" class="oe_inline" readonly="1"
                            decoration-success="l10n_in_gstin_verified_status == 'Active'"
                            decoration-danger="l10n_in_gstin_verified_status != 'Active'" />
                        <span invisible="not l10n_in_gstin_verified_date" class="text-muted">
                            <span class="ps-2">checked: </span>
                            <field name="l10n_in_gstin_verified_date" class="oe_inline" readonly="1" />
                            <button name="get_verified_status" type="object" icon="fa-refresh"
                                class="oe_link p-0 ps-2" title="Reverify GSTIN status" />
                        </span>
                        <button string="Check Status" name="get_verified_status" type="object"
                            icon="fa-check" class="oe_link p-0" title="Check GSTIN status"
                            invisible="l10n_in_gstin_verified_date or not vat" />
                    </span>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
