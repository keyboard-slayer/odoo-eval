<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="calendar_timeslot_read" model="ir.rule">
            <field name="name">TS: All events</field>
            <field ref="model_calendar_timeslot" name="model_id"/>
            <field name="domain_force">[(1, "=", 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="calendar_timeslot_my" model="ir.rule">
            <field name="name">TS: Own events</field>
            <field ref="model_calendar_timeslot" name="model_id"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="calendar_event_private_my" model="ir.rule">
            <field name="name">CE Private: Own events</field>
            <field ref="model_calendar_event_private" name="model_id"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="calendar_event_private_inv" model="ir.rule">
            <field name="name">CE Private: Invited</field>
            <field ref="model_calendar_event_private" name="model_id"/>
            <field name="domain_force">[('timeslot_ids.attendee_ids.partner_id', 'in', user.partner_id.ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="calendar_event_private_public" model="ir.rule">
            <field name="name">CE Private: Public</field>
            <field ref="model_calendar_event_private" name="model_id"/>
            <field name="domain_force">[('is_public', '=', True)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="calendar_attendee_my" model="ir.rule">
            <field name="name">CA: Me</field>
            <field ref="model_calendar_attendee" name="model_id"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="calendar_attendee_my_event" model="ir.rule">
            <field name="name">CA: My Event</field>
            <field ref="model_calendar_attendee" name="model_id"/>
            <field name="domain_force">[('timeslot_id.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="calendar_event_private_public" model="ir.rule">
            <field name="name">CA: Invited Events</field>
            <field ref="model_calendar_attendee" name="model_id"/>
            <field name="domain_force">[('timeslot_id.attendee_ids.partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>
