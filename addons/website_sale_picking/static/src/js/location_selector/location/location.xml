<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-inherit="delivery.locationSelector.location" t-inherit-mode="extension">
        <small name="location_opening_hours" position="before">
            <t t-if="!!props.additionalData.in_stock" >
                <t t-if="!!props.additionalData.show_quantity">
                    <span class="text-warning">
                        <i class="fa fa-circle"/>
                        Only <t t-out="props.additionalData.quantity"/> available in stock
                    </span>
                </t>
                <t t-else="">
                    <span class="text-success">
                        <i class="fa fa-circle"/>
                        Available in stock
                    </span>
                </t>
            </t>
            <t t-else="">
                <span class="text-danger">
                    <i class="fa fa-times"/>
                    Out of stock
                </span>
            </t>
        </small>
    </t>
</templates>
