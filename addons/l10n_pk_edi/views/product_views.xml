<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_product_form_view_inherit_l10n_pk_edi" model="ir.ui.view">
        <field name="name">product.template.form.inherit.l10n.pk.edi</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="group_fbr" string="FBR (PK)" invisible="'PK' not in fiscal_country_codes" >
                    <group class="w-50">
                        <field name="l10n_pk_edi_sale_type_id" options="{'no_create': True}"/>
                        <field name="l10n_pk_edi_schedule_code_id" options="{'no_create': True}"/>
                    </group>
                </page>
            </xpath>        
        </field>
    </record>
</odoo>
