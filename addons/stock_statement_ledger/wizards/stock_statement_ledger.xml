<?xml version="1.0"?>
<odoo>

    <record id="view_stock_statement_ledger_form" model="ir.ui.view">
        <field name="name">view.stock.statement.ledger.form</field>
        <field name="model">stock.statement.ledger</field>
        <field name="arch" type="xml">
            <form string="Stock Statement Ledger">
                <group col="4">
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <group>
                    <field name="location_ids" widget="many2many_tags" context="{'get_full_name':True}"/>
                </group>
                <group>
                    <field name="categ_ids" widget="many2many_tags" />
                </group>
                <group>
                    <field name="product_ids" widget="many2many_tags" />
                </group>
                <footer>
                    <button
                        name="action_print"
                        string="Export To Excel"
                        type="object"
                        class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_statement_ledger" model="ir.actions.act_window">
        <field name="name">Stock Statement Ledger</field>
        <field name="res_model">stock.statement.ledger</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_stock_statement_ledger_form"/>
        <field name="target">new</field>
    </record>

    <menuitem 
        id="menu_action_stock_statement_ledger_mrp"
        name="Stock Statement Ledger"
        action="action_stock_statement_ledger"
        parent="mrp.menu_mrp_reporting"
        groups="mrp.group_mrp_manager"
        sequence="21"/>
    
    <menuitem 
        id="menu_action_stock_statement_ledger_stock"
        name="Stock Statement Ledger"
        action="action_stock_statement_ledger"
        parent="stock.menu_stock_root"
        sequence="99"/>

</odoo>
