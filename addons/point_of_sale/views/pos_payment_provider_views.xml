<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="pos_payment_provider_view_form" model="ir.ui.view">
        <field name="name">pos.payment.provider.form</field>
        <field name="model">pos.payment.provider</field>
        <field name="arch" type="xml">
            <form string="Payment Providers (Terminal)">
                <sheet>
                    <field name="image_128" widget="image" class="oe_avatar"
                           readonly="module_state != 'installed'"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Name"/></h1>
                        <div invisible="module_state == 'installed' or not module_id">
                            <button type="object" class="btn btn-primary" name="button_immediate_install" string="Activate"/>
                        </div>
                    </div>
                    <group>
                        <group name="payment_state" invisible="module_state != 'installed'">
                            <field name="code" groups="base.group_no_one" readonly="id"/>
                            <field name="mode" widget="radio"/>
                            <field name="company_id" groups="base.group_multi_company" options='{"no_open":True}'/>
                        </group>
                    </group>
                    <notebook invisible="module_id and module_state != 'installed'">
                        <page string="Credentials" name="credentials">
                            <group name="provider_credentials"/>
                        </page>
                        <page string="Payment Terminals" name="payment_terminal">
                            <field name="pos_payment_method_ids"
                                   readonly="mode == 'disabled'"
                                   context="{'default_use_payment_terminal': code, 'default_payment_method_type': 'terminal', 'is_pos_provider': True}">
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_payment_provider_view_kanban" model="ir.ui.view">
        <field name="name">pos.payment.provider.kanban</field>
        <field name="model">pos.payment.provider</field>
        <field name="arch" type="xml">
            <kanban string="Payment Providers (Terminal)" create="false" quick_create="false" class="o_kanban_dashboard">
                <field name="id"/>
                <field name="name"/>
                <field name="mode"/>
                <field name="module_id"/>
                <field name="module_state"/>
                <templates>
                    <t t-name="kanban-box">
                        <t t-set="installed" t-value="!record.module_id.value || (record.module_id.value &amp;&amp; record.module_state.raw_value === 'installed')"/>
                        <t t-set="is_disabled" t-value="record.mode.raw_value=='disabled'"/>
                        <div t-attf-class="oe_kanban_global_click" class="d-flex p-2">
                            <div class="d-flex gap-2">
                                <img type="open"
                                     t-att-src="kanban_image('pos.payment.provider', 'image_128', record.id.raw_value)"
                                     class="mb-0 o_image_64_max"
                                     alt="provider"/>
                                <div class="d-flex flex-column justify-content-between w-100">
                                    <div class="o_pos_kanban_info">
                                        <h4 class="mb-0"><t t-esc="record.name.value"/></h4>
                                        <t t-if="installed">
                                            <field name="mode"
                                                   widget="label_selection"
                                                   options="{'classes': {'enabled': 'success', 'test': 'warning', 'disabled' : 'light'}}"/>
                                        </t>
                                    </div>
                                    <div class="o_pos_kanban_button text-end">
                                        <button t-if="!installed and !selection_mode " type="object" class="btn btn-sm btn-primary float-end" name="button_immediate_install">Activate</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <record id="action_pos_payment_provider" model="ir.actions.act_window">
        <field name="name">Payment Providers (Terminal)</field>
        <field name="res_model">pos.payment.provider</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new PoS payment provider (Terminal)
            </p>
        </field>
    </record>
    <menuitem id="menu_pos_payment_provider" parent="menu_point_config_product" action="action_pos_payment_provider" sequence="2" groups="group_pos_manager,group_pos_user"/>
</odoo>
