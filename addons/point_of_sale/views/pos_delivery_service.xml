<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="point_of_sale.view_pos_delivery_service_view" model="ir.ui.view">
        <field name="name">pos.delivery.service.form</field>
        <field name="model">pos.delivery.service</field>
        <field name="arch" type="xml">
            <form string="Delivery Service">
            <sheet>
                <div class="oe_title">
                    <label for="name" string="Service name"/>
                    <h1>
                        <field class="text-break" name="name" options="{'line_breaks': False}" widget="text" placeholder="Uber Eats 1"/>
                    </h1>
                </div>
                <field name="service" />
                <notebook colspan="4">
                    <page string="Configuration" name="configuration">
                    <group>
                        <field name="client_id" />
                        <field name="client_secret" />
                        <field name="payment_method_id" />
                        <field name="is_test" />
                        <field name="active" />
                    </group>
                    </page>
                </notebook>
            </sheet>
            </form>
        </field>
    </record>

    <record id="point_of_sale.view_pos_delivery_service_tree" model="ir.ui.view">
        <field name="name">pos.delivery.service.tree</field>
        <field name="model">pos.delivery.service</field>
        <field name="arch" type="xml">
            <tree string="Delivery Services" delete="1">
                <field name="name" />
                <field name="service" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <record id="point_of_sale.action_pos_delivery_service" model="ir.actions.act_window">
        <field name="name">Food Delivery Services</field>
        <field name="res_model">pos.delivery.service</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="point_of_sale.menu_pos_delivery_service"
        name="Food Delivery Services"
        action="point_of_sale.action_pos_delivery_service"
        sequence="25"
        parent="menu_point_config_product"/>

</odoo>
