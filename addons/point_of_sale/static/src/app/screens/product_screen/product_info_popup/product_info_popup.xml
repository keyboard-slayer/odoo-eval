<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.ProductInfoPopup">
            <div class="popup product-info-popup">
                <t t-set="values" t-value="props.values"/>
                <t t-set="product" t-value="values.record"/>
                <div class="modal-header">
                    <h4 class="modal-title">Product information</h4>
                    <div class="btn" t-on-click="cancel">
                        <i class="fa fa-times" aria-hidden="true"/>
                    </div>
                </div>
                <main class="body modal-body overflow-auto">
                    <div class="section-product-info-title d-flex flex-column flex-sm-row text-start gap-3 text-info bg-opacity-25 mx-n3 mt-n3 p-3 bg-info">
                        <div class="d-flex flex-column flex-grow-1 text-start w-100 w-sm-25">
                            <span t-esc="product.display_name" class="global-info-title fs-2 fw-bolder text-truncate"/>
                            <span class="fs-3" t-esc="values.displayCode"/>
                        </div>
                        <div class="d-flex flex-column justify-content-center text-start text-sm-end w-100 w-sm-25">
                            <span t-esc="env.utils.formatCurrency(values.totalIncluded)"
                                  class="global-info-title fs-2 fw-bolder"/>
                            <span class="fs-3">
                                <t t-foreach="values.taxValuesList" t-as="taxValues" t-key="taxValues.taxId">
                                    <div><t t-esc="taxValues.taxName"/>: <t t-esc="env.utils.formatCurrency(taxValues.taxAmount)"/></div>
                                </t>
                            </span>
                        </div>
                    </div>
                    <div class="section-financials mt-3 mb-4 pb-4 border-bottom text-start">
                        <h3 class="section-title">Financials</h3>
                        <div class="section-financials-body d-flex flex-column flex-sm-row">
                            <table class="table table-borderless mb-0">
                                <tr>
                                    <td>Price excl. VAT:</td>
                                    <td t-esc="env.utils.formatCurrency(values.totalExcluded)"/>
                                </tr>
                                <tr t-if="_hasMarginsCostsAccessRights()">
                                    <td>Cost:</td>
                                    <td t-esc="env.utils.formatCurrency(product.standard_price)"/>
                                </tr>
                                <tr t-if="_hasMarginsCostsAccessRights()">
                                    <td>Margin:</td>
                                    <td><t t-esc="env.utils.formatCurrency(values.marginPrice)"/> (<t t-esc="values.marginPercentStr"/>%) </td>
                                </tr>
                            </table>
                            <table t-if="values.pricelists.length" class="table table-borderless">
                                <tr t-foreach="values.pricelists" t-as="pricelist" t-key="pricelist.name">
                                    <td t-esc="pricelist.name"/>
                                    <td t-esc="env.utils.formatCurrency(pricelist.price)"/>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div t-if="values.warehouses.length"
                         class="section-inventory mt-3 mb-4 pb-4 border-bottom text-start">
                        <h3 class="section-title">
                            Inventory 
                            <t t-if="pos.pos_session.update_stock_at_closing">(as of opening)</t>
                        </h3>
                        <div class="section-inventory-body">
                            <div t-foreach="values.warehouses"
                                 t-as="warehouse"
                                 t-key="warehouse.name"
                                 class="d-flex flex-column flex-md-row gap-2"
                            >
                                <div>
                                    <t t-esc="warehouse.name" class="table-name"/>
                                    :
                                </div>
                                <div>
                                    <span class="me-1 fw-bolder"><t t-esc="warehouse.available_quantity" class="table-name"/></span>
                                    <t t-esc="warehouse.uom"/> available,
                                </div>
                                <div>
                                    <span class="me-1 fw-bolder"><t t-esc="warehouse.forecasted_quantity"/></span>
                                    forecasted
                                </div>
                            </div>
                        </div>
                    </div>
                    <div t-if="values.suppliers.length"
                         class="section-supplier mt-3 mb-4 pb-4 border-bottom text-start">
                        <h3 class="section-title">Replenishment</h3>
                        <div class="section-supplier-body">
                            <div t-foreach="values.suppliers"
                                 t-as="supplier"
                                 t-key="supplier.name"
                                 class="d-flex flex-column flex-md-row gap-2"
                            >
                                <div>
                                    <span t-esc="supplier.name" class="table-name"/>:
                                </div>
                                <span class="me-1 fw-bolder">
                                    <t t-esc="supplier.delay"/>
                                    Days
                                </span>
                                <span t-if="_hasMarginsCostsAccessRights()">
                                    <t t-esc="env.utils.formatCurrency(supplier.price)"/>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div t-if="values.variants.length" class="extra mt-3 mb-4 pb-4 border-bottom text-start">
                        <div class="section-variants">
                            <h3 class="section-title">Attributes</h3>
                            <div class="section-variants-body">
                                <div t-foreach="values.variants"
                                     t-as="variant"
                                     t-key="variant.name"
                                     class="d-flex flex-column align-items-start gap-2 mb-2"
                                >
                                    <div>
                                        <span t-esc="variant.name" class="table-name"/>:
                                    </div>
                                    <div class="d-flex flex-wrap gap-1">
                                        <t t-foreach="variant.values" t-as="attribute_value" t-key="attribute_value.name">
                                            <span class="searchable btn btn-secondary"
                                                  t-on-click="() => this.searchProduct(attribute_value.search)">
                                                <t t-esc="attribute_value.name"/>
                                            </span>
                                            <t t-if="attribute_value_index lt variant.values.length - 1"> </t>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="section-order mt-3 mb-4 pb-4 border-bottom text-start">
                        <h3 class="section-title">Order</h3>
                        <div class="section-order-body">
                            <table class="table table-borderless w-100 w-sm-50 mb-0">
                                <tr>
                                    <td>Total Price excl. VAT:</td>
                                    <td t-esc="env.utils.formatCurrency(values.orderTotalExcluded)" class="table-value"/>
                                </tr>
                                <tr t-if="_hasMarginsCostsAccessRights()">
                                    <td>Total Cost:</td>
                                    <td t-esc="env.utils.formatCurrency(values.orderTotalCost)" class="table-value"/>
                                </tr>
                                <tr t-if="_hasMarginsCostsAccessRights()">
                                    <td>Total Margin:</td>
                                    <td><t t-esc="env.utils.formatCurrency(values.orderMarginPrice)"/> (<t t-esc="values.orderMarginPercentStr"/>%) </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </main>
            </div>
    </t>
</templates>
