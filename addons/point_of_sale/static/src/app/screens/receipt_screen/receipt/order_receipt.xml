<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.OrderReceipt">
        <div class="pos-receipt">
            <t t-set="values" t-value="props.data"/>
            <t t-set="order" t-value="values.record"/>
            <t t-call="point_of_sale.ReceiptHeader"/>
            <OrderWidget lines="values.orderLines" t-slot-scope="scope">
                <t t-set="line" t-value="scope.line"/>
                <Orderline line="omit(line, 'customerNote')">
                    <li t-if="line.customerNote" class="customer-note w-100 p-2 my-1 rounded text-break">
                        <i class="fa fa-sticky-note me-1" role="img" aria-label="Customer Note" title="Customer Note"/>
                        <t t-esc="line.customerNote"/>
                    </li>
                    <ul t-if="line.packLotIds">
                        <li t-foreach="line.packLotIds" t-as="lot" t-key="lot.cid">
                            SN <t t-esc="lot.lot_name"/>
                        </li>
                    </ul>
                </Orderline>
            </OrderWidget>

            <!-- Total -->
            <div class="pos-receipt-right-align">--------</div>
            <br/>
            <div class="pos-receipt-amount">
                TOTAL
                <span t-esc="props.formatCurrency(values.totalIncluded)" class="pos-receipt-right-align"/>
            </div>
            <t t-if="values.roundingApplied">
                <div class="pos-receipt-amount">
                  Rounding
                <span t-esc='props.formatCurrency(values.roundingApplied)' class="pos-receipt-right-align"/>
                </div>
                <div class="pos-receipt-amount">
                  To Pay
                 <span t-esc='props.formatCurrency(values.totalIncluded + values.roundingApplied)' class="pos-receipt-right-align"/>
              </div>
            </t>
            <br/><br/>

            <!-- Payment Lines -->

            <div class="paymentlines" t-foreach="values.paymentLines" t-as="line" t-key="line_index">
                <t t-esc="line.name" />
                <span t-esc="props.formatCurrency(line.amount, false)" class="pos-receipt-right-align"/>
            </div>

            <div class="pos-receipt-amount receipt-change mt-2">
                CHANGE
                <span t-esc="props.formatCurrency(values.change)" class="pos-receipt-right-align"/>
            </div>

            <!-- Extra Payment Info -->

            <t t-if="values.totalDiscount">
                <div>
                    Discounts
                    <span t-esc="props.formatCurrency(values.totalDiscount)" class="pos-receipt-right-align"/>
                </div>
            </t>
            <div t-if="values.taxValuesList.length > 0" class="pos-receipt-taxes">
                <span />
                <span>VAT%</span>
                <span>VAT</span>
                <span>ExVAT</span>
                <span>Total</span>
                <t t-foreach="values.taxValuesList" t-as="taxValues" t-key="taxValues.taxId">
                    <span />
                    <span><t t-esc="taxValues.taxPercent"/> %</span>
                    <span t-esc="props.formatCurrency(taxValues.taxAmount, false)" />
                    <span t-esc="props.formatCurrency(taxValues.base, false)" />
                    <span t-esc="props.formatCurrency(taxValues.taxAmount + taxValues.base, false)" />
                </t>
                <t t-if="values.taxValuesList.length > 1">
                    <span />
                    <span />
                    <span t-esc="props.formatCurrency(values.totalTax, false)" />
                    <span t-esc="props.formatCurrency(values.totalExcluded, false)" />
                    <span t-esc="props.formatCurrency(values.totalIncluded, false)" />
                </t>
            </div>

            <div class="before-footer" />

            <div t-if="values.qrCode">
                <br /><br />
                <div class="pos-receipt-order-data mb-2">
                    Scan me to request an invoice for your purchase.
                </div>
                <img id="posqrcode" t-att-src="values.qrCode" class="pos-receipt-logo"/>
            </div>

            <div t-if="values.ticketCode">
                <br /><br />
                <div class="pos-receipt-order-data">
                    You can go to <t t-out="values.baseUrl"/>/pos/ticket and use the code below to request an invoice online
                </div>
                <div class="pos-receipt-order-data">
                    Unique Code: <t t-out="values.ticketCode"/>
                </div>
            </div>

            <!-- Footer -->
           <div t-if="values.footer"  class="pos-receipt-center-align" style="white-space:pre-line">
               <br/>
               <t t-esc="values.footer" />
                <br/>
                <br/>
            </div>

            <div class="after-footer">
                <t t-foreach="values.paymentLines" t-as="values" t-key="line_index">
                    <t t-set="payment" t-value="values.record"/>
                    <t t-if="payment.ticket">
                        <br />
                        <div class="pos-payment-terminal-receipt">
                            <pre t-esc="payment.ticket" />
                        </div>
                    </t>
                </t>
            </div>

            <br/>
            <t t-if="props.shippingDate">
                <div class="pos-receipt-order-data">
                    Expected delivery:
                    <div><t t-esc="props.shippingDate" /></div>
                </div>
            </t>

            <br/>
            <div class="pos-receipt-order-data">
                <div t-esc="values.name" />
                <div t-esc="order.receiptDate" />
            </div>
        </div>
    </t>
</templates>
