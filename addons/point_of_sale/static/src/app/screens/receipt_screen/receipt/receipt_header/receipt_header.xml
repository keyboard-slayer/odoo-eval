<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.ReceiptHeader">
        <img t-att-src="values.companyLogoSrc" alt="Logo" class="pos-receipt-logo"/>
        <br/>
        <h1 class="text-center" style="font-size: 100px" t-if="order.trackingNumber" t-esc="order.trackingNumber"/>
        <div class="pos-receipt-contact">
            <!-- contact address -->
            <div t-if="values.company.partner_id?.[1]" t-esc="values.company.partner_id[1]"/>
            <t t-if="values.company.phone">
                <div>Tel:<t t-esc="values.company.phone"/></div>
            </t>
            <t t-if="values.company.vat">
                <div><t t-esc="values.company.country?.vat_label || 'Tax ID'"/>: <t t-esc="values.company.vat"/></div>
            </t>
            <div t-if="values.company.email" t-esc="values.company.email"/>
            <div t-if="values.company.website" t-esc="values.company.website"/>
            <div t-if="values.header" style="white-space:pre-line" t-esc="values.header"/>
            <div t-if="values.cashier" class="cashier">
                    <div>--------------------------------</div>
                    <div>Served by <t t-esc="values.cashier"/></div>
            </div>
        </div>
        <br/><br/>
    </t>
</templates>
