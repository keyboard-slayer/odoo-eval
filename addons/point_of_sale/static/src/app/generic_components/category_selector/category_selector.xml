<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="point_of_sale.CategorySelector">
        <div t-attf-class="{{props.class}}" t-att-style="`width: ${props.containerWidth}px;`">
            <t t-foreach="props.categories" t-as="category" t-key="category.id">
                <i t-if="category.showSeparator" t-attf-class="px-2 fa fa-caret-right" aria-hidden="true" />
                <button t-on-click="() => props.onClick(category.id)" t-attf-class="o_colorlist_item_color_{{category.color or 'none'}}" class="category-button btn btn-light d-flex flex-column align-items-center justify-content-center p-1" t-att-style="`${category.isSelected ? ' border-color: #714b67;' : '' };`">
                    <img t-if="props.imgSrc" t-att-src="props.imgSrc" style="height: 3rem;" alt="Category" />
                    <i t-if="category.icon" t-attf-class="fa {{category.icon}}" aria-hidden="true" />
                    <span t-if="category.name" class="text-wrap-categ text-center fs-5 mx-2" t-esc="category.name" />
                </button>
            </t>
        </div>
    </t>
</templates>
