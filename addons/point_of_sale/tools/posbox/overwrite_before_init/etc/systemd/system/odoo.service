[Unit]
Description=Odoo Open Source ERP and CRM
After=network.target

[Service]
Type=simple
ExecStartPre=sudo timedatectl set-ntp true
ExecStart=/usr/bin/python3 /home/pi/odoo/odoo-bin --config /home/pi/odoo/addons/point_of_sale/tools/posbox/configuration/odoo.conf --load=hw_drivers,hw_escpos,hw_posbox_homepage,point_of_sale,web
PIDFile=/run/odoo/odoo.pid
KillMode=mixed
User=pi
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=multi-user.target
