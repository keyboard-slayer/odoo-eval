    <record id="model_mail_message_partner_tracker" model="ir.actions.server">
        <field name="name">partner_location</field>
        <field name="model_id" ref="mail.model_mail_message"/>
        <field name="state">code</field>
        <field name="code">
if env.context:
    coords = env.context.get('coords',False)
    if coords:
        lat = coords.get('latitude')
        lon = coords.get('longitude')   
        record['x_partner_longitude'] = lon
        record['x_partner_latitude'] = lat
        </field>
    </record>
