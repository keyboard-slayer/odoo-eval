<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="ewaybill_form_inherit_stock" model="ir.ui.view">
        <field name="name">l10n.in.ewaybill.form.inherit</field>
        <field name="model">l10n.in.ewaybill</field>
        <field name="inherit_id" ref="l10n_in_ewaybill.ewaybill_invoice_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='ewaybill_send']" position="after">
                <button name="ewaybill_cancel" string="Cancel" class="oe_highlight" type="object" invisible="state != 'sent'"/>
                <button name="ewaybill_update_part_b" string="Update Part B" type="object" data-hotkey="k" invisible="state != 'sent'"/>
                <button name="ewaybill_update_transporter" string="Update Transporter" type="object" data-hotkey="k" invisible="state != 'sent'"/>
                <button name="ewaybill_extend_validity" string="Extend Validity" type="object" data-hotkey="k" invisible="state != 'sent'"/>
                <button name="action_download_json" string="Download JSON" type="object" class="oe_highlight" invisible="state != 'error'"/>
            </xpath>
            <xpath expr="//field[@name='account_move_id']" position="after">
                <field name="stock_picking_id" invisible="stock_picking_id == False"/>
                <field name="picking_type_code" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='type_id']" position="attributes">
                <attribute name="domain">[('allowed_supply_type', 'in', ('in', 'both')), 
                                            ('code','=','CHL')] if picking_type_code == 'incoming' else [('allowed_supply_type', 'in', ('out', 'both')),('code','=','CHL')] 
                                            if stock_picking_id 
                                            else [('code', 'in', ('INV', 'BIL', 'BOE'))]</attribute>
            </xpath>

            <xpath expr="//group[@name='part-b']" position="after">
                <group string="Cancel Ewaybill" invisible="state != 'sent'">
                    <group>
                        <field name="cancel_reason" />
                    </group>
                    <group>
                        <field name="cancel_remarks"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//form/sheet" position="inside">
                <notebook invisible="stock_picking_id == False">
                    <page string="Item Details">
                        <field name="move_ids" mode="tree,kanban">
                            <tree editable="bottom" create="0">
                                <field name="currency_id" column_invisible="1"/>
                                <field name="company_id" column_invisible="1"/>
                                <field name="product_id" readonly="1"/>
                                <field name="quantity_done" string="Quantity" readonly="1"/>
                                <field name="price_unit"/>
                                <field name="ewaybill_tax_ids" widget="many2many_tags"/>
                                <field name="ewaybill_price_subtotal"/>
                            </tree>
                        </field>
                        <group name="note_group" col="6" class="mt-2 mt-md-0">
                            <group colspan="4">
                            </group>
                            <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                <field name="currency_id" invisible="1"/>
                                <field name="tax_totals" widget="account-tax-totals-field" nolabel="1" colspan="2" readonly="1"/>
                            </group>
                            <div class="clearfix"/>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

</odoo>
