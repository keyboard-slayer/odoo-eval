<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_grid_view_form" model="ir.ui.view">
        <field name="name">product.template.form.inherit.purchase.product.matrix</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='product_mode']" position="inside">
                <group string="Purchase Variant Selection">
                    <field name="has_configurable_attributes" invisible="1"/>
                    <field name="product_purchase_add_mode" widget="radio" nolabel="1" colspan="2"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
