<templates xml:space="preserve">

    <t t-name="web.CustomGroupByItem">
        <select class="form-select o_add_custom_group_menu" t-on-change="(ev) => this.onSelected(ev)">
            <option value="" disabled="true" selected="true" hidden="true">Add Custom Group</option>
            <option t-foreach="props.fields" t-as="field" t-key="field.name" t-att-value="field.name">
                <t t-out="field.string"/>
            </option>
        </select>
    </t>

</templates>
