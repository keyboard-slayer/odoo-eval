<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <t t-name="web.TodoItem" >
    <t t-if="state.isInEdition">
        <input t-att-value="props.todoItem.message" t-on-change="editMessage" class="form-control"/>
    </t>
    <t t-else="">
        <span t-esc="props.todoItem.message"
          t-att-class="props.todoItem.isDone ? 'text-decoration-line-through' : ''"
          t-on-click="props.toggleDone"/>
        <div>
          <button t-on-click="switchInEdition" type="button" class="btn btn-primary me-1">Edit</button>
          <button t-on-click="props.delete" type="button" class="btn btn-danger">Delete</button>
        </div>
  </t>

</templates>
