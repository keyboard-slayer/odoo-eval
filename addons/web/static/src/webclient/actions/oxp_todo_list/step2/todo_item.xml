<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <t t-name="step2.TodoItem" >
    <t t-if="state.isInEdition">
        <input t-att-value="props.todo.message" t-on-change="editMessage" class="form-control"/>
    </t>
    <t t-else="">
        <span t-esc="props.todo.message"
          t-att-class="props.todo.isDone ? 'text-decoration-line-through' : ''"
          t-on-click="() => this.toggleDone()"/>
        <div>
          <button t-on-click="() => this.switchInEdition()" type="button" class="btn btn-primary me-1">Edit</button>
          <button t-on-click="() => this.delete()" type="button" class="btn btn-danger">Delete</button>
        </div>
  </t>

</templates>
