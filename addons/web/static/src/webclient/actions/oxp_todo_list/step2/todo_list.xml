<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <t t-name="step2.TodoList" >
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-7">
            <div class="p-5">
                <div class="form-outline flex-fill">
                    <input t-on-change="onInputChange" type="text" class="form-control" placeholder="What needs to be done ?"/>
                </div>

                <ul class="list-group mb-0">
                    <li t-foreach="state.todoItems"
                        t-as="todoItem"
                        t-key="todoItem.id"
                        class="list-group-item d-flex align-items-center border-0 mb-2 rounded justify-content-between"
                        style="background-color: #f4f6f7;">
                        <TodoItem todo="todoItem"
                            editMessage="(message) => this.editMessage(todoItem, message)"
                            delete="() => this.delete(todoItem)"
                            toggleDone="() => this.toggleDone(todoItem)"/>
                    </li>
                </ul>
            </div>
        </div>
    </div>
  </t>

</templates>
