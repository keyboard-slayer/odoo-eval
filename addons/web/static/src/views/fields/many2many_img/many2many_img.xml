<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="web.Many2ManyImage">
        <div class="row">
            <div class="col-5">
                <t t-foreach="files" t-key="file" t-as="file">
                    <t t-call="Many2ManyImage.attachment_preview"/>
                </t>
            </div>
        </div>
    </t>

    <t t-name="Many2ManyImage.attachment_preview">
        <t t-set="url" t-value="getUrl(file)"/>
        <div t-attf-id="#{file}" class="position-relative">
            <img t-att-src="url" class="m-2 o_avatar_card"/>
            <div class="position-absolute start-0 bottom-0 m-2">
                <button t-on-click="onClickEdit" class="btn btn-light border-0 rounded-circle m-1 p-1" data-tooltip="Edit" aria-label="Edit" title="">
                    <i class="fa fa-pencil fa-fw"/>
                </button>
            </div>
            <div class="position-absolute end-0 bottom-0 m-2">
                <button t-on-click="onClickTrace" class="btn btn-light border-0 rounded-circle m-1 p-1" data-tooltip="Clear" aria-label="Clear" title="">
                    <i class="fa fa-trash-o fa-fw"/>
                </button>
            </div>
        </div>
    </t>

</templates>

