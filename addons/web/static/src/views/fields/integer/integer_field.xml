<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="web.IntegerField">
        <t t-if="props.readonly">
            <span t-esc="formattedValue"/>
        </t>
        <t t-else="">
            <Input
                id="props.id"
                type="props.inputType"
                placeholder="props.placeholder"
                inputmode="'numeric'"
                step="props.step"
                value="formattedValue"
                t-on-input="(e) => fieldInput.onInput(e.target.value)"
                t-on-change="(e) => fieldInput.onChange(e.target.value)"
                t-on-focusin="() => this.setFocus(true)"
                t-on-focusout="() => this.setFocus(false)"
            />
        </t>
    </t>

</templates>
