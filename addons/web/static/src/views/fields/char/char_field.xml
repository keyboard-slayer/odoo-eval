<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.CharField">
        <t t-if="props.readonly">
            <span t-esc="formattedValue" />
        </t>
        <t t-else="">
            <Input
                class="{'o_field_translate': isTranslatable}"
                id="props.id"
                type="props.isPassword ? 'password' : 'text'"
                autocomplete="props.autocomplete or (props.isPassword ? 'new-password' : 'off')"
                maxlength="maxLength > 0 and maxLength"
                placeholder="props.placeholder"
                ref="input"
                value="props.record.data[props.name] or ''"
                t-on-input="(e) => fieldInput.onInput(e.target.value)"
                t-on-change="(e) => fieldInput.onChange(e.target.value)"
            />
            <t t-if="isTranslatable">
                <TranslationButton
                    fieldName="props.name"
                    record="props.record"
                />
            </t>
        </t>
    </t>

</templates>
