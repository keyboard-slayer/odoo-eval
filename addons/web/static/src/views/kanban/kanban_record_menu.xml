<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.KanbanRecordMenu">
        <div class="o_dropdown_kanban bg-transparent position-absolute end-0 top-0">
            <Dropdown state="state" menuClass="'o-dropdown--kanban-record-menu'" position="'bottom-end'">
                <button class="btn o-no-caret rounded-0" title="Dropdown menu">
                    <span class="fa fa-ellipsis-v"/>
                </button>
                <t t-set-slot="content">
                    <div t-on-click="onClick" style="display:contents">
                        <t t-slot="default"/>
                    </div>
                </t>
            </Dropdown>
        </div>
    </t>

</templates>
