<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t t-name="web.ExpressionEditor">
        <div class="o_expression_editor w-100" aria-atomic="true">
            <t t-if="tree">
                <TreeEditor resModel="props.resModel" tree="tree" update.bind="update" />
            </t>
            <t t-else="">
                This expression is not supported.
                <button t-on-click="() => this.resetExpression()">Reset expression</button>
            </t>
            <t t-if="props.isDebugMode">
                <div class="o_expression_editor_debug_container">
                    <span class="small"># Code editor</span>
                    <textarea class="pt-2" type="text" spellcheck="false" t-att-value="props.expression" t-on-change="(ev) => this.onExpressionChange(ev.target.value)" />
                </div>
            </t>
        </div>
    </t>

</templates>
