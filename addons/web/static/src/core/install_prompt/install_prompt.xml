<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="web.InstallPrompt" owl="1">
        <Dialog title="props.title" contentClass="'o_install_prompt position-fixed px-2 py-3 ' + (props.isMobileSafari ? 'mobile' : 'desktop')" size="'md'" footer="false">
            <p>Install Odoo on your device to access it easily. Here are the steps to follow:</p>
            <t t-if="props.isMobileSafari">
                <ul class="list-group list-group-numbered">
                    <li>
                        Tap on share
                    </li>
                    <li>
                        Select "Add to home screen"
                    </li>
                </ul>
            </t>
            <t t-else="">
                <ul class="list-group list-group-numbered">
                    <li>
                        Open "File" menu from your browser
                    </li>
                    <li>
                        Select "Add to dock"
                    </li>
                </ul>
            </t>
        </Dialog>
    </t>
</templates>
