<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="web.login_user_switch">
        <t t-if="displayUserChoice">
            <div class="o_user_switch user-select-none" t-ref="root">
                <h3>Choose a user</h3>
                <div class="list-group my-3">
                    <t t-foreach="users" t-as="user" t-key="user">
                        <button type="button" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center" t-on-click="() => this.fillForm(user.login)">
                            <img class="o_avatar o_user_avatar rounded" t-attf-src="{{getAvatarUrl(user)}}" t-att-alt="user.login"/>
                            <span class="fs-5" t-esc="user.name" />
                            <i class="fa fa-times" title="Remove user from switcher" t-on-click.stop="() => this.remove(user)"/>
                        </button>
                    </t>
                </div>
                <div class="btn btn-link w-100" t-on-click="() => this.fillForm()">
                    <i class="fa fa-user-circle-o"/> <span class="ms-1">Use another user</span>
                </div>
            </div>
        </t>
        <t t-if="displayBackButton">
            <div class="btn p-0" style="filter:invert(.5)" t-on-click="() => this.toggleFormDisplay()">
                <svg style="transform:rotate(135deg);" xmlns="http://www.w3.org/2000/svg" width="24px" height="24px" viewBox="-7 -7 24 24" preserveAspectRatio="xMinYMin">
                    <path fill="#FFF" d="M8 8V1a1 1 0 1 1 2 0v8a1 1 0 0 1-1 1H1a1 1 0 1 1 0-2h7z"/>
                </svg>
            </div>
        </t>
    </t>
</templates>
