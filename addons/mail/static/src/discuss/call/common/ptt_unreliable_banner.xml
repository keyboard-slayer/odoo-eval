<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<t t-name="discuss.pttUnreliableBanner">
    <span t-if="isVisible" class="o-discuss-PttUnreliableBanner alert alert-info px-2 py-1 m-0 rounded-0">
        <div class="d-flex justify-content-between align-items-center">
            <span class="small">
                    The Push-to-Talk feature is only accessible within tab
                    focus.
                    <t t-if="pttExtService.isAvailable">
                        To enable the Push-to-Talk functionality outside the tab, we recommend downloading our
                        <a t-att-href="pttExtService.downloadURL" target="_blank" class="text-reset text-decoration-underline">extension</a>.
                    </t>
            </span>
            <button class="btn d-flex opacity-75 opacity-100-hover" title="Close banner" t-on-click="onClickClose"><i class="fa fa-fw fa-close"></i></button>
        </div>
    </span>
</t>


</templates>
