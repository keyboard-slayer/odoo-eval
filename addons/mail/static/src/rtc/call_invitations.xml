<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.CallInvitations" owl="1">
        <div class="o-mail-CallInvitations position-absolute top-0 end-0 d-flex flex-column p-2">
            <t t-if="services['mail.rtc'].ringingThreads">
                <t t-foreach="services['mail.rtc'].ringingThreads" t-as="threadLocalId" t-key="threadLocalId">
                    <t t-set="thread" t-value="services['mail.store'].threads[threadLocalId]"/>
                    <CallInvitation t-if="thread" thread="thread"/>
                </t>
            </t>
        </div>
    </t>

</templates>
