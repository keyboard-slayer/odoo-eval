<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">
    <record id="group_mail_template_editor" model="res.groups">
        <field name="name">Mail Template Editor</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="base.group_system" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('mail.group_mail_template_editor'))]"/>
    </record>

    <!-- activate template restriction by default
         do not use set_param to avoid removing users when updating -->
    <record id="restrict_template_rendering_icp" model="ir.config_parameter" forcecreate="False">
        <field name="key">mail.restrict.template.rendering</field>
        <field name="value" eval="True" />
    </record>
</data>
</odoo>
