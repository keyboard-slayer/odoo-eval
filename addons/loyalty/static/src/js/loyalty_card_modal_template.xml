<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="loyalty.modal_loyalty_card">
        <Dialog size="'md'" footer="false" t-on-click="props.close">
            <t t-set-slot="header">
                <div class="d-flex justify-content-between w-100 align-items-center" t-on-click.stop="">
                    <div class="d-flex align-items-center gap-2">
                        <img
                            class="img-fluid"
                            t-att-src="props.img_path"
                            width="40"
                        />
                        <div class="fs-5"><t t-out="props.program.program_name"/></div>
                    </div>
                    <div class="d-flex flex-column align-items-end">
                        <span class="fs-5" t-out="props.card.points_display"/>
                        <i class="text-secondary fs-6" t-if="props.card.expiration_date">
                            Valid until <t t-out="props.card.expiration_date"/>
                        </i>
                    </div>
                </div>
                <div type="button" class="d-sm-block btn-close p-0 p-md-2" t-on-click="props.close"></div>
            </t>
            <div class="mt-0 pt-0" t-on-click.stop="">
                <div t-if="props.showHistory or (props.program.program_type != 'loyalty')" id="history_lines">
                    <t t-if="props.history_lines.length">
                        <strong>Last Transactions</strong>
                        <div t-if="line_index&lt;5"
                            t-foreach="props.history_lines"
                            t-as="line"
                            t-key="line_index"
                            class="row px-2">
                            <div class="col-7">
                                <t t-if="line.order_id">
                                    <a t-if="line.order_portal_url" t-att-href="line.order_portal_url">
                                        <t t-out="line.description"/>
                                    </a>
                                    <t t-else="">
                                        <t t-out="line.description"/>
                                    </t>
                                </t>
                                <t t-else="">
                                    <t t-out="line.description"/>
                                </t>
                            </div>
                            <div t-out="line.used" class="text-end col-5"/>
                        </div>
                    </t>
                    <t t-else="">
                        <p class="alert alert-warning">
                            There are currently no transaction lines for this Card.
                        </p>
                    </t>
                    <br/>
                </div>
                <div t-else="">
                    <div t-if="props.program.program_type == 'loyalty'"
                        class="d-flex align-items-center flex-column">
                        <img t-att-src="`/report/barcode/Code128/${props.card.code}?&amp;width=350&amp;height=100`"
                            style="width:400px;height:100px"/>
                        <span t-out="props.card.code" class="fs-5"/>
                    </div>
                </div>
                <div t-if="props.program.program_type == 'ewallet'">
                    <form action="/topup" method="post" name="topup_wallet"
                        t-if="props.trigger_products.length">
                        <div class="d-flex justify-content-center">
                            <select class="text-center w-25 border-0 border-bottom
                                border-black bg-body me-2" name="product">
                                <option t-foreach="props.trigger_products"
                                    t-as="product"
                                    t-key="product_index"
                                    t-att-value="product.id">
                                    <t
                                        t-out="product.list_price"
                                    />
                                </option>
                            </select>
                            <input type="hidden" name="csrf_token"
                                t-att-value="csrf_token"/>
                            <button type="submit" class="btn btn-primary">
                                Top up now
                            </button>
                        </div>
                    </form>
                </div>
                <br/>
                <t t-if="props.program.program_type=='loyalty' &amp;&amp; props.showRewards">
                    <div t-foreach="props.rewards" t-as="reward" t-key="reward_index">
                        <div class="d-flex border rounded align-items-center justify-content-center p-2">
                            <div class="flex-fill fs-6"><t t-out="reward.description"></t></div>
                            <span class="text-primary" t-out="reward.points"></span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <a t-att-href="'/my/history?coupon_id='+props.card.id">
                            -> See History
                        </a>
                        <a type="button" href="/shop" class="btn btn-primary">Use it now</a>
                    </div>
                </t>
                <t t-else="">
                    <a t-att-href="'/my/history?coupon_id='+props.card.id">
                        -> See History
                    </a>
                </t>
            </div>
        </Dialog>
    </t>
</templates>
