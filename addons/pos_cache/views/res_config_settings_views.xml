<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_cache_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.point_of_sale.cache</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_inventory_section']" position="after">
                <block title="Cache" id="pos_cache_section">
                    <setting title="Provides performance increase at the cost of the staticity of the data." string="Use Cache" help="When starting the POS, the data will be loaded from a pre-processed cache, improving loading speed and reducing server load.">
                        <field name="pos_use_cache" required="pos_config_id"/>
                    </setting>
                    <setting title="Changing this value will trigger a hard-reload of the cache." string="Cached Models" help="The models in this list will be put in the cache used when loading the PoS.">
                        <field name="point_of_sale_models_to_cache" required="pos_config_id" widget="many2many_tags"/>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
