<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="peppol_invoice_response_form" model="ir.ui.view">
            <field name="name">account.peppol.invoice.response.form</field>
            <field name="model">account_peppol.invoice_response</field>
            <field name="arch" type="xml">
                <form string="Peppol Invoice Response">
                    <group>
                        <group>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="partner_id"/>
                        </group>
                    </group>
                    <field name="status_ids">
                        <tree editable="bottom" default_order="id">
                            <field name="status_type"/>
                            <field name="action_code"
                                   attrs="{'readonly': [('status_type', '=', 'reason')]}"/>
                            <field name="reason_code"
                                   attrs="{'readonly': [('status_type', '=', 'aciton')]}"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>
    </data>
</odoo>
