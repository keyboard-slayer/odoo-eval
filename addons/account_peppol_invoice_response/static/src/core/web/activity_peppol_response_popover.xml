<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="account_peppol_invoice_response.peppol_response_popover">
        <table class="annotation_popover" t-ref="popoverTable">
            <h6 t-if="props.hasHeader" class="p-2 fw-bolder bg-200 border-bottom">Send Peppol Response</h6>
            <div class="py-2 px-3">
            <span>
                <div>Message Type</div>
                <select class="detail form-select"
                        name="peppol_invoice_response_code"
                        t-on-change="(ev) => { state['code'] = ev.target.value }">
                    <option t-foreach="peppolInvoiceResponseCodes" t-as="code" t-key="code" t-att-value="code">
                        <t t-esc="peppolInvoiceResponseCodes[code]"/>
                    </option>
                </select>
            </span>

            <t t-foreach="state.status_ids" t-as="status" t-key="status_index">
                <PeppolInvoiceResponseStatus statusType="status['statusType']"
                                             code="status['code']"/>
            </t>

            <button type="button"
                    class="btn btn-link"
                    t-on-click="onClickAddStatus">
                <i class="fa fa-plus me-1"/> Add Status
            </button>


