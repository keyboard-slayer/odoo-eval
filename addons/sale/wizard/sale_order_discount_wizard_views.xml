<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_line_wizard_view_form" model="ir.ui.view">
        <field name="name">sale.order.line.wizard.view.form</field>
        <field name="model">sale.order.discount.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet> 
                    <div class="row">
                        <div class="col-3">
                            <group>
                                <field name="discount_amount"/>
                            </group>
                        </div>
                        <div class="col-3">
                            <field name="discount_type" widget="radio" options="{'vertical':true}"/>
                        </div>
                    </div>
                </sheet>
                <footer>
                    <button type="object"  string="Apply" name="action_apply" class="btn btn-primary" data-hotkey="q"/>
                    <button special="cancel" string="Discard" class="btn btn-secondary" data-hotkey="q"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sale_order_line_wizard_action" model="ir.actions.act_window">
        <field name="name">Discount</field>
        <field name="res_model">sale.order.discount.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale.sale_order_line_wizard_view_form" />
        <field name="target">new</field>
    </record>
</odoo>
