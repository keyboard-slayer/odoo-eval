<odoo>

    <record id="sale_product_catalog_kanban_view" model="ir.ui.view">
        <field name="name">sale.product.catalog.kanban.view</field>
        <field name="model">product.product</field>
        <field name="priority">999</field>
        <field name="arch" type="xml">
            <kanban
                edit="0"
                records_draggable="0"
                class="o_kanban_mobile"
                action="set_sol_qty" type="object"
                js_class="sale_product_kanban">
                <field name="id"/>
                <field name="name"/>
                <field name="product_template_attribute_value_ids"/>
                <field name="sol_qty"/>
                <field name="default_code"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="my-0" t-attf-class="{{(record.sol_qty.raw_value != 0) ? 'text-bg-primary' : ''}}">
                            <div class="o_kanban_sale_main d-flex flex-column h-100">
                                <div class="o_kanban_sale_content d-flex flex-grow-1">
                                    <div class="o_kanban_image">
                                        <img t-att-src="kanban_image('product.product', 'image_128', record.id.raw_value)" class="o_image_64_contain" alt="Product"/>
                                    </div>
                                    <div class="oe_kanban_details p-2 d-flex">
                                        <div class="o_kanban_record_top flex-column m-0">
                                            <div class="d-flex">
                                                <field class="me-2 text-white" name="priority" widget="priority"/>
                                                <h4 class="o_kanban_record_title text-reset">
                                                    <strong><field name="name"/></strong>
                                                </h4>
                                            </div>
                                            <div class="o_kanban_product_details">
                                                <div class="o_kanban_deault_code" t-if="record.default_code.value">
                                                    [<field name="default_code"/>]
                                                </div>
                                                <div class="o_kanban_price">
                                                    <span>Unit price: </span>
                                                    <field name="price_unit"/>
                                                </div>
                                            </div>
                                            <div class="o_kanban_tags_section">
                                                <field name="product_template_attribute_value_ids" widget="many2many_tags" groups="product.group_product_variant" options="{'color_field': 'color'}"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="o_kanban_sale_bottom my-2 pt-3 border-top">
                                    <div class="o_catalog_control text-dark">
                                        <div class="mt-auto d-flex justify-content-end">
                                            <t t-if="record.sol_qty.raw_value != 0">
                                                <div class="bg-light w-50">
                                                    <field name="sol_qty" class="o_sale_product_catalog_quantity d-flex input-group" widget="sale_product_catalog_quantity" options="{'type': 'number'}"/>
                                                </div>
                                                <div class="ms-auto">
                                                    <button string="Remove"
                                                            type="object"
                                                            name="remove_from_order"
                                                            class="btn-light rounded"/>
                                                </div>
                                            </t>
                                            <t t-else="">
                                                <button string="Add to the order"
                                                        type="object"
                                                        name="set_sol_qty"
                                                        class="btn btn-primary rounded">
                                                    <i title="Add" class="fa fa-shopping-cart"/>
                                                </button>
                                            </t>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="o_catalog_settings position-absolute top-0 end-0 d-flex flex-column">
                                <div class="o-dropdown dropdown o_dropdown_kanban bg-transparent o-dropdown--no-caret">
                                    <a role="button" title="Dropdown menu" class="dropdown-toggle btn o-no-caret mt-0" data-bs-toggle="dropdown" data-bs-display="static" href="#">
                                        <span class="fa fa-ellipsis-v"/>
                                    </a>
                                    <div class="dropdown-menu" role="menu">
                                        <a role="menuitem" class="dropdown-item border-top-0" type="object" name="action_edit_template" groups="sales_team.group_sale_manager">Edit</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="sale_product_catalog_search_view" model="ir.ui.view">
        <field name="name">sale.product.catalog.search</field>
        <field name="model">product.product</field>
        <field name="arch" type="xml">
            <search string="Product">
                <field name="name" string="Product" filter_domain="['|', '|', ('default_code', 'ilike', self), ('name', 'ilike', self), ('barcode', 'ilike', self)]"/>
                <field name="categ_id" filter_domain="[('categ_id', 'child_of', raw_value)]"/>
                <field name="product_template_attribute_value_ids" groups="product.group_product_variant"/>
                <field name="product_tmpl_id" string="Product Template"/>
                <separator/>
                <filter string="Favorites" name="favorites" domain="[('priority','=','1')]"/>
                <separator/>
                <filter string="Services" name="service" domain="[('type','=','service')]"/>
                <filter string="Products" name="consumable" domain="[('type', 'in', ['consu', 'product'])]"/>
                <filter string="In the Order" name="on_the_order" domain="[('sol_qty', '!=', 0)]"/>
                <group expand="1" string="Group By">
                    <filter string="Product Type" name="type" context="{'group_by':'type'}"/>
                    <filter string="Product Category" name="categ_id" context="{'group_by':'categ_id'}"/>
                </group>
                <searchpanel>
                    <field name="categ_id" string="Product Category" icon="fa-th-list" enable_counters="1"/>
                    <field name="product_template_attribute_value_ids" widget="sale_attribute_category" string="Attributes" icon="fa-th-list" enable_counters="1" select="multi"/>
                </searchpanel>
            </search>
        </field>
    </record>

</odoo>
