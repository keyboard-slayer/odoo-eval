<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sale.SaleProductCatalogQuantity" owl="1">
        <button class="btn btn-outline-secondary"
                t-on-click.prevent="removeQuantity">
            <i class="fa fa-minus center"/>
        </button>
        <input t-ref="numpadDecimal"
               t-att-value="state.quantity"
               type="number"
               class="o_input form-control border-0 text-center"
               t-on-change="onChange"/>
        <button class="btn btn-outline-secondary"
                t-on-click.prevent="addQuantity">
            <i class="fa fa-plus"/>
        </button>
    </t>
</templates>
