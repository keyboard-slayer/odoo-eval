<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="sale.SaleProductCatalogQuantity" t-inherit="web.IntegerField" t-inherit-mode="primary" owl="1">
        <xpath expr="input" position="attributes">
            <attribute name="class" separator=" " add="form-control border-0 text-center"></attribute>
            <attribute name="t-on-input">onInput</attribute>
        </xpath>
        <xpath expr="span" position="before">
            <button
                name="sale_product_catalog_remove_quantity"
                class="btn btn-outline-secondary" 
                t-att-disabled="props.value === 0"
                t-on-click.prevent="removeQuantity">
                <i class="fa fa-minus center"/>
            </button>
        </xpath>
        <xpath expr="input" position="after">
            <button
                name="sale_product_catalog_add_quantity"
                class="btn btn-outline-secondary"
                t-on-click.prevent="addQuantity">
                <i class="fa fa-plus"/>
            </button>
        </xpath>
    </t>

</templates>
