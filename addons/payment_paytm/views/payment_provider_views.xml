<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_provider_form_paytm" model="ir.ui.view">
        <field name="name">PayTM Provider Form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position='inside'>
                <group name="paytm_credentials"
                       attrs="{'invisible': [('code', '!=', 'paytm')]}">
                    <field name="paytm_mid"
                           string="Merchant Id"
                           attrs="{'required': [('code', '=', 'paytm'), ('state', '!=', 'disabled')]}"/>
                    <field name="merchant_key"
                           string="Merchant Key"
                           attrs="{'required': [('code', '=', 'paytm'), ('state', '!=', 'disabled')]}"/>
                </group>
            </group>
        </field>
    </record>

</odoo>
