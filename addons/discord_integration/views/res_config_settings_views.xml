<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.discord.integration</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mail.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <block id="discuss" position="inside">
                <setting string="Discord bot server">
                    <div class="content-group">
                        <div class="row mt16">
                            <label for="discord_bot_url" string="URL" class="col-lg-3"/>
                            <field name="discord_bot_url"/>
                        </div>
                        <div class="row mt16">
                            <label for="discord_bot_key" string="Key" class="col-lg-3"/>
                            <field name="discord_bot_key"/>
                        </div>
                    </div>
                </setting>
            </block>
        </field>
    </record>

</odoo>
