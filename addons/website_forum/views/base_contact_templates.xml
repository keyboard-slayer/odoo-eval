<?xml version="1.0" encoding="utf-8"?>
<odoo><data>

<template id="contact" inherit_id="base.contact" name="Forum Contact Widget">
    <xpath expr="//div[@itemprop='address']" position="after">
        <div t-if="'karma' in fields" class='css_editable_mode_hidden'>
            <div t-if="options.get('UserBio')" class="mb-2">
                <span t-field="object.company_name" class="o_forum_tooltip_line text-muted"/><br/>
                <a t-att-href="object.website" t-if="object.website">
                    <span t-field="object.website" class="o_forum_tooltip_line"/>
                </a>
                <t t-if="options.get('UserBio')">
                    <div class="o_forum_tooltip_line text-muted" t-if="object.partner_id.country_id or object.partner_id.city">
                        <span t-field="object.partner_id.city"/><span t-if="object.partner_id.city and object.partner_id.country_id">, </span><span t-field="object.partner_id.country_id"/>
                    </div>
                </t>
            </div>
            <div t-if="options.get('badges')" style="display: inline-block">
                <span class="fa fa-trophy text-gold ms-2" role="img" aria-label="Gold badge" title="Gold badge"/>
                <t t-out="object.gold_badge"/>
                <span class="fa fa-trophy text-silver ms-2" role="img" aria-label="Silver badge" title="Silver badge"/>
                <t t-out="object.silver_badge"/>
                <span class="fa fa-trophy text-bronze ms-2" role="img" aria-label="Bronze badge" title="Bronze badge"/>
                <t t-out="object.bronze_badge"/>
            </div>
            <t t-out="0"/>
            <t t-if="options.get('website_description') and 'partner_id' in fields">
                <t t-if="object.partner_id.website_description">
                    <span t-field="object.partner_id.website_description"/>
                </t>
            </t>
        </div>
    </xpath>
</template>

</data></odoo>
