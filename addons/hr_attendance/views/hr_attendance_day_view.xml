<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_attendance_sheet_action" model="ir.actions.act_window">
        <field name="name">Attendance Sheet</field>
        <field name="res_model">hr.attendance.sheet</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>

    <record id="hr_attendance_sheet_tree_view" model="ir.ui.view">
        <field name="name">hr.attendance.sheet.tree</field>
        <field name="model">hr.attendance.sheet</field>
        <field name="arch" type="xml">
            <tree>
                <field string="Employee" name="employee_id" widget="many2one_avatar_user"/>
                <field name="month"/>
                <field name="year" class="o_hr_narrow_field"/>
            </tree>
        </field>

    </record>

    <record id="hr_attendance_sheet_form_view" model="ir.ui.view">
        <field name="name">hr.attendance.sheet.form</field>
        <field name="model">hr.attendance.sheet</field>
        <field name="arch" type="xml">
            <form string="Attendance Days">
                <header>
                    <button name="action_generate_attendance_days" string="Generate Attendance Days" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id" widget="many2one_avatar_user"/>
                            <field name="year" class="o_hr_narrow_field"/>
                            <field name="month"/>
                        </group>
                    </group>
                    <field name="attendance_day_ids"/>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem
        id="menu_attendance_sheet"
        name="Attendance sheet"
        action="hr_attendance_sheet_action"
        parent="hr_attendance.menu_hr_attendance_root"
    />

    <record id="view_attendance_day_tree" model="ir.ui.view">
        <field name="name">hr.attendance.day.tree</field>
        <field name="model">hr.attendance.day</field>
        <field name="arch" type="xml">
            <tree string="Employee attendance days" create="0">
                <field name="attendance_day"/>
                <field name="shift_start"/>
                <field name="shift_end"/>
                <field name="total_shift" widget="float_time"/>
                <field name="checked_in_time" widget="float_time"/>
                <field name="pause_time" widget="float_time"/>
                <field name="paid_worked_time" widget="float_time"/>
                <field name="unpaid_pause_time" widget="float_time"/>
            </tree>
        </field>
    </record>


    <!-- actions -->

    <record id="hr_attendance_day_action" model="ir.actions.act_window">
        <field name="name">Attendance days</field>
        <field name="res_model">hr.attendance.day</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_attendance_day_tree"/>
    </record>


</odoo>
