<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_attendance_day_action" model="ir.actions.act_window">
        <field name="name">Attendance Day</field>
        <field name="res_model">hr.attendance.day</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
    </record>

    <record id="hr_attendance_day_tree_view" model="ir.ui.view">
        <field name="name">hr.attendance.day.tree</field>
        <field name="model">hr.attendance.day</field>
        <field name="arch" type="xml">
            <tree js_class="attendance_list_view">
                <field string="Employee" name="employee_id" widget="many2one_avatar_user"/>
                <field name="attendance_day"/>
                <field name="first_check_in"/>
                <field name="last_check_out"/>
                <field name="duration" widget="float_time"/>
                <field name="work_time" widget="float_time"/>
                <field name="break_time" widget="float_time"/>
                <field name="out_time" widget="float_time"/>
            </tree>
        </field>
    </record>

    <record id="hr_attendance_day_form_view" model="ir.ui.view">
        <field name="name">hr.attendance.day.form</field>
        <field name="model">hr.attendance.day</field>
        <field name="arch" type="xml">
            <form string="Attendance Days">
                <sheet>
                    <group col="2">
                        <group col="1">
                            <field name="employee_id" widget="many2one_avatar_user"/>
                            <field name="attendance_day"/>
                            <field name="first_check_in"/>
                            <field name="last_check_out"/>
                            <field name="duration" widget="float_time"/>
                        </group>
                        <group col="2">
                            <field name="work_time" widget="float_time"/>
                            <field name="break_time" widget="float_time"/>
                            <field name="out_time" widget="float_time"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Movements of the day">
                            <field name="attendance_ids">
                                <tree>
                                    <field name="check_in"/>
                                    <field name="check_out"/>
                                    <field name="type"/>
                                    <field name="comment"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem
        id="menu_hr_attendance_day"
        name="Attendance Days"
        action="hr_attendance_day_action"
        parent="hr_attendance.menu_hr_attendance_root"
    />

</odoo>
