<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mrp.MrpDisplayControlPanel" owl="1">
        <div class="o_control_panel_mrp o_control_panel" t-ref="root">
            <t t-if="env.isSmall">
                <t t-call="web.ControlPanel.Small" />
            </t>
            <t t-else="">
                <t t-call="mrp.MrpDisplayControlPanel.Regular" />
            </t>
        </div>
    </t>

    <t t-name="mrp.MrpDisplayControlPanel.Regular" t-inherit="web.ControlPanel.Regular" t-inherit-mode="primary" owl="1">
        <xpath expr="//div[@class='o_cp_top_left']" position="after">
            <div class="o_cp_top_middle">
                <t t-slot="control-panel-top-middle" t-if="display['top-middle']"/>
            </div>
        </xpath>
    </t>
    <t t-name="mrp.ControlPanelButtons" owl="1">
        <button t-att-class="!this.props.activeWorkcenter ? 'o_selected' : ''" class="btn"
        t-on-click="() => this.props.selectWorkcenter(false)">
            ALL
        </button>
        <t t-foreach="workcenterButtons" t-as="workcenter" t-key="workcenter[0]">
            <t t-set="id" t-value="workcenter[0]"/>
            <t t-set="name" t-value="workcenter[1].name"/>
            <t t-set="count" t-value="workcenter[1].count"/>
            <button class="btn" t-att-class="this.props.activeWorkcenter == id ? 'o_selected' : ''"
            t-on-click="() => this.props.selectWorkcenter(id)">
                <t t-esc="name"/> <t t-esc="count"/>
            </button>
        </t>
    </t>
</templates>
