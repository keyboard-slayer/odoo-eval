<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mrp.WorkOrder" owl="1">
        <li class="list-group-item py-3 d-flex justify-content-between align-items-center"
            t-att-class="cssClass"
            t-on-click="onClick"
            t-on-animationend="onAnimationEnd">
            <span t-att-class="isComplete ? 'text-decoration-line-through' : ''">
                <span class="fa-stack me-2" t-on-click.stop="longPress"
                      t-att-class="isComplete ? 'text-success' : failed ? 'text-danger' : 'text-muted'">
                    <span class="fa fa-square-o fa-stack-1x fa-lg"/>
                    <span t-if="isComplete" class="fa fa-check fa-stack-1x"/>
                    <span t-elif="failed" class="fa fa-times fa-stack-1x"/>
                </span>
                <span class="me-2" t-esc="name"/>
                <Field class="'text-muted'" name="fieldState" record="props.record"/>
            </span>
            <span t-if="props.record.data.duration" t-att-class="active ? '' : 'text-muted'">
                <MrpTimer value="props.record.data.duration" ongoing="active"/>
            </span>
            <button t-if="note.length" class="btn"
                    t-on-click.stop="displayInstruction">
                <i class="fa fa-lightbulb-o fa-lg text-info"/>
            </button>
        </li>
    </t>
</templates>
