<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="mrp.MrpDisplayMenuPopup" owl="1">
        <div role="dialog" class="popup">
            <div class="popup-selection">
                <header class="title h3" t-esc="title"/>
                <div class="button_list">
                    <button class="btn btn-primary" name="action_scrap"
                            t-on-click="() => this.callAction('button_scrap')">
                        Scrap
                    </button>
                    <button t-if="props.record.resModel == 'mrp.workorder'" class="btn btn-primary"
                            t-on-click="() => this.callAction('action_add_component')">
                        Add Component
                    </button>
                    <button t-if="props.record.resModel == 'mrp.workorder'" class="btn btn-primary"
                            t-on-click="() => this.callAction('action_add_byproduct')" name="addByProduct">
                        Add By-product
                    </button>
                </div>
            </div>
            <footer class="footer">
                <div class="btn cancel text-uppercase" t-on-click="props.closeMenuPopup">Cancel</div>
            </footer>
        </div>
    </t>
</templates>
