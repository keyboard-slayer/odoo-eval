<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_urban_piper.TicketScreen" t-inherit="point_of_sale.TicketScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pads')]//div[hasclass('pads')]" position="before">
            <t t-set="order" t-value="getSelectedOrder()" />
            <t t-if="order.brand_id">
                <div class="container">
                    <div class="row">
                        <button class="button validation load-order-button w-100 btn btn-lg btn-primary rounded-0 fw-bolder py-3 col-sm" t-on-click="() => this._acceptOrder(order)">
                            <span class="fs-1 d-block">Accept Order</span>
                        </button>
                        <button class="button validation load-order-button w-100 btn btn-lg btn-secondary rounded-0 fw-bolder py-3 col-sm" t-on-click="() => this._rejectOrder(order)">
                            <span class="fs-1 d-block">Reject Order</span>
                        </button>
                    </div>
                </div>
            </t>
        </xpath>
    </t>

</templates>
