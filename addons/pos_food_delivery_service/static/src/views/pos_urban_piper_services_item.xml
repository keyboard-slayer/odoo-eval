<?xml version="1.0" encoding="UTF-8"?>

<templates>
    <t t-name="pos_food_delivery_service.PosUrbanPiperServicesItem">
        <ul>
            <li class="menu-item position-relative d-flex">
                <i class="fa fa-fw fa-bell align-self-end" role="img" aria-label="Notification" title="Notification" aria-hidden="true"></i>
                <span if="props.orderCount" class="o-pos-order-counter badge rounded-pill p-0"><t t-out="props.orderCount"/></span>
                <ul class="dropdown-menu sub-menu position-absolute d-flex flex-column align-items-stretch bg-white shadow-lg z-index-1">
                    <ul>
                        <t t-foreach="Object.entries(props.orderStatus)" t-as="order" t-key="order[0]">
                            <li class="dropdown-item px-3 py-2" t-on-click="() => this.goToOrders(order[0])">
                                <div class="font-bold mb-1 fw-bolder"><a><t t-out="order[0]"/></a></div>
                                <ul class="d-flex justify-content-between gap-4">
                                    <li><a><span><t t-out="order[1].awaiting"/></span> Order</a></li>
                                    <li><a><span><t t-out="order[1].scheduled"/></span> Ongoing</a></li>
                                    <li><a><span><t t-out="order[1].preparing"/></span> Done</a></li>
                                </ul>
                            </li>
                        </t>
                    </ul>
                </ul>
            </li>
        </ul>
    </t>
</templates>
