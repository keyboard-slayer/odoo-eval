<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pos_online_delivery_provider_form" model="ir.ui.view">
        <field name="name">pos.online.delivery.provider.form</field>
        <field name="model">pos.online.delivery.provider</field>
        <field name="arch" type="xml">
            <form string="Online Delivery Provider">
                <field name="company_id" invisible="1"/>
                <field name="code" invisible="1"/>
                <field name="module_id" invisible="1"/>
                <field name="module_state" invisible="1"/>
                <sheet>
                    <field name="image_128" widget="image" class="oe_avatar" readonly="1"/>
                    <widget name="web_ribbon" title="Disabled" bg_color="text-bg-danger" invisible="module_state != 'installed' or state != 'disabled'"/>
                    <widget name="web_ribbon" title="Test Mode" bg_color="text-bg-warning" invisible="module_state != 'installed' or state != 'test'"/>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Name"/></h1>
                        <div invisible="module_state == 'installed' or not module_id">
                            <button type="object" class="btn btn-primary" name="button_immediate_install" string="Install"/>
                        </div>
                    </div>
                    <div id="provider_creation_warning" invisible="id" class="alert alert-warning" role="alert">
                        <strong>Warning</strong> Creating a payment provider from the <em>CREATE</em> button is not supported.
                        Please use the <em>Duplicate</em> action instead.
                    </div>
                    <group>
                        <group name="provider_state" invisible="module_state not in ('installed', False)">
                            <field name="available_pos_category_ids" invisible="1"/>
                            <field name="code" groups="base.group_no_one" readonly="id"/>
                            <field name="state" widget="radio"/>
                            <field name="company_id" groups="base.group_multi_company" options='{"no_open":True}'/>
                            <field name="config_ids" widget="many2many_tags" options="{'create':false}" placeholder="All PoS"/>
                            <field name="available_pos_category_ids" invisible="1"/>
                            <field name="pos_category_ids" widget="many2many_tags" options="{'create':false}" placeholder="All Available PoS Categories (depending on the PoS mentioned above)" domain="[('id', 'in', available_pos_category_ids)]"/>
                        </group>
                    </group>
                    <notebook invisible="module_id and module_state != 'installed'">
                        <page string="Configuration" name="configuration">
                            <group string="Credentials">
                                <field name="client_id" />
                                <field name="client_secret" />
                            </group>
                            <group string="Payment Followup">
                                <field name="payment_method_id" />
                                <div>
                                    <button name="%(point_of_sale.action_payment_methods_tree)d" icon="oi-arrow-right" type="action" string="Payment Methods" class="btn-link"/>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="pos_online_delivery_provider_list" model="ir.ui.view">
        <field name="name">pos.online.delivery.provider.list</field>
        <field name="model">pos.online.delivery.provider</field>
        <field name="arch" type="xml">
            <tree string="Online Delivery Providers" create="false">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code" groups="base.group_no_one"/>
                <field name="state"/>
                <field name="config_ids" widget="many2many_tags"/>
                <field name="company_id" groups="base.group_multi_company" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="pos_online_delivery_provider_kanban" model="ir.ui.view">
        <field name="name">pos.online.delivery.provider.kanban</field>
        <field name="model">pos.online.delivery.provider</field>
        <field name="arch" type="xml">
            <kanban create="false" quick_create="false" class="o_kanban_dashboard">
                <field name="id"/>
                <field name="name"/>
                <field name="state"/>
                <field name="code"/>
                <field name="module_id"/>
                <field name="module_state"/>
                <templates>
                    <t t-name="kanban-box">
                        <t t-set="installed" t-value="!record.module_id.value || (record.module_id.value &amp;&amp; record.module_state.raw_value === 'installed')"/>
                        <t t-set="is_disabled" t-value="record.state.raw_value=='disabled'"/>
                        <div t-attf-class="oe_kanban_global_click" class="d-flex p-2">
                            <div class="o_pos_online_delivery_provider_desc d-flex gap-2">
                                <img type="open"
                                     t-att-src="kanban_image('pos.online.delivery.provider', 'image_128', record.id.raw_value)"
                                     class="mb-0 o_image_64_max"
                                     alt="provider"/>
                                <div class="d-flex flex-column justify-content-between w-100">
                                    <div class="o_delivery_provider_kanban_info">
                                        <h4 class="mb-0"><t t-esc="record.name.value"/></h4>
                                        <t t-if="installed">
                                            <field name="state"
                                                   widget="label_selection"
                                                   options="{'classes': {'enabled': 'success', 'test': 'warning', 'disabled' : 'light'}}"/>
                                        </t>
                                    </div>
                                    <div class="o_payment_kanban_button text-end">
                                        <button t-if="!installed " type="object" class="btn btn-sm btn-primary float-end" name="button_immediate_install">Install</button>
                                        <button t-if="installed and is_disabled" type="edit" class="btn btn-sm btn-secondary float-end">Activate</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="pos_online_delivery_provider_search" model="ir.ui.view">
        <field name="name">pos.online.delivery.provider.search</field>
        <field name="model">pos.online.delivery.provider</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="provider" filter_domain="[('name', 'ilike', self)]"/>
            </search>
        </field>
    </record>

    <record id="action_pos_online_delivery_provider" model="ir.actions.act_window">
        <field name="name">Online Delivery Providers</field>
        <field name="res_model">pos.online.delivery.provider</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

    <menuitem id="menu_pos_online_delivery_provider"
        name="Online Delivery Providers"
        action="pos_food_delivery_service.action_pos_online_delivery_provider"
        sequence="10"
        parent="point_of_sale.menu_point_config_product"
        groups="point_of_sale.group_pos_user"/>

</odoo>
