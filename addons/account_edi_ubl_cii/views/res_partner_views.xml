<odoo>
    <record id="view_partner_property_form" model="ir.ui.view">
        <field name="name">res.partner.property.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='banks']" position="after">
                <group string="Peppol" name="peppol">
                    <field name="edi_format" widget="selection"/>
                    <field name="eas_code" widget="selection"
                           attrs="{'invisible': [('edi_format', 'in', ('facturx', False))]}"/>
                    <field name="endpoint_value"
                           attrs="{'invisible': [('edi_format', 'in', ('facturx', False))]}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
