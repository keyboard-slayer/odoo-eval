<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_product_tree_purchase_group_inherit" model="ir.ui.view">
        <field name="name">product.stock.tree.purchase.group.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.view_stock_product_tree"/>
        <field name="arch" type="xml">
            <field name="qty_available" position="attributes">
                <attribute name="groups" separator="," add="purchase.group_purchase_user"/>
            </field>
            <field name="virtual_available" position="attributes">
                <attribute name="groups" separator="," add="purchase.group_purchase_user"/>
            </field>
        </field>
    </record>

    <record id="view_stock_product_template_tree_purchase_group_inherit" model="ir.ui.view">
        <field name="name">product.template.stock.tree.purchase.group.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_stock_product_template_tree"/>
        <field name="arch" type="xml">
            <field name="show_on_hand_qty_status_button" position="attributes">
                <attribute name="groups" separator="," add="purchase.group_purchase_user"/>
            </field>
            <field name="qty_available" position="attributes">
                <attribute name="groups" separator="," add="purchase.group_purchase_user"/>
            </field>
            <field name="virtual_available" position="attributes">
                <attribute name="groups" separator="," add="purchase.group_purchase_user"/>
            </field>
            <field name="responsible_id" position="attributes">
                <attribute name="groups" separator="," add="purchase.group_purchase_user"/>
            </field>
        </field>
    </record>

    <record id="product_template_kanban_stock_view_purchase_group_inherit" model="ir.ui.view">
        <field name="name">product.template.stock.kanban.purchase.group.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.product_template_kanban_stock_view"/>
        <field name="arch" type="xml">
            <field name="show_on_hand_qty_status_button" position="attributes">
                <attribute name="groups" separator="," add="purchase.group_purchase_user"/>
            </field>
            <xpath expr="//t[@name='show_qty_available']" position="attributes">
                <attribute name="groups" separator="," add="purchase.group_purchase_user"/>
            </xpath>
        </field>
    </record>
</odoo>
