<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="tax_report_zm" model="account.report">
        <field name="name">Tax Report</field>
        <field name="country_id" ref="base.zm"/>
        <field name="filter_fiscal_position" eval="True"/>
