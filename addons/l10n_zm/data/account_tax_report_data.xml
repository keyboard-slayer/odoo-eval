                    <record id="tax_report_zm_line_zero_rated_sales_base" model="account.report.line">
                        <field name="name">1. Zero Rated Sales Base</field>
                        <field name="code">ZM_TAX_1</field>
                        <field name="expression_ids">
                            <record id="tax_report_zm_base_tag" model="account.report.expression">
                                <field name="label">base</field>
                                <field name="engine">tax_tags</field>
                                <field name="formula">0% VAT Sales Base</field>
                            </record>
                        </field>
                    </record>
                    <record id="tax_report_zm_line_zero_rates_sales_export" model="account.report.line">
